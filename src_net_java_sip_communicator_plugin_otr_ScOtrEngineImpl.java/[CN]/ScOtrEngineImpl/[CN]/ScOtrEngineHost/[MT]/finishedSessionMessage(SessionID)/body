{
  Contact contact=getContact(sessionID);
  if (contact == null)   return;
  String error=OtrActivator.resourceService.getI18NString("plugin.otr.activator.sessionfinishederror",new String[]{contact.getDisplayName()});
  OtrActivator.uiService.getChat(contact).addMessage(contact.getDisplayName(),new Date(),Chat.ERROR_MESSAGE,error,OperationSetBasicInstantMessaging.DEFAULT_MIME_TYPE);
}
