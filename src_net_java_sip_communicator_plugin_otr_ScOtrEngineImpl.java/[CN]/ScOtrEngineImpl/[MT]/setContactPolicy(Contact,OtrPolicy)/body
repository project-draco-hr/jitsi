{
  String id=getSessionNS(getSessionID(contact),"policy");
  if (id == null || id.length() < 1)   return;
  if (policy == null)   OtrActivator.configService.removeProperty(id);
 else   OtrActivator.configService.setProperty(id,policy.getPolicy());
  for (  ScOtrEngineListener l : listeners)   l.contactPolicyChanged(contact);
}
