{
  if (policy == null)   OtrActivator.configService.removeProperty("net.java.sip.comunicator.plugin.otr.POLICY");
 else   OtrActivator.configService.setProperty("net.java.sip.comunicator.plugin.otr.POLICY",policy.getPolicy());
  for (  ScOtrEngineListener l : listeners)   l.globalPolicyChanged();
}
