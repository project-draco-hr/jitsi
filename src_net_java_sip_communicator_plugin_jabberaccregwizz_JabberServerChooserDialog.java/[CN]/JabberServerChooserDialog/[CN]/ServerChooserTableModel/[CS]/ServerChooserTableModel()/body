{
  try {
    DocumentBuilderFactory factory=DocumentBuilderFactory.newInstance();
    serverComments=factory.newDocumentBuilder().parse(JabberServerChooserDialog.class.getClassLoader().getResourceAsStream(Resources.getString("commentsFile")));
  }
 catch (  SAXException e) {
    logger.error("Failed to parse: " + DEFAULT_FILE_NAME,e);
  }
catch (  ParserConfigurationException e) {
    logger.error("Failed to parse: " + DEFAULT_FILE_NAME,e);
  }
catch (  IOException e) {
    logger.error("Failed to parse: " + DEFAULT_FILE_NAME,e);
  }
  Element root=serverComments.getDocumentElement();
  commentsList=root.getElementsByTagName("item");
}
