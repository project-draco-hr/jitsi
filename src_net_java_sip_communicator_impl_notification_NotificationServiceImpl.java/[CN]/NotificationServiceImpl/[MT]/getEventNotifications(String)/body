{
  Hashtable actions=new Hashtable();
  EventNotification notification=(EventNotification)notificationsTable.get(eventType);
  if (notification == null)   return null;
  Iterator srcActions=notification.getActions().values().iterator();
  while (srcActions.hasNext()) {
    Action action=(Action)srcActions.next();
    if (action.getActionHandler() != null)     actions.put(action.getActionType(),action.getActionHandler());
 else     actions.put(action.getActionType(),"");
  }
  return actions;
}
