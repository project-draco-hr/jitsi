{
  if (e.getKeyCode() == KeyEvent.VK_DOWN) {
    Iterator contacts=chatContacts.keySet().iterator();
    while (contacts.hasNext()) {
      ChatContact chatContact=(ChatContact)contacts.next();
      if (chatContact.isSelected()) {
        if (contacts.hasNext()) {
          ((ChatContactPanel)chatContacts.get(chatContact)).setSelected(false);
          ((ChatContactPanel)chatContacts.get(contacts.next())).setSelected(true);
        }
        break;
      }
    }
  }
 else   if (e.getKeyCode() == KeyEvent.VK_UP) {
    ChatContact previousChatContact=null;
    Iterator contacts=chatContacts.keySet().iterator();
    while (contacts.hasNext()) {
      ChatContact chatContact=(ChatContact)contacts.next();
      if (chatContact.isSelected()) {
        if (previousChatContact != null) {
          ((ChatContactPanel)chatContacts.get(chatContact)).setSelected(false);
          ((ChatContactPanel)chatContacts.get(previousChatContact)).setSelected(true);
        }
        break;
      }
      previousChatContact=chatContact;
    }
  }
}
