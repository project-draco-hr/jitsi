{
  Iterator<MetaContact> childContacts=metaGroup.getChildContacts();
  while (childContacts.hasNext()) {
    MetaContact metaContact=childContacts.next();
    if (currentFilter.isMatching(metaContact))     addContact(metaContact);
  }
  Iterator<MetaContactGroup> subgroups=metaGroup.getSubgroups();
  while (subgroups.hasNext()) {
    MetaContactGroup subgroup=subgroups.next();
    if (subgroup.countChildContacts() == 0 && subgroup.countSubgroups() == 0 && currentFilter.isMatching(subgroup))     addGroup(subgroup);
 else     addMatching(subgroup);
  }
}
