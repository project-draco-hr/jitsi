{
  if (SwingUtilities.isEventDispatchThread()) {
    new Thread(){
      public void run(){
        applyFilter(filter,contactSource);
      }
    }
.start();
    return;
  }
  if (currentFilter == null || !currentFilter.equals(filter))   this.currentFilter=filter;
  if (contactSource != null && filter instanceof ContactListSourceFilter) {
    ContactQuery contactQuery=((ContactListSourceFilter)currentFilter).applyFilter(contactSource);
    filterQuery.addContactQuery(contactQuery);
  }
 else   currentFilter.applyFilter();
}
