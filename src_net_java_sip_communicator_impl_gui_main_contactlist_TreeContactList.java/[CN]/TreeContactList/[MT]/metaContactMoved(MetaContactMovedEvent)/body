{
  final MetaContact metaContact=evt.getSourceMetaContact();
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
synchronized (tempTreeModel) {
        if (currentFilter.isMatching(metaContact)) {
          GroupNode oldParent=treeModel.findGroupNodeByMetaGroup(evt.getOldParent());
          GroupNode newParent=treeModel.findGroupNodeByMetaGroup(evt.getNewParent());
          if (oldParent != null)           oldParent.removeMetaContact(treeModel,metaContact);
          if (newParent != null)           newParent.sortedAddMetaContact(treeModel,metaContact,true);
        }
      }
    }
  }
);
}
