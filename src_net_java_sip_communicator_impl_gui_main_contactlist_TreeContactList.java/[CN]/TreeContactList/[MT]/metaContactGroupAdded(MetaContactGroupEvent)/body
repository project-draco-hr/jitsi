{
  final MetaContactGroup metaGroup=evt.getSourceMetaContactGroup();
  final UIGroup uiGroup=MetaContactListSource.createUIGroup(metaGroup);
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
synchronized (tempTreeModel) {
        if (currentFilter.isMatching(uiGroup))         addGroup(uiGroup);
 else         MetaContactListSource.removeUIGroup(metaGroup);
      }
    }
  }
);
}
