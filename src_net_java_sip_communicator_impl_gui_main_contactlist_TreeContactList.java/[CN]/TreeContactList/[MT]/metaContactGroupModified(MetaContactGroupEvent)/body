{
  final MetaContactGroup metaGroup=evt.getSourceMetaContactGroup();
  final UIGroup uiGroup=MetaContactListSource.getUIGroup(metaGroup);
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
synchronized (tempTreeModel) {
        if (uiGroup != null) {
          GroupNode groupNode=uiGroup.getGroupNode();
          if (groupNode != null)           treeModel.nodeChanged(groupNode);
        }
      }
    }
  }
);
}
