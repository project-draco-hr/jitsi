{
  if (stopping)   return new byte[0];
synchronized (this) {
    if (!started)     return new byte[0];
    byte[] bytebuff=new byte[PortAudioManager.NUM_SAMPLES * frameSize];
synchronized (connectedToStreamSync) {
      PortAudio.Pa_ReadStream(stream,bytebuff,PortAudioManager.NUM_SAMPLES);
    }
    for (    InputPortAudioStream slave : slaves)     slave.setBuffer(bytebuff);
    return bytebuff;
  }
}
