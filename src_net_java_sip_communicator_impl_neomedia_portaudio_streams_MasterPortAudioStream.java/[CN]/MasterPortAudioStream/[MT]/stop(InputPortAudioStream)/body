{
  if (!started)   return;
  slaves.remove(slave);
  if (slaves.isEmpty()) {
synchronized (readSync) {
      while (readActive) {
        try {
          readSync.wait();
        }
 catch (        InterruptedException e) {
          continue;
        }
      }
      PortAudio.Pa_CloseStream(stream);
      stream=0;
      started=false;
      PortAudioManager.getInstance().stoppedInputPortAudioStream(this);
    }
  }
}
