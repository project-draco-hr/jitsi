{
  CallChangeEvent ccEvent=new CallChangeEvent(this,type,oldValue,newValue);
  if (logger.isDebugEnabled())   logger.debug("Dispatching a CallChange event to " + callListeners.size() + " listeners. event is: "+ ccEvent.toString());
  Iterator<CallChangeListener> listeners;
synchronized (callListeners) {
    listeners=new ArrayList<CallChangeListener>(callListeners).iterator();
  }
  while (listeners.hasNext()) {
    CallChangeListener listener=listeners.next();
    if (type.equals(CallChangeEvent.CALL_STATE_CHANGE))     listener.callStateChanged(ccEvent);
  }
}
