{
  RawPacket pkt=availRawPackets.poll();
  if (pkt == null || pkt.getBuffer().length < length) {
    byte[] buf=new byte[length];
    pkt=new RawPacket();
    pkt.setBuffer(buf);
  }
  System.arraycopy(buffer,offset,pkt.getBuffer(),0,length);
  pkt.setLength(length);
  pkt.setOffset(0);
  return pkt;
}
