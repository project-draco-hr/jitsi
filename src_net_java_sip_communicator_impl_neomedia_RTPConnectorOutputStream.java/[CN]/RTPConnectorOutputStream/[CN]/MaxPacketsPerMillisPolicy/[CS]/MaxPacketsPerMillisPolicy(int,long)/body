{
  setMaxPacketsPerMillis(maxPackets,perMillis);
synchronized (this) {
    if (sendThread == null) {
      sendThread=new Thread(getClass().getName()){
        @Override public void run(){
          runInSendThread();
        }
      }
;
      sendThread.setDaemon(true);
      sendThread.start();
    }
  }
}
