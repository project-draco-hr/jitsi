{
  String scHomeDirLocation=null;
  if (store != null)   scHomeDirLocation=getString(PNAME_SC_HOME_DIR_LOCATION);
  if (scHomeDirLocation == null) {
    scHomeDirLocation=getSystemProperty(PNAME_SC_HOME_DIR_LOCATION);
    if (scHomeDirLocation == null)     scHomeDirLocation=getSystemProperty("user.home");
    if (store != null)     store.setNonSystemProperty(PNAME_SC_HOME_DIR_LOCATION,scHomeDirLocation);
  }
  return scHomeDirLocation;
}
