{
  Enumeration chatContacts=getChatContactListPanel().getChatContacts();
  while (chatContacts.hasMoreElements()) {
    ChatContact chatContact=(ChatContact)chatContacts.nextElement();
    Object chatSourceContact=chatContact.getSourceContact();
    if (chatSourceContact instanceof Contact) {
      MetaContact parentMetaContact=GuiActivator.getMetaContactListService().findMetaContactByContact((Contact)chatSourceContact);
      if (parentMetaContact != null && parentMetaContact.equals(metaContact))       return chatContact;
    }
  }
  return null;
}
