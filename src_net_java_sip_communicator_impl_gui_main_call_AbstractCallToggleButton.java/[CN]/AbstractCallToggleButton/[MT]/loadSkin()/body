{
  setBgImage(ImageLoader.getImage(bgImage));
  setBgRolloverImage(ImageLoader.getImage(bgRolloverImage));
  setPressedImage(ImageLoader.getImage(pressedImage));
  if (iconImageID != null) {
    if (!fullScreen && !settingsPanel)     setIconImage(ImageUtils.scaleImageWithinBounds(ImageLoader.getImage(iconImageID),12,12));
 else     setIconImage(ImageLoader.getImage(iconImageID));
  }
  if (pressedIconImageID != null) {
    if (!fullScreen && !settingsPanel)     setPressedIconImage(ImageUtils.scaleImageWithinBounds(ImageLoader.getImage(pressedIconImageID),12,12));
 else     setPressedIconImage(ImageLoader.getImage(pressedIconImageID));
  }
}
