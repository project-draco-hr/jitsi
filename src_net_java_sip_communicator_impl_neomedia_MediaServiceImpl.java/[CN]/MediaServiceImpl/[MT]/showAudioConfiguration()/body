{
  if (audioConfigDialog != null) {
    if (!SwingUtilities.isEventDispatchThread()) {
      SwingUtilities.invokeLater(new Runnable(){
        public void run(){
          showAudioConfiguration();
        }
      }
);
      return;
    }
    SwingUtilities.updateComponentTreeUI(audioConfigDialog.getComponent(0));
    audioConfigDialog.pack();
    audioConfigDialog.repaint();
    if (!audioConfigDialog.isVisible())     audioConfigDialog.setVisible(true);
  }
}
