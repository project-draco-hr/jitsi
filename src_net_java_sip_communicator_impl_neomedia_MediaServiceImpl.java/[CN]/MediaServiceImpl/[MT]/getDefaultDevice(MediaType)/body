{
  CaptureDeviceInfo captureDeviceInfo;
switch (mediaType) {
case AUDIO:
    captureDeviceInfo=getDeviceConfiguration().getAudioCaptureDevice();
  return (captureDeviceInfo == null) ? null : new AudioCaptureMediaDevice(captureDeviceInfo);
case VIDEO:
captureDeviceInfo=getDeviceConfiguration().getVideoCaptureDevice();
return (captureDeviceInfo == null) ? null : new CaptureMediaDevice(captureDeviceInfo,mediaType);
default :
return null;
}
}
