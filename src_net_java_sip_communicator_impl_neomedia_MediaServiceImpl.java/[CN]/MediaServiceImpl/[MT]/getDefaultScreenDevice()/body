{
  List<ScreenDevice> screens=getAvailableScreenDevices();
  ScreenDevice best=null;
  int width=0;
  int height=0;
  for (  ScreenDevice sc : screens) {
    java.awt.Dimension res=sc.getSize();
    if (width < res.getSize().width || height < res.getSize().height) {
      width=res.width;
      height=res.height;
      best=sc;
    }
  }
  return best;
}
