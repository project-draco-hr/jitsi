{
  Locale newLang=detail.getLocale();
  if (newLang == null) {
    tlv.writeUShort(0);
    logger.trace("write lang 0");
  }
 else {
    for (int i=1; i < spokenLanguages.length; i++) {
      if (getSpokenLanguage(i).equals(newLang)) {
        logger.trace("write lang " + i);
        tlv.writeUShort(i);
        return;
      }
    }
  }
}
