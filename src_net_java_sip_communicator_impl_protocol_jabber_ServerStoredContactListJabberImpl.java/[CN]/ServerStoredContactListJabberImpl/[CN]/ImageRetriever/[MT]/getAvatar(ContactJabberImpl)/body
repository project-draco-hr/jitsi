{
  try {
    XMPPConnection connection=jabberProvider.getConnection();
    if (connection == null || !connection.isAuthenticated())     return null;
    VCard card=new VCard();
    card.load(connection,contact.getAddress());
    return card.getAvatar();
  }
 catch (  Exception exc) {
    logger.error("Cannot load image for contact " + this + " : "+ exc.getMessage(),exc);
  }
  return null;
}
