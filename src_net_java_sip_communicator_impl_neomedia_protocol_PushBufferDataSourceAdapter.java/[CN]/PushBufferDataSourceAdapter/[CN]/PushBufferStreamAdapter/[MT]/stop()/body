{
synchronized (streamReadThreadSyncRoot) {
    started=false;
    if (STRICT_STOP) {
      boolean interrupted=false;
      while (streamReadThread != null)       try {
        streamReadThreadSyncRoot.wait();
      }
 catch (      InterruptedException iex) {
        logger.info(getClass().getSimpleName() + " interrupted while waiting for" + " PullBufferStream read thread"+ " to stop.",iex);
        interrupted=true;
      }
      if (interrupted)       Thread.currentThread().interrupt();
    }
 else     streamReadThread=null;
  }
}
