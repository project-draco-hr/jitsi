{
synchronized (syncChat) {
    for (    ChatPanel chatPanel : chatPanels) {
      ChatSession chatSession=chatPanel.getChatSession();
      Object descriptor=chatSession.getDescriptor();
      if (descriptor instanceof ChatRoomWrapper) {
        ChatRoomWrapper chatRoomWrapper=(ChatRoomWrapper)descriptor;
        if (chatRoomWrapper.getChatRoomID().equals(chatRoom.getIdentifier()) && getChat(chatSession).isShown()) {
          return true;
        }
      }
    }
    return false;
  }
}
