{
synchronized (syncChat) {
    String chatRoomID=chatRoom.getIdentifier();
    for (    ChatPanel chatPanel : chatPanels) {
      Object descriptor=chatPanel.getChatSession().getDescriptor();
      if (descriptor instanceof ChatRoomWrapper) {
        ChatRoomWrapper chatRoomWrapper=(ChatRoomWrapper)descriptor;
        if (chatRoomWrapper.getChatRoomID().equals(chatRoomID) && chatPanel.isShown())         return true;
      }
    }
    return false;
  }
}
