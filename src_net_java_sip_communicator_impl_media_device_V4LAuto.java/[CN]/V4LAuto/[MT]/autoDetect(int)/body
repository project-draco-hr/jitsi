{
  CaptureDeviceInfo cdi=null;
  try {
    cdi=new V4LDeviceQuery();
    ((V4LDeviceQuery)cdi).sendQuery(cardNo);
    if (cdi.getFormats() != null && cdi.getFormats().length > 0) {
      if (CaptureDeviceManager.addDevice(cdi)) {
        logger.info("Added device " + cdi);
        CaptureDeviceManager.commit();
      }
    }
  }
 catch (  Throwable thr) {
    logger.debug("No device for index " + cardNo + ". "+ thr.getMessage());
    if (thr instanceof ThreadDeath)     throw (ThreadDeath)thr;
  }
  return cdi;
}
