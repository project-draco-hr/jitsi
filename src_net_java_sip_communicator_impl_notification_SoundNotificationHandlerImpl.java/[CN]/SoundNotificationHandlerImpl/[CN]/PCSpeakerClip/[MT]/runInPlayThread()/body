{
  while (started) {
    if (!runOnceInPlayThread())     break;
    if (isLooping()) {
synchronized (syncObject) {
        if (started) {
          try {
            if (getLoopInterval() > 0)             syncObject.wait(getLoopInterval());
          }
 catch (          InterruptedException e) {
          }
        }
      }
    }
 else     break;
  }
}
