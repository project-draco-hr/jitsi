{
  if (callPeer != null) {
    OperationSetSecureTelephony secure=(OperationSetSecureTelephony)callPeer.getProtocolProvider().getOperationSet(OperationSetSecureTelephony.class);
    if (secure != null) {
      if (securityPanel == null) {
        securityPanel=new SecurityPanel(callPeer);
        GridBagConstraints constraints=new GridBagConstraints();
        constraints.fill=GridBagConstraints.NONE;
        constraints.gridx=0;
        constraints.gridy=2;
        constraints.weightx=0;
        constraints.weighty=0;
        constraints.insets=new Insets(5,0,0,0);
        this.add(securityPanel,constraints);
      }
      securityPanel.refreshStates(event);
      this.revalidate();
    }
  }
}
