{
  try {
    bgImage=ImageIO.read(WindowBackground.class.getClassLoader().getResource(BrandingResources.getResourceString("aboutWindowBg")));
  }
 catch (  IOException e) {
    logger.error("Error cannot obtain background image",e);
    bgImage=null;
  }
  this.setPreferredSize(new Dimension(bgImage.getWidth(this),bgImage.getHeight(this)));
}
