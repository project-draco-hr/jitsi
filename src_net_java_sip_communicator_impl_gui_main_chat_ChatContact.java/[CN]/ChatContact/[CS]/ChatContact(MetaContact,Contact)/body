{
  this.sourceContact=contact;
  this.address=contact.getAddress();
  this.isMultiChatContact=false;
  this.protocolProvider=contact.getProtocolProvider();
  if (metaContact != null)   name=metaContact.getDisplayName();
 else   name=contact.getDisplayName();
  if (name == null || name.length() < 1)   name=Messages.getI18NString("unknown").getText();
}
