{
  PresenceStatus status=protocolContact.getPresenceStatus();
  this.chatConferencePanel.updateContactStatus(status);
  this.sendPanel.updateContactStatus(protoContact);
  String message=this.conversationPanel.processMessage(this.metaContact.getDisplayName(),new Date(System.currentTimeMillis()),Constants.SYSTEM_MESSAGE,Messages.getI18NString("statusChangedChatMessage",status.getStatusName()).getText());
  this.conversationPanel.appendMessageToEnd(message);
}
