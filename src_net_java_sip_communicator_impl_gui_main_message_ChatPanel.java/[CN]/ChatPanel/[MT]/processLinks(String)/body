{
  String msgString=message;
  Pattern p=Pattern.compile("(\\bwww\\.\\w+\\.\\S+\\b)|(\\b\\w+://\\S+\\b)");
  Matcher m=p.matcher(message);
  while (m.find()) {
    msgString=msgString.replaceAll(m.group().trim(),"<A href='" + "http://" + m.group() + "'>"+ m.group()+ "</A>");
  }
  return msgString;
}
