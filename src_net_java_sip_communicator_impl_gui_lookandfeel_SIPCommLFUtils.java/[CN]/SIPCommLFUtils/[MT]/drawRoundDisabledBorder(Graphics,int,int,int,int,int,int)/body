{
  g=g.create();
  try {
    AntialiasingManager.activateAntialiasing(g);
    Graphics2D g2=(Graphics2D)g;
    g2.translate(x,y);
    g2.setColor(SIPCommLookAndFeel.getControlShadow());
    g2.setStroke(new BasicStroke(1.0f));
    g2.drawRoundRect(0,0,w - 1,h - 1,r1,r2);
    g2.translate(-x,-y);
  }
  finally {
    g.dispose();
  }
}
