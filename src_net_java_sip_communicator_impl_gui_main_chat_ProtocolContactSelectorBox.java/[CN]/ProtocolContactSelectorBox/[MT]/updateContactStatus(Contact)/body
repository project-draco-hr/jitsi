{
  JMenuItem menuItem;
  Icon icon;
  if (protoContact.equals(currentProtoContact) && !protoContact.getPresenceStatus().isOnline()) {
    Contact newContact=metaContact.getDefaultContact();
    if (newContact.getPresenceStatus().isOnline())     this.setSelected(newContact);
  }
  if (!containsOtherOnlineContacts(protoContact) && protoContact.getPresenceStatus().isOnline()) {
    this.setSelected(protoContact);
  }
  menuItem=(JMenuItem)contactsTable.get(protoContact);
  icon=new ImageIcon(createContactStatusImage(protoContact));
  menuItem.setIcon(icon);
  if (menu.getSelectedObject().equals(protoContact)) {
    this.menu.setIcon(icon);
  }
}
