{
  int severity=event.getEventSeverity();
  String messageTitle=null;
switch (severity) {
case CallPeerSecurityMessageEvent.INFORMATION:
{
      messageTitle=GuiActivator.getResources().getI18NString("service.gui.SECURITY_INFO");
      break;
    }
case CallPeerSecurityMessageEvent.WARNING:
{
    messageTitle=GuiActivator.getResources().getI18NString("service.gui.SECURITY_WARNING");
    break;
  }
case CallPeerSecurityMessageEvent.SEVERE:
case CallPeerSecurityMessageEvent.ERROR:
{
  messageTitle=GuiActivator.getResources().getI18NString("service.gui.SECURITY_ERROR");
  NotificationManager.fireNotification(NotificationManager.CALL_SECURITY_ERROR);
}
}
NotificationManager.fireNotification(NotificationManager.SECURITY_MESSAGE,messageTitle,event.getI18nMessage());
}
