{
  short BIT_0=Ld8k.BIT_0;
  short BIT_1=Ld8k.BIT_1;
  int pt_bitstream;
  int i, bit;
  pt_bitstream=bitstream_offset + no_of_bits;
  for (i=0; i < no_of_bits; i++) {
    bit=value & 0x0001;
    if (bit == 0)     bitstream[--pt_bitstream]=BIT_0;
 else     bitstream[--pt_bitstream]=BIT_1;
    value>>=1;
  }
}
