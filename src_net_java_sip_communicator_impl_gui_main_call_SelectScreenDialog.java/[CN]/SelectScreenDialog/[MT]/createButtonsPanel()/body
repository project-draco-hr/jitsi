{
  JPanel buttonsPanel=new TransparentPanel(new FlowLayout(FlowLayout.RIGHT));
  JButton okButton=new JButton(GuiActivator.getResources().getI18NString("service.gui.OK"));
  okButton.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent e){
      MediaDevice selectedDevice=(MediaDevice)deviceComboBox.getSelectedItem();
      dispose();
      if (call != null)       CallManager.enableDesktopSharing(call,selectedDevice,true);
 else       CallManager.createDesktopSharing(protocolProvider,contact,selectedDevice);
    }
  }
);
  buttonsPanel.add(okButton);
  cancelButton.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent e){
      dispose();
    }
  }
);
  buttonsPanel.add(cancelButton);
  return buttonsPanel;
}
