{
  logger.trace("Ending all active calls.");
  Iterator<CallSipImpl> activeCalls=this.activeCallsRepository.getActiveCalls();
  while (activeCalls.hasNext()) {
    CallSipImpl call=activeCalls.next();
    Iterator<CallPeer> callParticipants=call.getCallPeers();
    while (callParticipants.hasNext()) {
      CallPeer participant=callParticipants.next();
      try {
        this.hangupCallPeer(participant);
      }
 catch (      Exception ex) {
        logger.warn("Failed to properly hangup particpant " + participant,ex);
      }
    }
  }
}
