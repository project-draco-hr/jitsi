{
  Dialog dialog=serverTransaction.getDialog();
  CallPeerSipImpl callPeer=activeCallsRepository.findCallPeer(dialog);
  if (callPeer == null) {
    logger.debug("Received a stray bye request.");
    return;
  }
  Response ok=null;
  try {
    ok=messageFactory.createResponse(Response.OK,byeRequest);
  }
 catch (  ParseException ex) {
    logger.error("Error while trying to send a response to a bye",ex);
    return;
  }
  try {
    serverTransaction.sendResponse(ok);
    logger.debug("sent response " + ok);
  }
 catch (  Exception ex) {
    logger.error("Failed to send an OK response to BYE request," + "exception was:\n",ex);
  }
  boolean dialogIsAlive;
  try {
    dialogIsAlive=DialogUtils.processByeThenIsDialogAlive(dialog);
  }
 catch (  SipException ex) {
    dialogIsAlive=false;
    logger.error("Failed to determine whether the dialog should stay alive.",ex);
  }
  if (dialogIsAlive) {
    ((CallSipImpl)callPeer.getCall()).getMediaCallSession().stopStreaming();
  }
 else {
    callPeer.setState(CallPeerState.DISCONNECTED);
  }
}
