{
  chatRoom.leave();
  ChatRoomsList chatRoomList=mainFrame.getChatRoomsListPanel().getChatRoomsList();
  ChatRoomWrapper chatRoomWrapper=chatRoomList.findChatRoomWrapperFromChatRoom(chatRoom);
  if (chatRoomWrapper == null)   return;
  ConfigurationManager.updateChatRoomStatus(chatRoomWrapper.getParentProvider(),chatRoomWrapper.getChatRoomID(),Constants.OFFLINE_STATUS);
}
