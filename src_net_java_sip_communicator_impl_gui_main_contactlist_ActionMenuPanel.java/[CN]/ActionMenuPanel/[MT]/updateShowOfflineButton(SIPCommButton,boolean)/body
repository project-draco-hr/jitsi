{
  if (!isShowOffline)   showOfflineButton.setBackgroundImage(ImageLoader.getImage(ImageLoader.QUICK_MENU_SHOW_OFFLINE_ICON));
 else   showOfflineButton.setBackgroundImage(ImageLoader.getImage(ImageLoader.QUICK_MENU_HIDE_OFFLINE_ICON));
  showOfflineButton.repaint();
  this.getParent().repaint();
}
