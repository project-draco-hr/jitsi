{
  super.paintComponent(g);
  Graphics2D g2=(Graphics2D)g;
  AntialiasingManager.activateAntialiasing(g2);
  GradientPaint p=new GradientPaint(this.getWidth() / 2,0,startBgColor,this.getWidth() / 2,this.getHeight(),endBgColor);
  FadeTracker fadeTracker=FadeTracker.getInstance();
  float animation;
  if (isSlideIn)   animation=1.0f;
 else   animation=0.0f;
  if (fadeTracker.isTracked(this,AnimationUtils.SLIDE_ANIMATION)) {
    animation=fadeTracker.getFade(this,AnimationUtils.SLIDE_ANIMATION);
  }
  int height=(int)(getHeight() * animation);
  g2.setPaint(p);
  g2.fillRoundRect(0,0,this.getWidth() - 1,height - 1,15,15);
  g2.setColor(baseStartColor);
  g2.drawRoundRect(0,0,this.getWidth() - 1,height - 1,15,15);
}
