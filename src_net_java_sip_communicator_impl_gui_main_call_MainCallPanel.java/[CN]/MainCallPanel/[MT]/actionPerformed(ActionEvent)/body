{
  JButton button=(JButton)evt.getSource();
  String buttonName=button.getName();
  if (buttonName.equals(CALL_BUTTON)) {
    if (isCallMetaContact) {
      Object selectedContact=mainFrame.getContactListPanel().getContactList().getSelectedValue();
      if (selectedContact instanceof MetaContact) {
        Contact contact=((MetaContact)selectedContact).getDefaultContact(OperationSetBasicTelephony.class);
        if (contact != null) {
          CallManager.createCall(contact.getProtocolProvider(),contact);
        }
 else {
          new ErrorDialog(this.mainFrame,GuiActivator.getResources().getI18NString("service.gui.WARNING"),GuiActivator.getResources().getI18NString("service.gui.CONTACT_NOT_SUPPORTING_TELEPHONY",new String[]{((MetaContact)selectedContact).getDisplayName()})).showDialog();
        }
      }
    }
 else     if (!phoneNumberCombo.isComboFieldEmpty()) {
      String stringContact=phoneNumberCombo.getEditor().getItem().toString();
      CallManager.createCall(protocolProvider,stringContact);
    }
  }
 else   if (buttonName.equals(DIAL_BUTTON)) {
    DialpadDialog dialpadDialog=getDialpadDialog();
    if (!dialpadDialog.isVisible()) {
      dialpadDialog.setSize(mainFrame.getWidth() - 20,dialpadDialog.getHeight());
      dialpadDialog.setLocation(mainFrame.getX() + 10,button.getLocationOnScreen().y - dialpadDialog.getHeight());
      dialpadDialog.setVisible(true);
    }
 else {
      dialpadDialog.setVisible(false);
    }
  }
}
