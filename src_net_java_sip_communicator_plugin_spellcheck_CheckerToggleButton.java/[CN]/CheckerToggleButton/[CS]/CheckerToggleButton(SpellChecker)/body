{
  this.toggleButton=new JToggleButton(Resources.getImage("plugin.spellcheck.DISABLE"));
  this.toggleButton.setSelectedIcon(Resources.getImage("plugin.spellcheck.ENABLE"));
  this.toggleButton.setSelected(checker.isEnabled());
  this.toggleButton.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent event){
      checker.setEnabled(toggleButton.isSelected());
    }
  }
);
}
