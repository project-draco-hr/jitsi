{
  while (true) {
    String filterString=getText();
    if (filterString != null && filterString.length() > 0) {
      TreeContactList.searchFilter.setFilterString(filterString);
    }
    updateContactListView(filterString);
synchronized (this) {
      try {
        if (filterString == getText() || (filterString != null && filterString.equals(getText()))) {
          this.wait();
          filterString=getText();
        }
      }
 catch (      InterruptedException e) {
        logger.debug("Search thread was interrupted.",e);
      }
    }
  }
}
