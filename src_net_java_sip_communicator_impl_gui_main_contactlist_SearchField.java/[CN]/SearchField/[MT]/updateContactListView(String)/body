{
  TreeContactList contactList=GuiActivator.getContactList();
  if (filterString != null && filterString.length() > 0) {
    boolean hasMatching=contactList.applyFilter(TreeContactList.searchFilter);
    if (!hasMatching) {
      enableUnknownContactView(true);
    }
 else {
      if (!lastHasMatching)       enableUnknownContactView(false);
      contactList.selectFirstContact();
    }
    lastHasMatching=hasMatching;
  }
 else {
    contactList.applyDefaultFilter();
    enableUnknownContactView(false);
  }
}
