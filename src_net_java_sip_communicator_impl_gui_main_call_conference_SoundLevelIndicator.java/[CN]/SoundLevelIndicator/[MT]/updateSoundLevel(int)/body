{
  int range=1;
  if (maxSoundLevel > -1 && minSoundLevel > -1 && maxSoundLevel >= minSoundLevel)   range=maxSoundLevel - minSoundLevel;
  int activeBarNumber=soundLevel * soundBarNumber / range;
  for (int i=0; i < getComponentCount(); i++) {
    Component c=getComponent(i);
    if (c instanceof JLabel) {
      if (i < activeBarNumber)       ((JLabel)c).setIcon(soundLevelActiveImage);
 else       ((JLabel)c).setIcon(soundLevelInactiveImage);
    }
  }
  this.repaint();
}
