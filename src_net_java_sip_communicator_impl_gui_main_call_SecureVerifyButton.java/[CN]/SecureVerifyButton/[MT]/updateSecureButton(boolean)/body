{
  if (isSecure) {
    this.setImage(ImageLoader.getImage(ImageLoader.SECURE_BUTTON_ON));
    this.setToolTipText(GuiActivator.getResources().getI18NString("impl.media.security.SECURITY_ON"));
  }
 else {
    this.setImage(ImageLoader.getImage(ImageLoader.SECURE_BUTTON_OFF));
    this.setToolTipText(GuiActivator.getResources().getI18NString("impl.media.security.TOGGLE_ON_SECURITY"));
  }
}
