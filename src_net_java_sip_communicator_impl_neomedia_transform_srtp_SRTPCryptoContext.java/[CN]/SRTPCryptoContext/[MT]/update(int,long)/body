{
  long delta=guessedIndex - (((long)this.roc) << 16 | this.seqNum);
  if (delta > 0) {
    replayWindow=replayWindow << delta;
    replayWindow|=1;
  }
 else {
    replayWindow|=(1 << delta);
  }
  if (seqNo > seqNum) {
    seqNum=seqNo & 0xffff;
  }
  if (this.guessedROC > this.roc) {
    roc=guessedROC;
    seqNum=seqNo & 0xffff;
  }
}
