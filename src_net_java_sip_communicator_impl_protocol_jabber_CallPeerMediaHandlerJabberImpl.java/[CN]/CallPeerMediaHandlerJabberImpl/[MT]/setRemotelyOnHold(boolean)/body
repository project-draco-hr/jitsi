{
  this.remotelyOnHold=onHold;
  MediaStream audioStream=getStream(MediaType.AUDIO);
  MediaStream videoStream=getStream(MediaType.VIDEO);
  if (remotelyOnHold) {
    if (audioStream != null) {
      audioStream.setDirection(audioStream.getDirection().and(MediaDirection.RECVONLY));
    }
    if (videoStream != null) {
      videoStream.setDirection(videoStream.getDirection().and(MediaDirection.RECVONLY));
    }
  }
 else {
    if (audioStream != null) {
      audioStream.setDirection(audioStream.getDirection().or(MediaDirection.RECVONLY));
    }
    if (videoStream != null && videoStream.getDirection() != MediaDirection.INACTIVE) {
      videoStream.setDirection(videoStream.getDirection().or(MediaDirection.RECVONLY));
    }
  }
}
