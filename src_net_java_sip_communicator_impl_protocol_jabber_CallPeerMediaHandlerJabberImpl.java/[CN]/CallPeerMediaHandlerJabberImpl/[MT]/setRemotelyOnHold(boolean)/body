{
  this.remotelyOnHold=onHold;
  for (  MediaType mediaType : MediaType.values()) {
    MediaStream stream=getStream(mediaType);
    if (stream == null)     continue;
    if (getPeer().isJitsiVideoBridge()) {
      if (remotelyOnHold) {
        ColibriConferenceIQ.Channel channel=getColibriChannel(mediaType);
        MediaDirection direction=channel.getDirection().and(MediaDirection.RECVONLY);
        getPeer().getCall().setChannelDirection(channel.getID(),mediaType,direction);
      }
 else {
        ColibriConferenceIQ.Channel channel=getColibriChannel(mediaType);
        MediaDirection direction=channel.getDirection().or(MediaDirection.SENDONLY);
        getPeer().getCall().setChannelDirection(channel.getID(),mediaType,direction);
      }
    }
 else {
      if (remotelyOnHold) {
        stream.setDirection(stream.getDirection().and(MediaDirection.RECVONLY));
      }
 else {
        stream.setDirection(calculatePostHoldDirection(stream));
      }
    }
  }
}
