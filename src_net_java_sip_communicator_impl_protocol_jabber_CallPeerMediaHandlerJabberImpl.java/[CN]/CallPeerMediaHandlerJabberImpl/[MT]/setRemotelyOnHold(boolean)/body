{
  this.remotelyOnHold=onHold;
  for (  MediaType mediaType : MediaType.values()) {
    MediaStream stream=getStream(mediaType);
    if (stream == null)     continue;
    if (getPeer().isJitsiVideoBridge()) {
      if (remotelyOnHold) {
        ColibriConferenceIQ.Channel channel=getColibriChannel(mediaType);
        getPeer().getCall().setChannelDirection(channel.getID(),mediaType,MediaDirection.INACTIVE);
      }
 else {
        ColibriConferenceIQ.Channel channel=getColibriChannel(mediaType);
        getPeer().getCall().setChannelDirection(channel.getID(),mediaType,MediaDirection.SENDRECV);
      }
    }
 else {
      if (remotelyOnHold) {
        MediaDirection newDirection=getPeer().getCall().isConferenceFocus() ? MediaDirection.INACTIVE : stream.getDirection().and(MediaDirection.SENDRECV);
        stream.setDirection(newDirection);
      }
 else {
        stream.setDirection(calculatePostHoldDirection(stream));
      }
    }
  }
}
