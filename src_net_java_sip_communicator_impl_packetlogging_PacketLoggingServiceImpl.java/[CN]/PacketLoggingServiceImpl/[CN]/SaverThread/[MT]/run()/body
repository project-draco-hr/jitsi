{
  stopped=false;
  while (!stopped) {
    Packet pktToSave;
synchronized (this) {
      if (pktsToSave.isEmpty()) {
        try {
          wait();
        }
 catch (        InterruptedException iex) {
        }
        continue;
      }
      pktToSave=pktsToSave.remove(0);
    }
    if (pktToSave != null) {
      try {
        savePacket(pktToSave);
      }
 catch (      Throwable t) {
        if (t instanceof ThreadDeath)         throw (ThreadDeath)t;
 else         logger.error("Error writing packet to file",t);
      }
    }
  }
}
