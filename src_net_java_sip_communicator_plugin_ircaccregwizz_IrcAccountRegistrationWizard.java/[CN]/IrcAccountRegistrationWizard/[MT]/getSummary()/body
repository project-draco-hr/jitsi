{
  Hashtable<String,String> summaryTable=new Hashtable<String,String>();
  String pass=new String();
  String port=new String();
  if (registration.isRequiredPassword()) {
    pass="required";
  }
 else {
    pass="not required";
  }
  port=registration.getPort();
  if (!port.equals("")) {
    port=":" + port;
  }
  summaryTable.put("Password",pass);
  summaryTable.put("Nickname",registration.getUserID());
  summaryTable.put("Server IRC",registration.getServer() + port);
  summaryTable.put("Secure connection",registration.isSecureConnection() ? "yes" : "no");
  summaryTable.put("Contact presence","" + registration.isContactPresenceTaskEnabled());
  summaryTable.put("Chat room presence","" + registration.isChatRoomPresenceTaskEnabled());
  return summaryTable.entrySet().iterator();
}
