{
  int timeDelay=30000;
  try {
    String waitTimeStr=MailboxActivator.getConfigurationService().getString(Mailbox.WAIT_TIME_PROPERTY_NAME);
    if (waitTimeStr != null)     timeDelay=Integer.parseInt(waitTimeStr);
  }
 catch (  NumberFormatException e) {
    logger.info("failed to load the wait time out of the config file" + ", using default value of 30 seconds",e);
    timeDelay=30000;
  }
  return timeDelay;
}
