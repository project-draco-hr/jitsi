{
  OperationSetBasicTelephony telephony=call.getProtocolProvider().getOperationSet(OperationSetBasicTelephony.class);
  if (logger.isInfoEnabled())   logger.info("Max Message Length Reached, Mailbox is" + " disconnecting the call");
  Iterator<? extends CallPeer> callPeers=call.getCallPeers();
  while (callPeers.hasNext()) {
    CallPeer peer=callPeers.next();
    try {
      telephony.hangupCallPeer(peer);
    }
 catch (    OperationFailedException exc) {
      logger.error("Could not Hang up on : " + peer + " caused by the following exception: "+ exc,exc);
    }
  }
}
