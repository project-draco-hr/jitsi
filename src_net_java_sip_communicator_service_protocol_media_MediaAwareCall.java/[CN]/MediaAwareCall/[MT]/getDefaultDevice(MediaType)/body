{
  MediaDevice device=null;
  MediaService mediaService=ProtocolMediaActivator.getMediaService();
switch (mediaType) {
case AUDIO:
    device=audioDevice;
  break;
case VIDEO:
device=videoDevice;
break;
default :
return null;
}
if (device == null) {
device=mediaService.getDefaultDevice(mediaType,mediaUseCase);
}
if (MediaType.AUDIO.equals(mediaType)) {
if (conferenceAudioMixer == null) {
if (device != null) conferenceAudioMixer=mediaService.createMixer(device);
}
return conferenceAudioMixer;
}
return device;
}
