{
  super.doConnect();
  String deviceName=getDeviceName();
  int fd=Video4Linux2.open(deviceName,Video4Linux2.O_RDWR);
  if (-1 == fd)   throw new IOException("Failed to open " + deviceName);
 else {
    boolean close=true;
    try {
synchronized (getStreamSyncRoot()) {
        for (        Object stream : getStreams())         ((Video4Linux2Stream)stream).setFd(fd);
      }
      close=false;
    }
  finally {
      if (close) {
        Video4Linux2.close(fd);
        fd=-1;
      }
    }
    this.fd=fd;
  }
}
