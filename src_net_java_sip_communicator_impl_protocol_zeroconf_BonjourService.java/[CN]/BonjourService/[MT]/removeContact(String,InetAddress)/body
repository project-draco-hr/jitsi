{
synchronized (contacts) {
    Iterator contactsIter=contacts();
    while (contactsIter.hasNext()) {
      ContactZeroconfImpl contact=(ContactZeroconfImpl)contactsIter.next();
      if (((contact.getAddress().equals(id)) || (id == null)) && ((contact.getIpAddress().equals(ip)) || (ip == null))) {
        if (contact.getClientThread() != null)         contact.getClientThread().cleanThread();
        contacts.remove(contact);
        return;
      }
    }
    ;
  }
  logger.error("ZEROCONF: ERROR - Couldn't find contact to delete [" + id + " / "+ ip+ "]");
}
