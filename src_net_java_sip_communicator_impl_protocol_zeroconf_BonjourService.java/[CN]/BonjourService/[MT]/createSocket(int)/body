{
  ServerSocket sock=null;
  try {
    sock=new ServerSocket(port);
  }
 catch (  Exception e) {
    logger.error("ZEROCONF: Couldn't bind socket to port " + port + "! Switching to an other port...");
    try {
      sock=new ServerSocket(0);
    }
 catch (    IOException ex) {
      logger.error("ZEROCONF: FATAL ERROR => " + "Couldn't bind to a port!!",ex);
    }
  }
  return sock;
}
