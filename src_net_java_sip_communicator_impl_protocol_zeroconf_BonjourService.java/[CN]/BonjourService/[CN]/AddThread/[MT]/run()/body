{
  ServiceInfo service=null;
  while ((service == null) && (dead == false) && !status.equals(ZeroconfStatusEnum.OFFLINE)) {
    service=jmdns.getServiceInfo(type,name,10000);
    if (service == null)     logger.error("BONJOUR: ERROR - Service Info of " + name + " not found in cache!!");
    try {
      sleep(2);
    }
 catch (    InterruptedException ex) {
      logger.error(ex);
    }
  }
  if ((dead == false) && !status.equals(ZeroconfStatusEnum.OFFLINE))   jmdns.requestServiceInfo(type,name);
}
