{
  try {
    systray=SystemTray.getDefaultSystemTray();
  }
 catch (  Throwable e) {
    if (!GraphicsEnvironment.isHeadless())     logger.error("Failed to create a systray!",e);
  }
  if (systray != null) {
    this.initSystray();
    UIService ui=OsDependentActivator.getUIService();
    if (ui != null)     ui.setExitOnMainWindowClose(false);
  }
}
