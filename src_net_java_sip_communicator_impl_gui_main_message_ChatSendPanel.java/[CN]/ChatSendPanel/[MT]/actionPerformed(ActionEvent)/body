{
  JEditorPane messagePane=this.msgWindow.getWriteMessagePanel().getEditorPane();
  if (messagePane.getText() != null && !messagePane.getText().equals("")) {
    this.msgWindow.getConversationPanel().processSentMessage(this.msgWindow.getParentWindow().getAccount(),Calendar.getInstance(),messagePane.getText());
    messagePane.setText("");
    messagePane.requestFocus();
  }
}
