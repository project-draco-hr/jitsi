{
  OperationSetInstantMessageTransform opSetMessageTransform=provider.getOperationSet(OperationSetInstantMessageTransform.class);
  if (opSetMessageTransform != null) {
    opSetMessageTransform.addTransformLayer(this.otrTransformLayer);
  }
 else {
    if (logger.isTraceEnabled())     logger.trace("Service did not have a transform op. set.");
  }
}
