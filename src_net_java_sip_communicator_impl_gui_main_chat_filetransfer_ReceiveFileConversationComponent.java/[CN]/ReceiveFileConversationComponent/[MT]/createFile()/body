{
  File downloadFile=null;
  File downloadDir=null;
  try {
    downloadDir=GuiActivator.getFileAccessService().getDefaultDownloadDirectory();
  }
 catch (  IOException e) {
    logger.debug("Unable to find download directory.");
  }
  if (downloadDir != null)   downloadFile=new File(downloadDir,fileTransferRequest.getFileName());
  return downloadFile;
}
