{
  double amplitudeCoefficient=Math.pow(2.0,sampleSizeInBits - 1) - 1.0;
  double audioSampleContinuous;
  int audioSampleDiscrete;
  audioSampleContinuous=this.getAudioSampleContinuous(samplingFrequency,sampleNumber);
  audioSampleDiscrete=(int)(audioSampleContinuous * amplitudeCoefficient);
  return audioSampleDiscrete;
}
