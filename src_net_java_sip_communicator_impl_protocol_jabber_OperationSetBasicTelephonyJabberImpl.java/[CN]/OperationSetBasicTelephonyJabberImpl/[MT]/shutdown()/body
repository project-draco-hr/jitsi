{
  logger.trace("Ending all active calls. ");
  Iterator activeCalls=this.activeCallsRepository.getActiveCalls();
  while (activeCalls.hasNext()) {
    CallJabberImpl call=(CallJabberImpl)activeCalls.next();
    Iterator callParticipants=call.getCallPeers();
    while (callParticipants.hasNext()) {
      CallPeer participant=(CallPeer)callParticipants.next();
      try {
        this.hangupCallPeer(participant);
      }
 catch (      Exception ex) {
        logger.warn("Failed to properly hangup participant " + participant,ex);
      }
    }
  }
}
