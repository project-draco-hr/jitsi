{
  if (oldValue.equals(source.getPresenceStatus())) {
    logger.debug("Ignored prov stat. change evt. old==new = " + oldValue);
    return;
  }
  ContactPresenceStatusChangeEvent evt=new ContactPresenceStatusChangeEvent(source,this.parentProvider,parentGroup,oldValue,source.getPresenceStatus());
  Iterator listeners=null;
synchronized (this.contactPresenceStatusListeners) {
    listeners=new ArrayList(this.contactPresenceStatusListeners).iterator();
  }
  while (listeners.hasNext()) {
    ContactPresenceStatusListener listener=(ContactPresenceStatusListener)listeners.next();
    listener.contactPresenceStatusChanged(evt);
  }
}
