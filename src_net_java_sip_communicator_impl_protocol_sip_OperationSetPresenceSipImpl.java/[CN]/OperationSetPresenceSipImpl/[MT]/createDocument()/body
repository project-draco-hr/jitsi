{
  try {
    if (this.docBuilderFactory == null)     this.docBuilderFactory=DocumentBuilderFactory.newInstance();
    if (this.docBuilder == null)     this.docBuilder=this.docBuilderFactory.newDocumentBuilder();
  }
 catch (  Exception e) {
    logger.error("can't create the new xml document",e);
    return null;
  }
  return this.docBuilder.newDocument();
}
