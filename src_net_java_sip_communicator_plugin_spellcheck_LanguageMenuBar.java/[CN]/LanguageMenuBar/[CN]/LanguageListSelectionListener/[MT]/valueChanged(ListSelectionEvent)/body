{
  if (!e.getValueIsAdjusting()) {
    @SuppressWarnings("unchecked") JList<Parameters.Locale> source=(JList<Parameters.Locale>)e.getSource();
    Parameters.Locale locale=source.getSelectedValue();
    source.setEnabled(false);
    locale.setLoading(true);
    new SetSpellChecker(locale,source).start();
    source.requestFocusInWindow();
    removeItem.setEnabled(false);
  }
}
