{
  if (crypto == null) {
    logger.debug("Crypto instance is null, creating.");
    if (isUsingMasterPassword()) {
      String master=showPasswordPrompt();
      if (master == null) {
        crypto=null;
      }
 else {
        setMasterPassword(master);
      }
    }
 else {
      logger.debug("Master password not set");
      setMasterPassword(null);
    }
  }
  return (crypto != null);
}
