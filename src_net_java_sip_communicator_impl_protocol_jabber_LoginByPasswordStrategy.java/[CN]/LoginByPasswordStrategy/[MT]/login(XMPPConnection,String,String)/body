{
  SASLAuthentication.supportSASLMechanism("PLAIN",0);
  boolean disableCustomDigestMD5=accountID.getAccountPropertyBoolean(DISABLE_CUSTOM_DIGEST_MD5_ACCOUNT_PROP,false) || JabberActivator.getConfigurationService().getBoolean(DISABLE_CUSTOM_DIGEST_MD5_CONFIG_PROP,false);
  if (!disableCustomDigestMD5) {
    SASLAuthentication.unregisterSASLMechanism("DIGEST-MD5");
    SASLAuthentication.registerSASLMechanism("DIGEST-MD5",SASLDigestMD5Mechanism.class);
    SASLAuthentication.supportSASLMechanism("DIGEST-MD5");
  }
  connection.login(userName,password,resource);
  return true;
}
