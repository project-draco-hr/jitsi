{
  logger.debug("Set current chat panel to: " + chatPanel.getMetaContact().getDisplayName());
  if (getChatTabCount() > 0)   this.chatTabbedPane.setSelectedComponent(chatPanel);
  this.setTitle(chatPanel.getMetaContact().getDisplayName());
  this.getMainToolBar().changeHistoryButtonsState(chatPanel);
  chatPanel.requestFocusInWriteArea();
}
