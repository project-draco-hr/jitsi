{
  g=g.create();
  try {
    AntialiasingManager.activateAntialiasing(g);
    g.setColor(getBackground());
    if (getIcon() != null) {
      if (isSecure)       g.fillRoundRect(0,0,this.getWidth(),this.getHeight(),20,20);
 else       g.fillRoundRect(0,0,this.getWidth(),this.getHeight(),20,20);
    }
    g.setColor(getForeground());
    super.paintComponent(g);
  }
  finally {
    g.dispose();
  }
}
