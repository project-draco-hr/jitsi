{
  String name=c.getToolTipText();
  if (!this.containsItem(name)) {
    JMenuItem item=new JMenuItem(name);
    item.addActionListener(new ActionListener(){
      public void actionPerformed(      ActionEvent e){
        MouseEvent mouseEvent=new MouseEvent(c,MouseEvent.MOUSE_PRESSED,System.currentTimeMillis(),MouseEvent.BUTTON1,c.getX(),c.getY(),1,false);
        for (        MouseListener l : c.getMouseListeners()) {
          l.mousePressed(mouseEvent);
          l.mouseReleased(mouseEvent);
          l.mouseClicked(mouseEvent);
        }
        if (menu != null)         menu.setVisible(false);
      }
    }
);
    if (menu == null)     menu=createMenu();
    menu.add(item);
    menuItemsTable.put(name,item);
  }
}
