{
  if (label != null)   return;
  label.requestFocus();
  if (menu == null)   menu=createMenu();
  if (!menu.isVisible()) {
    Point locationOnScreen=label.getLocationOnScreen();
    menu.setLocation(locationOnScreen.x,locationOnScreen.y + label.getHeight());
    menu.setVisible(true);
  }
 else   menu.setVisible(false);
}
