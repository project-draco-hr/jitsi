{
  boolean showSystem;
synchronized (showSystemBundlesSync) {
    showSystem=showSystemBundles;
  }
  if (showSystem)   return bundles[row];
 else {
    int bundleCounter=0;
    for (int i=0; i < bundles.length; i++) {
      Object sysBundleProp=bundles[i].getHeaders().get("System-Bundle");
      if (sysBundleProp != null && sysBundleProp.equals("yes"))       continue;
      if (bundleCounter == row)       return bundles[i];
      bundleCounter++;
    }
  }
  return null;
}
