{
  String startPlainTextTag;
  String endPlainTextTag;
  if (contentType.equals("html")) {
    startPlainTextTag="";
    endPlainTextTag="";
  }
 else {
    startPlainTextTag="<PLAINTEXT>";
    endPlainTextTag="</PLAINTEXT>";
  }
  return message.replaceAll("\n",endPlainTextTag + "<BR>&#10;" + startPlainTextTag);
}
