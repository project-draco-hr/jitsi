{
  String avatarPath=AvatarCacheUtils.getCachedAvatarPath(protocolProvider,contactAddress);
  File avatarFile;
  try {
    avatarFile=GuiActivator.getFileAccessService().getPrivatePersistentFile(avatarPath);
  }
 catch (  Exception e) {
    return null;
  }
  if (avatarFile.exists() && avatarFile.length() > 0)   return "file:" + avatarFile.getAbsolutePath();
 else   return GuiActivator.getResources().getImageURL("service.gui.DEFAULT_USER_PHOTO_SMALL").toString();
}
