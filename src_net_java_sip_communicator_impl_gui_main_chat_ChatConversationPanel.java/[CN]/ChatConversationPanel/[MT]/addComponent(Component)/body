{
  Style style=document.getStyleSheet().addStyle(StyleConstants.ComponentElementName,document.getStyleSheet().getStyle("body"));
  style.addAttribute(AbstractDocument.ElementNameAttribute,StyleConstants.ComponentElementName);
  style.addAttribute(StyleConstants.ComponentAttribute,component);
  try {
    document.insertString(document.getLength(),"ignored text",style);
    document.insertString(document.getLength(),"\n",document.getStyle("body"));
  }
 catch (  BadLocationException e) {
    logger.error("Insert in the HTMLDocument failed.",e);
  }
  this.setCarretToEnd();
}
