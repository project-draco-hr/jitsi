{
  if (!SwingUtilities.isEventDispatchThread()) {
    SwingUtilities.invokeLater(new Runnable(){
      public void run(){
        appendMessageToEnd(message,contentType);
      }
    }
);
    return;
  }
  if (message == null)   return;
synchronized (scrollToBottomRunnable) {
    Element root=document.getDefaultRootElement();
    try {
      document.insertBeforeEnd(root.getElement(root.getElementCount() - 1),message);
      SwingUtilities.invokeLater(scrollToBottomRunnable);
    }
 catch (    BadLocationException e) {
      logger.error("Insert in the HTMLDocument failed.",e);
    }
catch (    IOException e) {
      logger.error("Insert in the HTMLDocument failed.",e);
    }
  }
  int lastMsgStartIndex=message.indexOf("<div id=\"" + ChatHtmlUtils.MESSAGE_TEXT_ID + lastMessageUID);
  if (lastMsgStartIndex > 0)   finishMessageAdd(message.substring(lastMsgStartIndex,message.indexOf("</div>",lastMsgStartIndex) + 6),contentType);
}
