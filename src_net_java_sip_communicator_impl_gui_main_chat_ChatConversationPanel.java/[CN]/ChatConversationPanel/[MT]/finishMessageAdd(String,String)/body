{
  Element root=document.getDefaultRootElement();
  if (!isHistory)   ensureDocumentSize();
  Element elem=document.getElement(root,Attribute.ID,ChatHtmlUtils.MESSAGE_TEXT_ID + lastMessageUID);
  ConfigurationService cfg=GuiActivator.getConfigurationService();
  if (cfg.getBoolean(ReplacementProperty.REPLACEMENT_ENABLE,true) || cfg.getBoolean(ReplacementProperty.getPropertyName("SMILEY"),true)) {
    processReplacement(elem,message,contentType);
  }
}
