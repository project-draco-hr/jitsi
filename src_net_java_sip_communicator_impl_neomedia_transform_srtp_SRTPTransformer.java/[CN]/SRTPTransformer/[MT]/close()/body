{
synchronized (contexts) {
    forwardEngine.close();
    if (reverseEngine != forwardEngine)     reverseEngine.close();
    Iterator<Map.Entry<Long,SRTPCryptoContext>> iter=contexts.entrySet().iterator();
    while (iter.hasNext()) {
      Map.Entry<Long,SRTPCryptoContext> entry=iter.next();
      SRTPCryptoContext context=entry.getValue();
      iter.remove();
      if (context != null)       context.close();
    }
  }
}
