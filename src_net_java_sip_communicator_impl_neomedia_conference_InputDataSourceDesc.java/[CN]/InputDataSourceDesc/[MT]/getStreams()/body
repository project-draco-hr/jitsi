{
  if (!connected)   return EMPTY_STREAMS;
  DataSource inputDataSource=getEffectiveInputDataSource();
  if (inputDataSource instanceof PushBufferDataSource)   return ((PushBufferDataSource)inputDataSource).getStreams();
 else   if (inputDataSource instanceof PullBufferDataSource)   return ((PullBufferDataSource)inputDataSource).getStreams();
 else   if (inputDataSource instanceof TranscodingDataSource)   return ((TranscodingDataSource)inputDataSource).getStreams();
 else   return null;
}
