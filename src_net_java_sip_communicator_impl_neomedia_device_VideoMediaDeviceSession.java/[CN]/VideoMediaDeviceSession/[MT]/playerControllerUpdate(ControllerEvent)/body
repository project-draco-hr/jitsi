{
  super.playerControllerUpdate(event);
  if ((event instanceof SizeChangeEvent) && ((playerScaler == null) || (playerScaler.getOutputSize() == null))) {
    SizeChangeEvent sizeChangeEvent=(SizeChangeEvent)event;
    playerSizeChange(sizeChangeEvent.getSourceController(),sizeChangeEvent.getWidth(),sizeChangeEvent.getHeight());
  }
}
