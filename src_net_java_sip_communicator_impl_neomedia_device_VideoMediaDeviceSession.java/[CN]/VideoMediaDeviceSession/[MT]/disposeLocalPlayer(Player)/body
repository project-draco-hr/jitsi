{
  Component visualComponent=null;
  try {
    visualComponent=getVisualComponent(player);
    player.stop();
    player.deallocate();
    player.close();
  }
  finally {
synchronized (localPlayerSyncRoot) {
      if (localPlayer == player)       localPlayer=null;
    }
    if (visualComponent != null)     fireVideoEvent(VideoEvent.VIDEO_REMOVED,visualComponent,VideoEvent.LOCAL,false);
  }
}
