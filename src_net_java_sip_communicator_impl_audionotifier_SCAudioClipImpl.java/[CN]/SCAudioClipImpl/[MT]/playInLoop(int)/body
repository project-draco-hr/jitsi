{
  if ((audioClip != null) && !audioNotifier.isMute()) {
    if (interval == 0)     audioClip.loop();
 else {
      audioClip.play();
      playAudioTimer.setDelay(interval);
      playAudioTimer.setRepeats(true);
      playAudioTimer.start();
    }
  }
  this.loopInterval=interval;
  this.isLooping=true;
}
