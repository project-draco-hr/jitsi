{
  if (!(event.getSource() instanceof Contact))   return;
  MetaContact metaContact=GuiActivator.getContactListService().findMetaContactByContact((Contact)event.getSource());
  if (metaContact == null)   return;
  UIContact uiContact;
synchronized (metaContact) {
    uiContact=MetaContactListSource.getUIContact(metaContact);
  }
  if (uiContact != null) {
    ContactNode contactNode=uiContact.getContactNode();
    if (contactNode != null)     GuiActivator.getContactList().nodeChanged(contactNode);
  }
}
