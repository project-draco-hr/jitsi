{
  super(new BorderLayout());
  initComponents();
  loadValues();
  dirChooser=GenericFileDialog.create(null,resources.getI18NString("plugin.callrecordingconfig.CHOOSE_DIR"),SipCommFileChooser.LOAD_FILE_OPERATION);
  if (dirChooser instanceof JFileChooser) {
    ((JFileChooser)dirChooser).setFileSelectionMode(JFileChooser.DIRECTORIES_ONLY);
  }
}
