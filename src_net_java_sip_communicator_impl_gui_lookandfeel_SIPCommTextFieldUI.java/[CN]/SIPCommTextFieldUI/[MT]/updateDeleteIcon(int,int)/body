{
  if (!isDeleteButtonEnabled)   return;
  Rectangle deleteRect=getDeleteButtonRect();
  if (deleteRect.contains(x,y)) {
    mouseOver=true;
    getComponent().setCursor(Cursor.getDefaultCursor());
    if (mousePressed)     getComponent().setText("");
  }
 else {
    mouseOver=false;
    getComponent().setCursor(Cursor.getPredefinedCursor(Cursor.TEXT_CURSOR));
  }
  getComponent().repaint();
}
