{
  Iterator<UIContactSource> sourcesIter=new ArrayList<UIContactSource>(contactList.getContactSources()).iterator();
  contactList.removeAllContactSources();
  while (sourcesIter.hasNext()) {
    ContactSourceService contactSource=sourcesIter.next().getContactSourceService();
    contactList.addContactSource(new DemuxContactSource(contactSource));
  }
  contactList.addContactSource(new ProtocolContactSourceServiceImpl(protocolProvider,OperationSetBasicTelephony.class));
  contactList.addContactSource(new StringContactSourceServiceImpl(protocolProvider,OperationSetBasicTelephony.class));
  contactList.applyDefaultFilter();
}
