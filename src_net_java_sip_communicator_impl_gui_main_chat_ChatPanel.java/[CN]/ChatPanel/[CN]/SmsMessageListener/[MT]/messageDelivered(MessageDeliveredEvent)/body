{
  Message msg=evt.getSourceMessage();
  Contact contact=evt.getDestinationContact();
  addMessage(contact.getDisplayName(),System.currentTimeMillis(),Chat.OUTGOING_MESSAGE,msg.getContent(),msg.getContentType());
  addMessage(contact.getDisplayName(),System.currentTimeMillis(),Chat.ACTION_MESSAGE,GuiActivator.getResources().getI18NString("service.gui.SMS_SUCCESSFULLY_SENT"),"text");
}
