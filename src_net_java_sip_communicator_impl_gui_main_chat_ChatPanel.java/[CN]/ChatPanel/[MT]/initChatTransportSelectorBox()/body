{
  if (transportSelectorBox == null) {
    transportSelectorBox=new ChatTransportSelectorBox(this,chatSession,chatSession.getCurrentChatTransport());
    sendViaLabel=new JLabel(GuiActivator.getResources().getI18NString("service.gui.SEND_VIA"));
  }
  JPanel sendPanel=getChatSendPanel().getSendPanel();
  sendPanel.add(transportSelectorBox,0);
  sendPanel.add(sendViaLabel,0);
  updateSendButtonStatus();
  this.revalidate();
  this.repaint();
}
