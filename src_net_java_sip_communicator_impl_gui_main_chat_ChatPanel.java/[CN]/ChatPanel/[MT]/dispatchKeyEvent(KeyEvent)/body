{
  if (e.getSource() != conversationPanel.getChatTextPane() || writeMessagePanel.getEditorPane().isFocusOwner())   return false;
  writeMessagePanel.getEditorPane().requestFocusInWindow();
  KeyboardFocusManager.getCurrentKeyboardFocusManager().redispatchEvent(writeMessagePanel.getEditorPane(),e);
  return true;
}
