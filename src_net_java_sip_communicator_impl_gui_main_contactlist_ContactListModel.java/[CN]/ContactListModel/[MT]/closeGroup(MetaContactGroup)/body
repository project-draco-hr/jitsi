{
  if (!isGroupClosed(group) && !isGroupEmpty(group)) {
    if (showOffline || containsOnlineContacts(group)) {
      contentRemoved(this.indexOf(group.getMetaContact(0)),this.indexOf(group.getMetaContact(countContactsAndSubgroups(group) - 1)));
    }
    this.closedGroups.add(group);
    ConfigurationManager.storeContactListGroupStatus(group.getMetaUID(),true);
  }
}
