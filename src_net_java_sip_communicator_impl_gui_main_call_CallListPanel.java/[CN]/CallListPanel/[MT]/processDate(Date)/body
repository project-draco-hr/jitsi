{
  String resultString;
  long currentDate=System.currentTimeMillis();
  if (GuiUtils.compareDates(date,new Date(currentDate)) == 0) {
    resultString=Messages.getString("today");
  }
 else {
    Calendar c=Calendar.getInstance();
    c.setTime(date);
    resultString=GuiUtils.formatDate(date);
  }
  return resultString;
}
