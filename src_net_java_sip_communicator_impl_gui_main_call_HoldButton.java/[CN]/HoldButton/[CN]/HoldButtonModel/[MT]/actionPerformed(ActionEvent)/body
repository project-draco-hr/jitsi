{
  if (call != null) {
    OperationSetBasicTelephony telephony=(OperationSetBasicTelephony)call.getProtocolProvider().getOperationSet(OperationSetBasicTelephony.class);
    Iterator<CallPeer> peers=call.getCallPeers();
    while (peers.hasNext()) {
      CallPeer callPeer=peers.next();
      try {
        if (isSelected())         telephony.putOnHold(callPeer);
 else         telephony.putOffHold(callPeer);
      }
 catch (      OperationFailedException ex) {
      }
    }
  }
}
