{
  CallParticipantState newState=(CallParticipantState)evt.getNewValue();
  CallParticipant callParticipant=evt.getSourceCallParticipant();
  fireItemStateChanged(new ItemEvent(this,ItemEvent.ITEM_STATE_CHANGED,this,isSelected() ? ItemEvent.SELECTED : ItemEvent.DESELECTED));
  fireStateChanged();
  if (CallParticipantState.DISCONNECTED.equals(newState)) {
    callParticipant.removeCallParticipantListener(listener);
  }
}
