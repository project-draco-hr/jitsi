{
  JCheckBoxMenuItem item=(JCheckBoxMenuItem)e.getSource();
  if (item.getName().equals("typingNotifications")) {
    ConfigurationManager.setSendTypingNotifications(item.isSelected());
  }
 else   if (item.getName().equals("sendingMessageCommand")) {
    chatWindow.getCurrentChatPanel().getChatWritePanel().changeSendCommand(!item.isSelected());
    if (!item.isSelected())     ConfigurationManager.setSendMessageCommand(ConfigurationManager.ENTER_COMMAND);
 else     ConfigurationManager.setSendMessageCommand(ConfigurationManager.ENTER_COMMAND);
  }
 else   if (item.getName().equals("autopopup")) {
    ConfigurationManager.setAutoPopupNewMessage(item.isSelected());
  }
}
