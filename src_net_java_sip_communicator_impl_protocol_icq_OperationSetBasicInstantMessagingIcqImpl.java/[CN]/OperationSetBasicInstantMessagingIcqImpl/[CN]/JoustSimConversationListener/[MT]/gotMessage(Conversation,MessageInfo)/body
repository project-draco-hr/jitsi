{
  if (logger.isDebugEnabled())   logger.debug("Received from " + conversation.getBuddy() + " the message "+ minfo.getMessage().getMessageBody());
  Message newMessage=createMessage(minfo.getMessage().getMessageBody());
  Contact sourceContact=opSetPersPresence.findContactByID(conversation.getBuddy().getFormatted());
  if (sourceContact == null) {
    logger.debug("received a message from a unknown contact: " + conversation.getBuddy());
    sourceContact=opSetPersPresence.createVolatileContact(conversation.getBuddy().getFormatted());
  }
  MessageReceivedEvent msgReceivedEvt=new MessageReceivedEvent(newMessage,sourceContact,minfo.getTimestamp());
  fireMessageEvent(msgReceivedEvt);
}
