{
  if (logger.isDebugEnabled())   logger.debug("Received from " + c.getBuddy() + " the message "+ minfo.getMessage().getMessageBody());
  Message newMessage=createMessage(minfo.getMessage().getMessageBody());
  Contact sourceContact=opSetPersPresence.findContactByID(c.getBuddy().getFormatted());
  if (sourceContact == null) {
    System.out.println("@todo received a message from a " + "unknown contact. implement ext support.");
  }
  MessageReceivedEvent msgReceivedEvt=new MessageReceivedEvent(newMessage,sourceContact,minfo.getTimestamp());
  fireMessageEvent(msgReceivedEvt);
  MessageDeliveredEvent msgDeliveredEvt=new MessageDeliveredEvent(newMessage,sourceContact,minfo.getTimestamp());
  fireMessageEvent(msgDeliveredEvt);
}
