{
  if (((WhiteboardParticipantState)evt.getNewValue()) == WhiteboardParticipantState.DISCONNECTED || ((WhiteboardParticipantState)evt.getNewValue()) == WhiteboardParticipantState.FAILED) {
    removeWhiteboardParticipant((WhiteboardParticipantJabberImpl)evt.getSourceWhiteboardParticipant());
  }
}
