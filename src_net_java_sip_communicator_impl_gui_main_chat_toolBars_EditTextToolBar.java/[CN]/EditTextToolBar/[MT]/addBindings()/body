{
  InputMap inputMap=chatEditorPane.getInputMap();
  inputMap.put(KeyStroke.getKeyStroke(KeyEvent.VK_BACK_SPACE,Event.SHIFT_MASK),DefaultEditorKit.deletePrevCharAction);
  inputMap.put(KeyStroke.getKeyStroke(KeyEvent.VK_B,Event.CTRL_MASK),"font-bold");
  inputMap.put(KeyStroke.getKeyStroke(KeyEvent.VK_F,Event.CTRL_MASK),"font-bold");
  inputMap.put(KeyStroke.getKeyStroke(KeyEvent.VK_I,Event.CTRL_MASK),"font-italic");
  inputMap.put(KeyStroke.getKeyStroke(KeyEvent.VK_K,Event.CTRL_MASK),"font-italic");
  inputMap.put(KeyStroke.getKeyStroke(KeyEvent.VK_U,Event.CTRL_MASK),"font-underline");
}
