{
  String s;
  if (info == null) {
    s=NeomediaActivator.getResources().getI18NString("impl.media.configform.NO_DEVICE");
  }
 else {
    s=info.getName();
    if (info instanceof ExtendedCaptureDeviceInfo) {
      String transportType=((ExtendedCaptureDeviceInfo)info).getTransportType();
      if (transportType != null)       s+=" (" + transportType + ")";
    }
  }
  return s;
}
