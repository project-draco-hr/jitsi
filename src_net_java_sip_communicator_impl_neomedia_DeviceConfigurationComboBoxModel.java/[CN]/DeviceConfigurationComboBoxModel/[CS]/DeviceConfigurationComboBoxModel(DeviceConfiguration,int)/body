{
  if (deviceConfiguration == null)   throw new IllegalArgumentException("deviceConfiguration");
  if ((type != AUDIO_CAPTURE) && (type != AUDIO_NOTIFY) && (type != AUDIO_PLAYBACK)&& (type != AUDIO)&& (type != VIDEO))   throw new IllegalArgumentException("type");
  this.deviceConfiguration=deviceConfiguration;
  this.type=type;
  if (type == AUDIO)   PortAudioDeviceChangedCallbacks.addDeviceChangedCallback(this);
}
