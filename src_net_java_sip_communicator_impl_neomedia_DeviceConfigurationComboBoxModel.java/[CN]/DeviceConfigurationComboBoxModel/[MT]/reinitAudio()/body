{
  if (type == AUDIO) {
    devices=null;
    if (DeviceConfiguration.AUDIO_SYSTEM_PORTAUDIO.equals(deviceConfiguration.getAudioSystem())) {
      deviceConfiguration.setAudioSystem(DeviceConfiguration.AUDIO_NONE,null,false);
      fireContentsChanged(-1,-1);
      setSelectedItem(DeviceConfiguration.AUDIO_SYSTEM_PORTAUDIO);
      fireContentsChanged(-1,-1);
    }
  }
}
