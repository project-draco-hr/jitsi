{
  if (DeviceConfiguration.PROP_AUDIO_SYSTEM_DEVICES.equals(ev.getPropertyName())) {
    if (SwingUtilities.isEventDispatchThread()) {
      devices=null;
      fireContentsChanged(0,getSize() - 1);
    }
 else {
      SwingUtilities.invokeLater(new Runnable(){
        public void run(){
          propertyChange(ev);
        }
      }
);
    }
  }
}
