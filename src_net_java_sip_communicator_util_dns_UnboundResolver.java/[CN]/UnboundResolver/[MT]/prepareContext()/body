{
  final long context=UnboundApi.createContext();
  if (logger.isTraceEnabled())   UnboundApi.setDebugLevel(context,100);
  for (  String fwd : forwarders == null ? ResolverConfig.getCurrentConfig().servers() : forwarders) {
    fwd=fwd.trim();
    if (NetworkUtils.isValidIPAddress(fwd)) {
      if (fwd.startsWith("["))       fwd=fwd.substring(1,fwd.length() - 1);
      UnboundApi.setForwarder(context,fwd);
    }
  }
  for (  String anchor : trustAnchors) {
    UnboundApi.addTrustAnchor(context,anchor);
  }
  return context;
}
