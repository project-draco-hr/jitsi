{
synchronized (inputStreamsSyncRoot) {
    if ((inputStreams == null) || (inputStreams.length < 1))     return;
    BufferControl bufferControl=getBufferControl(inputStreams[0]);
    long bufferLength=(bufferControl == null) ? CachingPushBufferStream.DEFAULT_BUFFER_LENGTH : bufferControl.getBufferLength();
    for (int i=1; i < inputStreams.length; i++) {
      BufferControl inputStreamBufferControl=getBufferControl(inputStreams[i]);
      if (inputStreamBufferControl != null)       inputStreamBufferControl.setBufferLength(bufferLength);
    }
  }
}
