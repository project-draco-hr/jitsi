{
  Object data=buffer.getData();
  int[] intArray;
  if (data instanceof int[]) {
    intArray=(int[])data;
    if (intArray.length < newSize) {
      deallocateIntArray(intArray);
      intArray=null;
    }
  }
 else   intArray=null;
  if (intArray == null) {
    intArray=allocateIntArray(newSize);
    buffer.setData(intArray);
  }
  return intArray;
}
