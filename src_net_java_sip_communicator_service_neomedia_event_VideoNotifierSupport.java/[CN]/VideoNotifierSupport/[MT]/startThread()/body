{
  thread=new Thread("VideoNotifierSupportThread"){
    @Override public void run(){
      try {
        runInThread();
      }
  finally {
synchronized (events) {
          if (Thread.currentThread().equals(thread)) {
            thread=null;
            if (events.isEmpty())             events.notify();
 else             startThread();
          }
        }
      }
    }
  }
;
  thread.setDaemon(true);
  thread.start();
}
