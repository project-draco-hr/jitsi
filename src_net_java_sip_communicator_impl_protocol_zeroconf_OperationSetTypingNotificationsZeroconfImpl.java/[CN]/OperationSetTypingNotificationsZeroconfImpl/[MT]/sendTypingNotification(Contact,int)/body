{
  if (!(notifiedContact instanceof ContactZeroconfImpl))   throw new IllegalArgumentException("The specified contact is not a Zeroconf contact." + notifiedContact);
  ContactZeroconfImpl to=(ContactZeroconfImpl)notifiedContact;
  ClientThread thread=to.getClientThread();
  if (thread == null)   return;
  if (typingState != STATE_TYPING)   return;
  MessageZeroconfImpl message=new MessageZeroconfImpl("",null,MessageZeroconfImpl.TYPING);
  thread.sendMessage(message);
}
