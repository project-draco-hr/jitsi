{
  isRunning=true;
  if (!(mediaStream instanceof AudioMediaStreamImpl))   return;
  long[][] temp=null;
  while (isRunning) {
synchronized (this) {
      if (lastReportedLevels == null) {
        try {
          wait();
        }
 catch (        InterruptedException ie) {
        }
      }
      temp=lastReportedLevels;
      lastReportedLevels=null;
    }
    if (temp != null) {
      if (mediaStream != null) {
        ((AudioMediaStreamImpl)mediaStream).fireConferenceAudioLevelEvent(temp);
      }
    }
  }
}
