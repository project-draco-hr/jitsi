{
  if (e.getSource().equals(okButton)) {
    OperationSetAutoAnswer opset=providerService.getOperationSet(OperationSetAutoAnswer.class);
    if (noneRadio.isSelected()) {
      opset.clear();
    }
 else     if (alwaysAnswerRadio.isSelected()) {
      opset.setAutoAnswerUnconditional();
    }
 else     if (alertInfoValue.isSelected()) {
      opset.setAutoAnswerCondition(AUTO_ALERT_INFO_NAME,AUTO_ALERT_INFO_VALUE);
    }
 else     if (customValueRadio.isSelected()) {
      opset.setAutoAnswerCondition(headerNameField.getText(),headerValueField.getText());
    }
 else     if (callFwd.isSelected()) {
      opset.setCallForward(callFwdNumberField.getText());
    }
  }
  dispose();
}
