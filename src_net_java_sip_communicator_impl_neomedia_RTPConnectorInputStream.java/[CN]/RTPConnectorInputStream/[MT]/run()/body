{
  while (!closed) {
    DatagramPacket p=new DatagramPacket(buffer,0,PACKET_RECEIVE_BUFFER);
    try {
      socket.receive(p);
    }
 catch (    IOException e) {
      ioError=true;
      break;
    }
    pkt=createRawPacket(p);
    if ((pkt != null) && (transferHandler != null) && !closed)     transferHandler.transferData(this);
  }
}
