{
  if (encodingConfiguration == null) {
    encodingConfiguration=getNewEncodingConfiguration();
    encodingConfiguration.loadConfig();
  }
  if (mediaType == MediaType.AUDIO) {
    return createEncodingControls(DeviceConfigurationComboBoxModel.AUDIO,encodingConfiguration,autoUpdateConfig);
  }
 else   if (mediaType == MediaType.VIDEO) {
    return createEncodingControls(DeviceConfigurationComboBoxModel.VIDEO,encodingConfiguration,autoUpdateConfig);
  }
  throw new IllegalArgumentException();
}
