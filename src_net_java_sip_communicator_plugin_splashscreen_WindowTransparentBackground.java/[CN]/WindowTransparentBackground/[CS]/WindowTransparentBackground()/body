{
  try {
    robot=new Robot();
    bgImage=ImageIO.read(WindowBackground.class.getResource("aboutWindowBackground.png"));
    bgWidth=bgImage.getWidth(null);
    bgHeight=bgImage.getHeight(null);
    bgX=Toolkit.getDefaultToolkit().getScreenSize().width / 2 - bgWidth / 2;
    bgY=Toolkit.getDefaultToolkit().getScreenSize().width / 2 - bgHeight / 2;
  }
 catch (  AWTException e) {
    e.printStackTrace();
    return;
  }
catch (  IOException e) {
    e.printStackTrace();
    return;
  }
  this.updateBackground(bgX,bgY,bgWidth,bgHeight);
  refreshBgTimer=new Timer(4000,this);
  refreshBgTimer.setRepeats(true);
  refreshBgTimer.start();
}
