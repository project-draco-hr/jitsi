{
  if (menu instanceof Container) {
    JMenuItem menuItem=new JMenuItem(text);
    menuItem.addActionListener(this);
    ((Container)menu).add(menuItem);
    return menuItem;
  }
 else {
    MenuItem menuItem=new MenuItem(text);
    menuItem.addActionListener(this);
    ((Menu)menu).add(menuItem);
    return menuItem;
  }
}
