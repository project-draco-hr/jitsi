{
  long contentLength=0;
  if (inputStreams != null)   for (  InputStreamDesc inputStreamDesc : inputStreams) {
    long inputContentLength=inputStreamDesc.getInputStream().getContentLength();
    if (LENGTH_UNKNOWN == inputContentLength)     return LENGTH_UNKNOWN;
    if (contentLength < inputContentLength)     contentLength=inputContentLength;
  }
  return contentLength;
}
