{
  if ((inputStreams == null) || (inputStreams.length <= 0))   return;
  boolean transferHandlerIsSet=false;
  for (  InputStreamDesc inputStreamDesc : inputStreams) {
    SourceStream inputStream=inputStreamDesc.getInputStream();
    if (inputStream instanceof PushBufferStream) {
      BufferTransferHandler inputStreamTransferHandler;
      PushBufferStream inputPushBufferStream=(PushBufferStream)inputStream;
      if (transferHandler == null)       inputStreamTransferHandler=null;
 else       if (transferHandlerIsSet)       inputStreamTransferHandler=new BufferTransferHandler(){
        public void transferData(        PushBufferStream stream){
        }
      }
;
 else       inputStreamTransferHandler=new StreamSubstituteBufferTransferHandler(transferHandler,inputPushBufferStream,this);
      inputPushBufferStream.setTransferHandler(inputStreamTransferHandler);
      transferHandlerIsSet=true;
    }
  }
}
