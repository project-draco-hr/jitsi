{
synchronized (inputDataSources) {
    if (connected == 0) {
      for (      InputDataSourceDesc inputDataSourceDesc : inputDataSources) {
        DataSource effectiveInputDataSource=inputDataSourceDesc.getEffectiveInputDataSource();
        DataSource inputDataSource=inputDataSourceDesc.inputDataSource;
        try {
          connect(effectiveInputDataSource,inputDataSource);
        }
 catch (        IOException ioe) {
          logger.error("Failed to connect to inputDataSource " + MediaStreamImpl.toString(inputDataSource),ioe);
          throw ioe;
        }
      }
    }
    connected++;
  }
}
