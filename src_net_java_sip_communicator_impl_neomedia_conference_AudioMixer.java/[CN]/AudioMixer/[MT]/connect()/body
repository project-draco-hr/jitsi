{
synchronized (inputDataSources) {
    if (connected == 0) {
      for (      InputDataSourceDesc inputDataSourceDesc : inputDataSources)       try {
        inputDataSourceDesc.connect(this);
      }
 catch (      IOException ioe) {
        logger.error("Failed to connect to inputDataSource " + MediaStreamImpl.toString(inputDataSourceDesc.inputDataSource),ioe);
        throw ioe;
      }
      if (outputStream != null)       outputStream.equalizeInputStreamBufferLength();
    }
    connected++;
  }
}
