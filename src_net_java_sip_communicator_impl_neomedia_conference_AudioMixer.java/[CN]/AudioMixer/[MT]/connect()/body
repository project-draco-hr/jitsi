{
synchronized (inputDataSources) {
    if (connected == 0)     for (    InputDataSourceDesc inputDataSourceDesc : inputDataSources)     try {
      connect(inputDataSourceDesc.getEffectiveInputDataSource(),inputDataSourceDesc.inputDataSource);
    }
 catch (    IOException ioe) {
      logger.error("Failed to connect to inputDataSource " + MediaStreamImpl.toString(inputDataSourceDesc.inputDataSource),ioe);
      throw ioe;
    }
    connected++;
  }
}
