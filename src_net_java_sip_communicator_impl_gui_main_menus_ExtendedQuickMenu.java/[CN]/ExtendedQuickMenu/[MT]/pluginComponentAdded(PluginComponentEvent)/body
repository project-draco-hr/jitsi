{
  PluginComponent component=event.getPluginComponent();
  if (!component.getContainer().equals(Container.CONTAINER_MAIN_TOOL_BAR))   return;
  boolean added=addPluginComponent(component,mainFrame.getContactListPanel().getContactList().getSelectedValue());
  if (added) {
    this.revalidate();
    this.repaint();
  }
}
