{
  if ((e.getFirstIndex() != -1) || (e.getLastIndex() != -1)) {
    for (    PluginComponent plugin : pluginsTable.keySet()) {
      Object selectedValue=mainFrame.getContactListPanel().getContactList().getSelectedValue();
      if (selectedValue instanceof MetaContact) {
        plugin.setCurrentContact((MetaContact)selectedValue);
      }
 else       if (selectedValue instanceof MetaContactGroup) {
        plugin.setCurrentContactGroup((MetaContactGroup)selectedValue);
      }
    }
  }
}
