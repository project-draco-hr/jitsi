{
  StringBuffer stringBuffer=new StringBuffer();
  stringBuffer.append("<html><body><p align=\"left\">" + "<font color=\"" + fontColor + "\" size=\"3\">");
  stringBuffer.append(getLineString(resources.getI18NString("service.gui.callinfo.CALL_INFORMATION"),""));
  stringBuffer.append(getLineString(resources.getI18NString("service.gui.callinfo.CALL_IDENTITY"),call.getProtocolProvider().getAccountID().getDisplayName()));
  int callPeerCount=call.getCallPeerCount();
  if (call.getCallPeerCount() > 1)   stringBuffer.append(getLineString(resources.getI18NString("service.gui.callinfo.PEER_COUNT"),String.valueOf(callPeerCount)));
  boolean isConfFocus=call.isConferenceFocus();
  if (isConfFocus)   stringBuffer.append(getLineString(resources.getI18NString("service.gui.callinfo.IS_CONFERENCE_FOCUS"),String.valueOf(isConfFocus)));
  String preferredTransport=call.getProtocolProvider().getAccountID().getAccountPropertyString(ProtocolProviderFactory.PREFERRED_TRANSPORT);
  if (preferredTransport != null && preferredTransport.length() > 0)   stringBuffer.append(getLineString(resources.getI18NString("service.gui.callinfo.CALL_TRANSPORT"),preferredTransport));
  constructCallPeersInfo(stringBuffer);
  stringBuffer.append("</font></p></body></html>");
  infoTextPane.setText(stringBuffer.toString());
  infoTextPane.revalidate();
  infoTextPane.repaint();
}
