{
  ConfigurationService cfg=NeomediaActivator.getConfigurationService();
  if (((cfg == null) || !cfg.getBoolean(MediaServiceImpl.DISABLE_AUDIO_SUPPORT_PNAME,false)) && !Boolean.getBoolean(MediaServiceImpl.DISABLE_AUDIO_SUPPORT_PNAME)) {
    if (logger.isInfoEnabled())     logger.info("Initializing audio devices");
    initializeDeviceSystems(MediaType.AUDIO);
  }
  if ((cfg == null) || !cfg.getBoolean(MediaServiceImpl.DISABLE_VIDEO_SUPPORT_PNAME,false)) {
    if (logger.isInfoEnabled())     logger.info("Initializing video devices");
    initializeDeviceSystems(MediaType.VIDEO);
  }
}
