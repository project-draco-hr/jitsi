{
  String className=getRendererClassName();
  if (className != null) {
    try {
      return (Renderer)Class.forName(className).newInstance();
    }
 catch (    Throwable t) {
      if (t instanceof ThreadDeath)       throw (ThreadDeath)t;
 else       logger.warn("Failed to initialize a new " + className + " instance",t);
    }
  }
  return null;
}
