{
  try {
    int severity=event.getEventSeverity();
    String messageTitle=null;
switch (severity) {
case CallPeerSecurityMessageEvent.INFORMATION:
{
        messageTitle=NotificationActivator.getResources().getI18NString("service.gui.SECURITY_INFO");
        break;
      }
case CallPeerSecurityMessageEvent.WARNING:
{
      messageTitle=NotificationActivator.getResources().getI18NString("service.gui.SECURITY_WARNING");
      break;
    }
case CallPeerSecurityMessageEvent.SEVERE:
case CallPeerSecurityMessageEvent.ERROR:
{
    messageTitle=NotificationActivator.getResources().getI18NString("service.gui.SECURITY_ERROR");
    NotificationManager.fireNotification(NotificationService.CALL_SECURITY_ERROR);
  }
}
NotificationManager.fireNotification(NotificationService.SECURITY_MESSAGE,messageTitle,event.getI18nMessage());
}
 catch (Throwable t) {
logger.error("Error notifying for security message received",t);
}
}
