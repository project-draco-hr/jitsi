{
  super.paintComponent(g);
  g=g.create();
  AntialiasingManager.activateAntialiasing(g);
  try {
    if (isFullScreen)     g.setColor(settingsFullScreenColor);
 else     g.setColor(settingsColor);
    g.fillRoundRect(0,0,getWidth(),getHeight(),8,8);
    int x=CallToolBarButton.DEFAULT_WIDTH + TOOL_BAR_BORDER + TOOL_BAR_X_GAP;
    while (x < getWidth() - TOOL_BAR_BORDER - TOOL_BAR_X_GAP) {
      g.drawImage(buttonSeparatorImage,x + 1,(getHeight() - buttonSeparatorImage.getHeight(this)) / 2,this);
      x+=CallToolBarButton.DEFAULT_WIDTH + TOOL_BAR_X_GAP;
    }
  }
  finally {
    g.dispose();
  }
}
