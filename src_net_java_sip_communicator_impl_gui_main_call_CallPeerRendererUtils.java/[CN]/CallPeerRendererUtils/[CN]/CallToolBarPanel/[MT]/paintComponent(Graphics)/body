{
  super.paintComponent(g);
  g=g.create();
  AntialiasingManager.activateAntialiasing(g);
  try {
    if (isIncomingCall) {
      g.setColor(toolbarInCallShadowColor);
      g.drawRoundRect(0,0,getWidth() - 1,getHeight() - 2,10,10);
      g.setColor(toolbarInCallBorderColor);
      g.drawRoundRect(0,0,getWidth() - 1,getHeight() - 3,10,10);
    }
 else {
      if (isFullScreen)       g.setColor(toolbarFullScreenColor);
 else       g.setColor(toolbarColor);
      g.fillRoundRect(0,0,getWidth(),getHeight(),10,10);
    }
    if (!isFullScreen) {
      int x=CallToolBarButton.DEFAULT_WIDTH + TOOL_BAR_BORDER + TOOL_BAR_X_GAP;
      while (x < getWidth() - TOOL_BAR_BORDER - TOOL_BAR_X_GAP) {
        separatorImage=(isIncomingCall) ? buttonDarkSeparatorImage : buttonSeparatorImage;
        g.drawImage(separatorImage,x + 1,(getHeight() - separatorImage.getHeight(this)) / 2,this);
        x+=CallToolBarButton.DEFAULT_WIDTH + TOOL_BAR_X_GAP;
      }
    }
  }
  finally {
    g.dispose();
  }
}
