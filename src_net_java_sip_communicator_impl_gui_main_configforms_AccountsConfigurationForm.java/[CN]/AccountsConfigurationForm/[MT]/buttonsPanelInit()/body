{
  this.newButton.addActionListener(this);
  this.modifyButton.addActionListener(this);
  this.removeButton.addActionListener(this);
  this.newButton.setMnemonic(Messages.getString("mnemonic.newAccount").charAt(0));
  this.modifyButton.setMnemonic(Messages.getString("mnemonic.modifyAccount").charAt(0));
  this.removeButton.setMnemonic(Messages.getString("mnemonic.removeAccount").charAt(0));
  this.buttonsPanel.add(newButton);
  this.buttonsPanel.add(modifyButton);
  this.buttonsPanel.add(removeButton);
  this.rightPanel.setBorder(BorderFactory.createEmptyBorder(5,5,5,5));
  this.rightPanel.add(buttonsPanel,BorderLayout.NORTH);
}
