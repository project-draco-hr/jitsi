{
  if (started)   return;
  if (!connected)   throw new IOException("DataSource must be connected");
  try {
    stream.start();
  }
 catch (  PortAudioException pae) {
    IOException ioe=new IOException();
    ioe.initCause(pae);
    throw ioe;
  }
  started=true;
  if (logger.isTraceEnabled())   logger.trace("Started " + MediaStreamImpl.toString(this));
}
