{
  MediaLocator locator;
  if (playback)   locator=null;
 else {
    CaptureDeviceInfo notifyDevice=getNotifyDevice();
    if (notifyDevice == null)     return null;
 else     locator=notifyDevice.getLocator();
  }
  PulseAudioRenderer renderer=new PulseAudioRenderer(playback ? MEDIA_ROLE_PHONE : MEDIA_ROLE_EVENT);
  if ((renderer != null) && (locator != null))   renderer.setLocator(locator);
  return renderer;
}
