{
  DataSource captureDevice=getDevice().createOutputDataSource();
  if (captureDevice instanceof PushBufferDataSource) {
    MutePushBufferDataSource mutePushBufferDataSource=new MutePushBufferDataSource((PushBufferDataSource)captureDevice);
    mutePushBufferDataSource.setMute(mute);
    captureDevice=mutePushBufferDataSource;
  }
 else   if (captureDevice instanceof PullBufferDataSource) {
    MutePullBufferDataSource mutePullBufferDataSource=new MutePullBufferDataSource((PullBufferDataSource)captureDevice);
    mutePullBufferDataSource.setMute(mute);
    captureDevice=mutePullBufferDataSource;
  }
  return captureDevice;
}
