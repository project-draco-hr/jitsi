{
  DataSource captureDevice=getDevice().createOutputDataSource();
  if (captureDevice instanceof PushBufferDataSource) {
    captureDevice=new MutePushBufferDataSource((PushBufferDataSource)captureDevice);
  }
 else   if (captureDevice instanceof PullBufferDataSource) {
    captureDevice=new MutePullBufferDataSource((PullBufferDataSource)captureDevice);
  }
  if (captureDevice instanceof MuteDataSource)   ((MuteDataSource)captureDevice).setMute(mute);
  return captureDevice;
}
