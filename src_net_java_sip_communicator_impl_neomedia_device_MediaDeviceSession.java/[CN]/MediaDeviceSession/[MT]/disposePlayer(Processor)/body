{
synchronized (players) {
    Iterator<Map.Entry<DataSource,Processor>> playerIter=players.entrySet().iterator();
    while (playerIter.hasNext())     if (playerIter.next().getValue().equals(player)) {
      playerIter.remove();
      break;
    }
    if (playerControllerListener != null)     player.removeControllerListener(playerControllerListener);
    player.stop();
    player.deallocate();
    player.close();
  }
}
