{
  MultiUserChatServerWrapper serverWrapper=findServerWrapperFromProvider(chatRoomWrapper.getParentProvider());
  int parentIndex=listModel.indexOf(serverWrapper);
  boolean inserted=false;
  if (parentIndex != -1) {
    for (int i=parentIndex + 1; i < listModel.getSize(); i++) {
      Object element=listModel.get(i);
      if (element instanceof MultiUserChatServerWrapper) {
        listModel.insertElementAt(chatRoomWrapper,i);
        inserted=true;
        break;
      }
    }
    if (!inserted)     listModel.addElement(chatRoomWrapper);
  }
  ConfigurationManager.saveChatRoom(chatRoomWrapper.getParentProvider(),chatRoomWrapper.getChatRoomID(),chatRoomWrapper.getChatRoomID(),chatRoomWrapper.getChatRoomName());
  this.refresh();
}
