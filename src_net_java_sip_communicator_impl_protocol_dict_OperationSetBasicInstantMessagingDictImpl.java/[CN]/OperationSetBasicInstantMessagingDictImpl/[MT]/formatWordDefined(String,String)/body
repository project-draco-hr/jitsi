{
  String tmpWord;
  tmpWord=word.toUpperCase();
  result=result.replaceAll("\\b" + tmpWord + "\\b","<strong>" + tmpWord + "</strong>");
  tmpWord=word.toLowerCase();
  result=result.replaceAll("\\b" + tmpWord + "\\b","<strong>" + tmpWord + "</strong>");
  if (tmpWord.length() > 1) {
    tmpWord=tmpWord.substring(0,1).toUpperCase() + tmpWord.substring(1);
    result=result.replaceAll("\\b" + tmpWord + "\\b","<strong>" + tmpWord + "</strong>");
  }
  return result;
}
