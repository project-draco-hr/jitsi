{
  Graphics g=drawCanvas.getGraphics();
  g.setColor(currentColor);
  if (doneDrawing) {
    reInitMouse(e);
    doneDrawing=false;
  }
  if (hasMouseMoved(e)) {
    g.setXORMode(xorColor);
    g.drawOval(drawX,drawY,originWidth,originHeight);
    mouseX=snapToX(e.getX());
    mouseY=snapToY(e.getY());
    setActualBoundry();
    g.drawOval(drawX,drawY,originWidth,originHeight);
  }
}
