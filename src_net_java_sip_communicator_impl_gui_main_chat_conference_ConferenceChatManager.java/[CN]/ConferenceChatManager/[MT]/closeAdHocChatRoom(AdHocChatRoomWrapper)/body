{
  final ChatWindowManager chatWindowManager=GuiActivator.getUIService().getChatWindowManager();
  if (chatWindowManager.isChatOpenedForAdHocChatRoom(chatRoomWrapper)) {
    final ChatPanel chatPanel=chatWindowManager.getAdHocMultiChat(chatRoomWrapper);
    SwingUtilities.invokeLater(new Runnable(){
      public void run(){
        chatWindowManager.closeChat(chatPanel);
      }
    }
);
  }
}
