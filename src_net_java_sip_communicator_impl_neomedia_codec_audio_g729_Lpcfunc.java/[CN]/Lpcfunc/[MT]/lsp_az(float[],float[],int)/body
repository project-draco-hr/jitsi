{
  int M=Ld8k.M;
  int NC=Ld8k.NC;
  float[] f1=new float[NC + 1], f2=new float[NC + 1];
  int i, j;
  get_lsp_pol(lsp,0,f1);
  get_lsp_pol(lsp,1,f2);
  for (i=NC; i > 0; i--) {
    f1[i]+=f1[i - 1];
    f2[i]-=f2[i - 1];
  }
  a[a_offset + 0]=1.0f;
  for (i=1, j=M; i <= NC; i++, j--) {
    a[a_offset + i]=0.5f * (f1[i] + f2[i]);
    a[a_offset + j]=0.5f * (f1[i] - f2[i]);
  }
}
