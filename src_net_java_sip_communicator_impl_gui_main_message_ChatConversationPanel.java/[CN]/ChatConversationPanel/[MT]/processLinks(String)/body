{
  String msgString=message;
  Pattern p=Pattern.compile("(\\bwww\\.\\S+\\.\\S+\\b)");
  Pattern p1=Pattern.compile("(\\b\\w+://\\S+\\b)");
  Matcher m=p.matcher(message);
  Matcher m1=p1.matcher(message);
  while (m.find()) {
    msgString=msgString.replaceAll(m.group().trim(),"<A href='" + "http://" + m.group() + "'>"+ m.group()+ "</A>");
  }
  while (m1.find()) {
    msgString=msgString.replaceAll(m1.group().trim(),"<A href='" + m1.group() + "'>"+ m1.group()+ "</A>");
  }
  return msgString;
}
