{
  Element root=this.document.getDefaultRootElement();
  Calendar calendar=Calendar.getInstance();
  String chatHeader="<h1>" + calendar.get(Calendar.DAY_OF_MONTH) + "/"+ calendar.get(Calendar.MONTH)+ 1+ "/"+ calendar.get(Calendar.YEAR)+ " "+ "</h1>";
  try {
    this.document.insertAfterStart(root,chatHeader);
  }
 catch (  BadLocationException e) {
    e.printStackTrace();
  }
catch (  IOException e) {
    e.printStackTrace();
  }
}
