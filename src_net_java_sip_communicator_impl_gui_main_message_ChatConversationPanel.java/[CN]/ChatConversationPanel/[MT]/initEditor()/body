{
  Element root=this.document.getDefaultRootElement();
  Calendar calendar=Calendar.getInstance();
  String chatHeader="<h1>" + this.processTime(calendar.get(Calendar.DAY_OF_MONTH)) + "/"+ this.processTime(calendar.get(Calendar.MONTH) + 1)+ "/"+ this.processTime(calendar.get(Calendar.YEAR))+ " "+ "</h1>";
  try {
    this.document.insertAfterStart(root,chatHeader);
  }
 catch (  BadLocationException e) {
    e.printStackTrace();
  }
catch (  IOException e) {
    e.printStackTrace();
  }
}
