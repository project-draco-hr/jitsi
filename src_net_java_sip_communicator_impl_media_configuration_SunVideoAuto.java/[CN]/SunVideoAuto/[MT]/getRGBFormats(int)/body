{
  if (!xilCap.setCompress("RGB"))   return;
  for (int i=0; i < scales.length; i++) {
    xilCap.setScale(scales[i]);
    if (xilCap.start()) {
      Dimension size=new Dimension(xilCap.getWidth(),xilCap.getHeight());
      int stride=xilCap.getLineStride();
      int maxbuf=stride * size.width;
      addFormat(new RGBFormat(size,maxbuf,byte[].class,15f,24,3,2,1,3,stride,Format.FALSE,Format.NOT_SPECIFIED));
    }
    xilCap.stop();
  }
}
