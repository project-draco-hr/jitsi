{
  xilCap=new XILCapture(null);
  VideoFormat vf;
  formats=new Vector();
  boolean gotPort=false;
  if (!xilCap.connect(index)) {
    dummyDevice(index);
    return;
  }
  for (int i=0; i < ports.length; i++) {
    if (xilCap.setPort(ports[i])) {
      getJpegFormats(i);
      getRGBFormats(i);
    }
  }
  xilCap.disconnect();
  if (formats.size() > 0)   addDevice(index);
 else   dummyDevice(index);
}
