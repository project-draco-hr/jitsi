{
  for (  Object value : values) {
    if (value instanceof String) {
      if (query.matcher((String)value).find())       return true;
    }
 else     if (value instanceof Object[]) {
      for (      Object subValue : (Object[])value) {
        if ((subValue instanceof String) && query.matcher((String)subValue).find())         return true;
      }
    }
  }
  return false;
}
