{
  audioPanel.remove(audioControls);
  videoPanel.remove(videoControls);
  audioControls=mediaConfiguration.createEncodingControls(MediaType.AUDIO,encodingConfiguration,false);
  videoControls=mediaConfiguration.createEncodingControls(MediaType.VIDEO,encodingConfiguration,false);
  audioPanel.add(audioControls);
  videoPanel.add(videoControls);
}
