{
  if (!enableAdvOpButton.isSelected()) {
    String uin=uinField.getText();
    int delimIndex=uin.indexOf("@");
    if (delimIndex != -1) {
      String newServerAddr=uin.substring(delimIndex + 1);
      if (newServerAddr.equals(GOOGLE_USER_SUFFIX))       serverField.setText(GOOGLE_CONNECT_SRV);
 else       serverField.setText(newServerAddr);
    }
  }
}
