{
  AccountID accountID=protocolProvider.getAccountID();
  String password=accountID.getAccountPropertyString(ProtocolProviderFactory.PASSWORD);
  this.uinField.setText(accountID.getUserID());
  this.uinField.setEnabled(false);
  if (password != null) {
    this.passField.setText(password);
    this.rememberPassBox.setSelected(true);
  }
  String proxyAddress=accountID.getAccountPropertyString(ProtocolProviderFactory.PROXY_ADDRESS);
  String proxyPort=accountID.getAccountPropertyString(ProtocolProviderFactory.PROXY_PORT);
  String proxyType=accountID.getAccountPropertyString(ProtocolProviderFactory.PROXY_TYPE);
  String proxyUsername=accountID.getAccountPropertyString(ProtocolProviderFactory.PROXY_USERNAME);
  String proxyPassword=accountID.getAccountPropertyString(ProtocolProviderFactory.PROXY_PASSWORD);
  if (proxyAddress != null || proxyPort != null || proxyType != null || proxyUsername != null || proxyPassword != null) {
    enableAdvOpButton.setSelected(true);
  }
  proxyField.setText(proxyAddress);
  proxyPortField.setText(proxyPort);
  proxyTypeCombo.setSelectedItem(proxyType);
  proxyUsernameField.setText(proxyUsername);
  proxyPassField.setText(proxyPassword);
}
