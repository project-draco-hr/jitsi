{
  DataSource effectiveCaptureDevice=captureDevice;
  if (captureDevice instanceof PushBufferDataSourceDelegate<?>)   captureDevice=((PushBufferDataSourceDelegate<?>)captureDevice).getDataSource();
  if (captureDevice instanceof AudioMixingPushBufferDataSource)   effectiveCaptureDevice.connect();
 else   device.connect(effectiveCaptureDevice);
}
