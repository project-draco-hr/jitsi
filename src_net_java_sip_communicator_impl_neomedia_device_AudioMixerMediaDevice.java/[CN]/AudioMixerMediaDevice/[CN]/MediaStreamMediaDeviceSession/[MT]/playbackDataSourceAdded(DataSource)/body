{
  super.playbackDataSourceAdded(playbackDataSource);
  DataSource captureDevice=getCaptureDevice();
  if (captureDevice instanceof PushBufferDataSourceDelegate<?>)   captureDevice=((PushBufferDataSourceDelegate<?>)captureDevice).getDataSource();
  if (captureDevice instanceof AudioMixingPushBufferDataSource)   ((AudioMixingPushBufferDataSource)captureDevice).addInputDataSource(playbackDataSource);
  audioMixerMediaDeviceSession.addPlaybackDataSource(playbackDataSource);
}
