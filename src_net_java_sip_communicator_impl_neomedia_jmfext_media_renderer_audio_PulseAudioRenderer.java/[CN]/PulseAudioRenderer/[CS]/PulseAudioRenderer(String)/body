{
  pulseAudioSystem=PulseAudioSystem.getPulseAudioSystem();
  if (pulseAudioSystem == null)   throw new IllegalStateException("pulseAudioSystem");
  this.mediaRole=(mediaRole == null) ? PulseAudioSystem.MEDIA_ROLE_PHONE : mediaRole;
  gainControl=PulseAudioSystem.MEDIA_ROLE_PHONE.equals(this.mediaRole) ? (GainControl)NeomediaActivator.getMediaServiceImpl().getOutputVolumeControl() : null;
}
