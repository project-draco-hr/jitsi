{
  pulseAudioSystem=PulseAudioSystem.getPulseAudioSystem();
  if (pulseAudioSystem == null)   throw new IllegalStateException("pulseAudioSystem");
  this.mediaRole=(mediaRole == null) ? PulseAudioSystem.MEDIA_ROLE_PHONE : mediaRole;
  if (PulseAudioSystem.MEDIA_ROLE_PHONE.equals(this.mediaRole)) {
    MediaServiceImpl mediaServiceImpl=NeomediaActivator.getMediaServiceImpl();
    gainControl=(mediaServiceImpl == null) ? null : (GainControl)mediaServiceImpl.getOutputVolumeControl();
  }
 else   gainControl=null;
}
