{
  SIPCommTabbedPane container=new SIPCommTabbedPane();
  Component pnlDeviceAndDetails=createBasicControls(type);
  ResourceManagementService R=NeomediaActivator.getResources();
  container.insertTab(R.getI18NString("impl.media.configform.DEVICES"),null,pnlDeviceAndDetails,null,0);
  container.insertTab(R.getI18NString("impl.media.configform.ENCODINGS"),null,createEncodingControls(type),null,1);
  if (type == DeviceConfigurationComboBoxModel.VIDEO)   container.insertTab(R.getI18NString("impl.media.configform.VIDEO_MORE_SETTINGS"),null,createVideoAdvancedSettings(),null,2);
  return container;
}
