{
  videoContainer.removeAll();
  videoContainer.revalidate();
  videoContainer.repaint();
  if (device == null)   return;
  Iterable<MediaDevice> devs=mediaService.getDevices(MediaType.VIDEO,MediaUseCase.ANY);
  for (  MediaDevice dev : devs) {
    if (((MediaDeviceImpl)dev).getCaptureDeviceInfo().equals(device)) {
      Dimension videoContainerSize=videoContainer.getSize();
      Component preview=(Component)mediaService.getVideoPreviewComponent(dev,videoContainerSize.width,videoContainerSize.height);
      videoContainer.add(preview);
      break;
    }
  }
}
