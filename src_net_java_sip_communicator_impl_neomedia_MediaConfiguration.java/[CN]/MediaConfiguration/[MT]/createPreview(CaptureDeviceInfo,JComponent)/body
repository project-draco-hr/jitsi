{
  videoContainer.removeAll();
  videoContainer.revalidate();
  videoContainer.repaint();
  if (device == null)   return;
  Iterator<MediaDevice> mDevsIter=NeomediaActivator.getMediaServiceImpl().getDevices(MediaType.VIDEO,MediaUseCase.ANY).iterator();
  while (mDevsIter.hasNext()) {
    MediaDeviceImpl dev=(MediaDeviceImpl)mDevsIter.next();
    if (dev.getCaptureDeviceInfo().equals(device)) {
      Component c=(Component)NeomediaActivator.getMediaServiceImpl().getVideoPreviewComponent(dev,videoContainer.getSize().width,videoContainer.getSize().height);
      videoContainer.add(c);
      break;
    }
  }
}
