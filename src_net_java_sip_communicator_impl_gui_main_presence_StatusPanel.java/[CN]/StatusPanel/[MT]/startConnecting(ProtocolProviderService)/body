{
  StatusSelectorBox selectorBox=(StatusSelectorBox)protocolStatusCombos.get(protocolProvider);
  BufferedImage[] animatedImage=ImageLoader.getAnimatedImage(protocolProvider.getProtocolIcon().getConnectingIcon());
  if (animatedImage != null && animatedImage.length > 0)   selectorBox.startConnecting(animatedImage);
 else   selectorBox.setSelectedIcon(new ImageIcon(protocolProvider.getProtocolIcon().getIcon(ProtocolIcon.ICON_SIZE_16x16)));
  selectorBox.repaint();
}
