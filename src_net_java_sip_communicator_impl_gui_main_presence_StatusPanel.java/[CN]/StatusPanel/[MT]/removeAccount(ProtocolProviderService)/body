{
  StatusSelectorBox protocolStatusCombo=(StatusSelectorBox)this.protocolStatusCombos.get(pps);
  boolean isHidden=pps.getAccountID().getAccountProperties().get(ProtocolProviderFactory.IS_PROTOCOL_HIDDEN) != null;
  if (isHidden)   hiddenProviders--;
  this.protocolStatusCombos.remove(pps);
  if (protocolStatusCombos.size() - hiddenProviders == 1 && globalStatusBox != null) {
    this.remove(globalStatusBox);
  }
  if (protocolStatusCombo == null)   return;
  this.remove(protocolStatusCombo);
  this.revalidate();
  this.repaint();
}
