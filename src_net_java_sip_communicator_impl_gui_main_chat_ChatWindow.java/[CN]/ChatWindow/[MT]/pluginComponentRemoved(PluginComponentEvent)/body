{
  PluginComponent c=event.getPluginComponent();
  if (c.getContainer().equals(Container.CONTAINER_CHAT_WINDOW)) {
    Object borderLayoutConstraint=UIServiceImpl.getBorderLayoutConstraintsFromContainer(c.getConstraints());
    this.removePluginComponent((Component)c.getComponent(),borderLayoutConstraint);
    this.pack();
  }
}
