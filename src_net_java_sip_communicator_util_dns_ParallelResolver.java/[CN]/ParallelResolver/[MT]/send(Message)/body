{
  ParallelResolverListener parallelResolveListener=new ParallelResolverListener();
  defaultResolver.sendAsync(query,parallelResolveListener);
  if (!panicMode) {
    Message response=parallelResolveListener.waitForResponse(patience);
    if (response != null)     return response;
  }
  panicMode=true;
  return null;
}
