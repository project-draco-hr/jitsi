{
  Object source=e.getSource();
  if (source.equals(enableCheckBox)) {
    PacketLoggingActivator.setGlobalLoggingEnabled(enableCheckBox.isSelected());
    updateButtonsState();
  }
 else   if (source.equals(sipProtocolCheckBox)) {
    PacketLoggingActivator.setSipLoggingEnabled(sipProtocolCheckBox.isSelected());
  }
 else   if (source.equals(jabberProtocolCheckBox)) {
    PacketLoggingActivator.setJabberLoggingEnabled(jabberProtocolCheckBox.isSelected());
  }
 else   if (source.equals(rtpProtocolCheckBox)) {
    PacketLoggingActivator.setRTPLoggingEnabled(rtpProtocolCheckBox.isSelected());
  }
}
