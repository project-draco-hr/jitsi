{
  if (constraints.equals(BorderLayout.SOUTH)) {
    if (pluginPanelSouth.getComponentCount() == 0)     pluginPanelSouth.setBorder(BorderFactory.createEmptyBorder(5,5,5,5));
    pluginPanelSouth.add(c);
    pluginPanelSouth.repaint();
  }
 else   if (constraints.equals(BorderLayout.WEST)) {
    if (pluginPanelWest.getComponentCount() == 0)     pluginPanelWest.setBorder(BorderFactory.createEmptyBorder(5,5,5,5));
    pluginPanelWest.add(c);
    pluginPanelSouth.repaint();
  }
 else   if (constraints.equals(BorderLayout.EAST)) {
    if (pluginPanelEast.getComponentCount() == 0)     pluginPanelEast.setBorder(BorderFactory.createEmptyBorder(5,5,5,5));
    pluginPanelEast.add(c);
    pluginPanelSouth.repaint();
  }
  this.getContentPane().repaint();
}
