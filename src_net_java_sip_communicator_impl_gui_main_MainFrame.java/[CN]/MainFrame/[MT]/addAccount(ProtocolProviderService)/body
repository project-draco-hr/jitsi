{
  if (!accountStatusPanel.containsAccount(protocolProvider)) {
    logger.trace("Add the following account to the status bar: " + protocolProvider.getAccountID().getAccountAddress());
    accountStatusPanel.addAccount(protocolProvider);
    this.contactListPanel.getContactList().requestFocus();
  }
  if (!mainCallPanel.containsCallAccount(protocolProvider) && getTelephonyOpSet(protocolProvider) != null) {
    mainCallPanel.addCallAccount(protocolProvider);
  }
}
