{
  ActionMenuGlassPane glassPane=new ActionMenuGlassPane();
  ActionMenuPanel actionMenuPanel=new ActionMenuPanel();
  glassPane.add(actionMenuPanel);
  if (isVisible() && rootPane != null)   rootPane.setGlassPane(glassPane);
  FadeTracker fadeTracker=FadeTracker.getInstance();
  if (!glassPane.isVisible()) {
    fadeTracker.trackFadeIn(AnimationUtils.SLIDE_ANIMATION,actionMenuPanel,null,true,new MenuRepaintCallback(actionMenuPanel),AnimationKind.REGULAR);
    actionMenuPanel.setSlideIn(true);
  }
 else {
    fadeTracker.trackFadeOut(AnimationUtils.SLIDE_ANIMATION,actionMenuPanel,null,true,new MenuRepaintCallback(actionMenuPanel),AnimationKind.REGULAR);
    actionMenuPanel.setSlideIn(false);
  }
  glassPane.setVisible(!glassPane.isVisible());
}
