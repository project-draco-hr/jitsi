{
  ContactListPanel clistPanel=tabbedPane.getContactListPanel();
  Contact sourceContact=evt.getSourceContact();
  MetaContact metaContact=contactList.findMetaContactByContact(sourceContact);
  if (metaContact != null && (evt.getOldStatus() != evt.getNewStatus())) {
    clistPanel.getContactList().refreshContact(metaContact);
    if (chatWindowManager.isChatOpenedForContact(metaContact)) {
      MetaContactChatPanel chatPanel=chatWindowManager.getContactChat(metaContact);
      chatPanel.updateContactStatus(sourceContact,evt.getNewStatus());
    }
  }
}
