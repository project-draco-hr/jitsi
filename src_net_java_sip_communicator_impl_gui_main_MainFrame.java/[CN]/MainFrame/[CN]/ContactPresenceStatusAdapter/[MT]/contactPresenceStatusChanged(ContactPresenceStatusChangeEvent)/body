{
  MetaContact metaContact=contactList.findMetaContactByContact(evt.getSourceContact());
  if (metaContact != null) {
    ContactListModel model=(ContactListModel)tabbedPane.getContactListPanel().getContactList().getModel();
    MetaContactNode node=model.getContactNodeByContact(metaContact);
    if (node != null) {
      node.setStatusIcon(new ImageIcon(Constants.getStatusIcon(evt.getNewStatus())));
      model.contactStatusChanged(model.indexOf(node));
    }
  }
}
