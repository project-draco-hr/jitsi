{
  if (!(notifiedContact instanceof ContactFacebookImpl))   throw new IllegalArgumentException("The specified contact is not a Facebook contact." + notifiedContact);
  Thread notificator=new Thread(new Runnable(){
    public void run(){
      try {
        OperationSetTypingNotificationsFacebookImpl.this.parentProvider.getAdapter().postTypingNotification(notifiedContact,typingState);
      }
 catch (      Exception e) {
        logger.error(e.getMessage());
      }
    }
  }
);
  notificator.start();
}
