{
  if (logger.isInfoEnabled() && (evt.getEventID() == SystemActivityEvent.EVENT_NETWORK_CHANGE || evt.getEventID() == SystemActivityEvent.EVENT_DNS_CHANGE)) {
    logger.info("Received system activity event: " + evt);
  }
  if (evt.getEventID() == SystemActivityEvent.EVENT_NETWORK_CHANGE) {
    eventDispatcher.fireSystemActivityEvent(evt,500);
  }
 else   eventDispatcher.fireSystemActivityEvent(evt);
}
