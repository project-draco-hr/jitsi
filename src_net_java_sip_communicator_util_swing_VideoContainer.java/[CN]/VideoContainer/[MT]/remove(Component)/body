{
  super.remove(comp);
  if ((comp == canvas) && (canvas != null) && (canvas.getParent() != this)) {
    canvas=null;
    validate();
  }
  if (VideoLayout.CENTER_REMOTE.equals(((VideoLayout)getLayout()).getComponentConstraints(comp)) && (noVideoComponent != null) && !noVideoComponent.equals(comp)) {
    add(noVideoComponent,VideoLayout.CENTER_REMOTE);
    validate();
  }
  removeCanvasIfNecessary();
}
