{
  if ((canvas == null) || !OSUtils.IS_MAC)   return;
  boolean removeCanvas=true;
  for (  Component component : getComponents()) {
    if (component == canvas)     continue;
    try {
      component.getClass().getMethod(VIDEO_CANVAS_FACTORY_METHOD_NAME);
      removeCanvas=false;
      break;
    }
 catch (    NoSuchMethodException nsme) {
    }
  }
  if (removeCanvas)   remove(canvas);
}
