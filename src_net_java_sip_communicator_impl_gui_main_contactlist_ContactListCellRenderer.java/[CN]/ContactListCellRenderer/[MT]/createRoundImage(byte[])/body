{
  BufferedImage destImage=new BufferedImage(25,30,BufferedImage.TYPE_INT_ARGB);
  BufferedImage avatarImage;
  try {
    InputStream in=new ByteArrayInputStream(avatarBytes);
    avatarImage=ImageIO.read(in);
    Graphics2D g=destImage.createGraphics();
    AntialiasingManager.activateAntialiasing(g);
    g.setColor(Color.WHITE);
    g.fillRoundRect(0,0,25,30,10,10);
    g.setComposite(AlphaComposite.SrcIn);
    g.drawImage(avatarImage.getScaledInstance(25,30,Image.SCALE_SMOOTH),0,0,null);
    return destImage;
  }
 catch (  Exception e) {
    logger.error("Could not create image.",e);
  }
  return null;
}
