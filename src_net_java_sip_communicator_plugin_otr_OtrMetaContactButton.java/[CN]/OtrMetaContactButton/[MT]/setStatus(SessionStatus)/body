{
  if (contact == null)   return;
switch (status) {
case ENCRYPTED:
    try {
      this.setImage(ImageIO.read(OtrActivator.resourceService.getImageURL((OtrActivator.scOtrEngine.isContactVerified(contact)) ? "plugin.otr.ENCRYPTED_ICON_25x25" : "plugin.otr.ENCRYPTED_UNVERIFIED_ICON_25x25")));
    }
 catch (    IOException e) {
      e.printStackTrace();
    }
  break;
case FINISHED:
try {
  this.setImage(ImageIO.read(OtrActivator.resourceService.getImageURL("plugin.otr.FINISHED_ICON_25x25")));
}
 catch (IOException e) {
  e.printStackTrace();
}
break;
case PLAINTEXT:
try {
this.setImage(ImageIO.read(OtrActivator.resourceService.getImageURL("plugin.otr.PLAINTEXT_ICON_25x25")));
}
 catch (IOException e) {
e.printStackTrace();
}
break;
}
}
