{
  JButton button=(JButton)e.getSource();
  String name=button.getName();
  if (name.equals("ok")) {
    parentMenu.setCurrentMessage(messageTextField.getText(),parentMenu.getNewMessageItem(),saveNewMessage.isSelected());
    parentMenu.publishStatusMessage(messageTextField.getText(),parentMenu.getNewMessageItem(),saveNewMessage.isSelected());
  }
  this.dispose();
}
