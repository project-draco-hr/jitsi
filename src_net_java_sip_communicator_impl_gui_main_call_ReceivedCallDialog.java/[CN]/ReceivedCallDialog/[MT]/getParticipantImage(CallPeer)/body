{
  ImageIcon icon=null;
  if (participant.getContact() != null) {
    MetaContact metaContact=GuiActivator.getMetaContactListService().findMetaContactByContact(participant.getContact());
    byte[] avatar=metaContact.getAvatar();
    if (avatar != null && avatar.length > 0)     icon=new ImageIcon(avatar);
  }
  if (icon == null && participant.getImage() != null)   icon=new ImageIcon(participant.getImage());
  return icon;
}
