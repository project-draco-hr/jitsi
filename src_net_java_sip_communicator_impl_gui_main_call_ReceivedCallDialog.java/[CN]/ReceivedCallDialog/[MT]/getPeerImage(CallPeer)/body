{
  ImageIcon icon=null;
  if (peer.getContact() != null) {
    MetaContact metaContact=GuiActivator.getMetaContactListService().findMetaContactByContact(peer.getContact());
    byte[] avatar=metaContact.getAvatar();
    if (avatar != null && avatar.length > 0)     icon=new ImageIcon(avatar);
  }
  if (icon == null && peer.getImage() != null)   icon=new ImageIcon(peer.getImage());
  return icon;
}
