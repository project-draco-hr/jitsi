{
  DiscoverInfo info=null;
  try {
    info=this.discoverInfo(jid);
  }
 catch (  XMPPException ex) {
    logger.info("failed to retrieve disco info for " + jid + " feature "+ feature,ex);
    return false;
  }
  if (info != null && info.containsFeature(feature))   return true;
 else   return false;
}
