{
  abortConnecting=true;
  try {
    tm.checkServerTrusted(chain,authType);
  }
 catch (  CertificateException e) {
    fireRegistrationStateChanged(getRegistrationState(),RegistrationState.UNREGISTERED,RegistrationStateChangeEvent.REASON_USER_REQUEST,"Not trusted certificate");
    throw e;
  }
  if (abortConnecting) {
    abortConnecting=false;
    return;
  }
 else {
    new Thread(new Runnable(){
      public void run(){
        reregister(SecurityAuthority.CONNECTION_FAILED);
      }
    }
).start();
    return;
  }
}
