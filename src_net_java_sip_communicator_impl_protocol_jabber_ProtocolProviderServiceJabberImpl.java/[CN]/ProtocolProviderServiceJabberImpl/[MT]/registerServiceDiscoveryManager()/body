{
  String name=System.getProperty("sip-communicator.application.name","SIP Communicator ") + System.getProperty("sip-communicator.version","SVN");
  ServiceDiscoveryManager.setIdentityName(name);
  ServiceDiscoveryManager.setIdentityType("pc");
  discoveryManager=new ScServiceDiscoveryManager(connection);
  discoveryManager.removeFeature("http://jabber.org/protocol/commands");
  for (  String feature : supportedFeatures) {
    if (!discoveryManager.includesFeature(feature))     discoveryManager.addFeature(feature);
  }
}
