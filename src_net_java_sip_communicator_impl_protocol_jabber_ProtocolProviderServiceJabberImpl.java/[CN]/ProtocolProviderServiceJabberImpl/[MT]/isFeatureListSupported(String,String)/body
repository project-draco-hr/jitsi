{
  boolean isFeatureListSupported=true;
  try {
    if (discoveryManager == null)     return isFeatureListSupported;
    DiscoverInfo featureInfo=discoveryManager.discoverInfoNonBlocking(jid);
    if (featureInfo == null)     return isFeatureListSupported;
    for (    String feature : features) {
      if (!featureInfo.containsFeature(feature)) {
        isFeatureListSupported=false;
        break;
      }
    }
  }
 catch (  XMPPException e) {
    if (logger.isDebugEnabled())     logger.debug("Failed to retrive discovery info.",e);
  }
  return isFeatureListSupported;
}
