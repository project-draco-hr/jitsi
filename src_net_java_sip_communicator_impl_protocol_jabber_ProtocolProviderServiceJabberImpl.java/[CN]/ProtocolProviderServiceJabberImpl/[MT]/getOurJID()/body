{
  String jid=null;
  if (connection != null && connection.getUser() != null)   return connection.getUser();
  if (jid == null) {
    String userID=StringUtils.parseName(getAccountID().getUserID());
    String serviceName=StringUtils.parseServer(getAccountID().getUserID());
    jid=userID + "@" + serviceName;
  }
  return jid;
}
