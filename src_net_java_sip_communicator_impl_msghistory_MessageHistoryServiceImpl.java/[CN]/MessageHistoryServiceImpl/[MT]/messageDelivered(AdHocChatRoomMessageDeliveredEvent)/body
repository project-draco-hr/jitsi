{
  if (!ConfigurationUtils.isHistoryLoggingEnabled(evt.getSourceAdHocChatRoom().getIdentifier())) {
    return;
  }
  try {
    History history=this.getHistoryForAdHocMultiChat(evt.getSourceAdHocChatRoom());
    writeMessage(history,"out",evt.getMessage(),evt.getTimestamp());
  }
 catch (  IOException e) {
    logger.error("Could not add message to history",e);
  }
}
