{
  ChatRoomMember member=chatroom.getChatRoomMember(user);
  if (member == null) {
    LOGGER.warn("Got null member from chatroom, but expected message source member '" + user + "' to be present.");
    return;
  }
  MessageIrcImpl message=new MessageIrcImpl(text,"text/html","UTF-8",null);
  chatroom.fireMessageReceivedEvent(message,member,new Date(),ChatRoomMessageReceivedEvent.CONVERSATION_MESSAGE_RECEIVED);
}
