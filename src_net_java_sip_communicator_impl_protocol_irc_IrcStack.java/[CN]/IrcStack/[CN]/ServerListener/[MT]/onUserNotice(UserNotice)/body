{
  final String user=msg.getSource().getNick();
  final String text=Utils.formatNotice(Utils.parse(msg.getText()),user);
  final MessageIrcImpl message=new MessageIrcImpl(text,OperationSetBasicInstantMessaging.HTML_MIME_TYPE,OperationSetBasicInstantMessaging.DEFAULT_MIME_ENCODING,null);
  final Contact from=IrcStack.this.provider.getPersistentPresence().findOrCreateContactByID(user);
  IrcStack.this.provider.getBasicInstantMessaging().fireMessageReceived(message,from);
}
