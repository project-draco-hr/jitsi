{
  if (this.irc != null && this.connectionState != null && this.connectionState.isConnected())   return;
  this.joining.clear();
  this.joined.clear();
  this.irc=new IRCApiImpl(true);
synchronized (this.irc) {
    this.params.setServer(new IRCServer(host,port,password,secureConnection));
    this.params.setCustomContext(getCustomSSLContext(host));
    this.irc.addListener(new ServerListener());
    connectSynchronized();
  }
}
