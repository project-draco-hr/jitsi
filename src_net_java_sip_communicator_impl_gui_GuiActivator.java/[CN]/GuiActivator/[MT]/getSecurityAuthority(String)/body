{
  String osgiFilter="(" + ProtocolProviderFactory.PROTOCOL + "="+ protocolName+ ")";
  SecurityAuthority securityAuthority=null;
  try {
    ServiceReference[] serRefs=bundleContext.getServiceReferences(SecurityAuthority.class.getName(),osgiFilter);
    if (serRefs != null && serRefs.length > 0)     securityAuthority=(SecurityAuthority)bundleContext.getService(serRefs[0]);
  }
 catch (  InvalidSyntaxException ex) {
    logger.error("GuiActivator : " + ex);
  }
  return securityAuthority;
}
