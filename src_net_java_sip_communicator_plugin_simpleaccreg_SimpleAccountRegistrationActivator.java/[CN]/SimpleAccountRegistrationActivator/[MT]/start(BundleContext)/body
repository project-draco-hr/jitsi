{
  bundleContext=bc;
  if (!hasRegisteredAccounts()) {
    InitialAccountRegistrationFrame accountRegFrame=new InitialAccountRegistrationFrame();
    accountRegFrame.pack();
    accountRegFrame.setLocation(Toolkit.getDefaultToolkit().getScreenSize().width / 2 - accountRegFrame.getWidth() / 2,Toolkit.getDefaultToolkit().getScreenSize().height / 2 - accountRegFrame.getHeight() / 2);
    accountRegFrame.setVisible(true);
  }
}
