{
  int stringWidth=GuiUtils.getStringWidth(statusLabel,statusMessage);
  int dot3=GuiUtils.getStringWidth(statusLabel,"... ");
  if (dot3 >= statusPanel.getWidth()) {
    if (stringWidth > dot3)     statusMessage="...";
  }
 else {
    while ((stringWidth > (statusPanel.getWidth() - dot3)) && (statusMessage != "...")) {
      if (statusMessage.endsWith("...")) {
        statusMessage=statusMessage.substring(0,statusMessage.indexOf("...") - 1).concat("...");
      }
 else {
        statusMessage=statusMessage.substring(0,statusMessage.length() - 3).concat("...");
      }
      stringWidth=GuiUtils.getStringWidth(statusLabel,statusMessage);
    }
  }
  statusLabel.setText(statusMessage);
}
