{
  String defaultFontFamily=ConfigurationUtils.getChatDefaultFontFamily();
  int defaultFontSize=ConfigurationUtils.getChatDefaultFontSize();
  Color defaultFontColor=ConfigurationUtils.getChatDefaultFontColor();
  if (defaultFontFamily != null)   setFontFamily(defaultFontFamily);
  if (defaultFontSize > 0)   setFontSize(defaultFontSize);
  setBoldStyle(ConfigurationUtils.isChatFontBold());
  setItalicStyle(ConfigurationUtils.isChatFontItalic());
  setUnderlineStyle(ConfigurationUtils.isChatFontUnderline());
  if (defaultFontColor != null)   setColor(defaultFontColor);
}
