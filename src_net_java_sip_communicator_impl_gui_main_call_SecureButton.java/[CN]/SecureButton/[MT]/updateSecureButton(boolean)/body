{
  if (isSecure) {
    this.setIcon(new ImageIcon(ImageLoader.getImage(ImageLoader.SECURE_BUTTON_ON)));
    this.setToolTipText(Messages.getI18NString("toggleOffSecurity").getText());
  }
 else {
    this.setIcon(new ImageIcon(ImageLoader.getImage(ImageLoader.SECURE_BUTTON_OFF)));
    this.setToolTipText(Messages.getI18NString("toggleOnSecurity").getText());
  }
}
