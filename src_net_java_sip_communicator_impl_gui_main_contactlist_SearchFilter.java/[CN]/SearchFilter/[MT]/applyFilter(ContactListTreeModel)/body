{
  resultTreeModel=treeModel;
  if (contactSources == null)   contactSources=TreeContactList.getContactSources();
  if (searchSourceType == DEFAULT_SOURCE)   mclSource.filter(filterPattern,treeModel);
  for (  ExternalContactSource contactSource : contactSources) {
    ContactSourceService sourceService=contactSource.getContactSourceService();
    if (sourceService instanceof ExtendedContactSourceService)     currentQuery=((ExtendedContactSourceService)sourceService).queryContactSource(filterPattern);
 else     currentQuery=sourceService.queryContactSource(filterString);
    this.addMatching(currentQuery.getQueryResults());
    currentQuery.addContactQueryListener(this);
  }
}
