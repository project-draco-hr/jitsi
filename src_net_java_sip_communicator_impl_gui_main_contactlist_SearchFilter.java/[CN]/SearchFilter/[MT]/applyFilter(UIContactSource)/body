{
  ContactSourceService sourceService=contactSource.getContactSourceService();
  ContactQuery contactQuery;
  if (sourceService instanceof ExtendedContactSourceService)   contactQuery=((ExtendedContactSourceService)sourceService).queryContactSource(filterPattern);
 else   contactQuery=sourceService.queryContactSource(filterString);
  this.addMatching(contactQuery.getQueryResults());
  contactQuery.addContactQueryListener(sourceContactList);
  return contactQuery;
}
