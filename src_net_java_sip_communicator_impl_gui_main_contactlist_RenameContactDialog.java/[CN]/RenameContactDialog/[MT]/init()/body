{
  this.setTitle(Messages.getString("renameContact"));
  this.setSize(400,100);
  this.setModal(true);
  this.renameContactPanel.add(nameLabel,BorderLayout.WEST);
  this.renameContactPanel.add(nameField,BorderLayout.CENTER);
