{
  int dialogY=(int)Toolkit.getDefaultToolkit().getScreenSize().getHeight() / 2 - dialogHeight / 2;
  int parentX=parentWindow.getLocation().x;
  if ((parentX - dialogWidth) > 0) {
    this.setLocation(parentX - dialogWidth,dialogY);
  }
 else {
    this.setLocation(parentX + parentWindow.getWidth(),dialogY);
  }
}
