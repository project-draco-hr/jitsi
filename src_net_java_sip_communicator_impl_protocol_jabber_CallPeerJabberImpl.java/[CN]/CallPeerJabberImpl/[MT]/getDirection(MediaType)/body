{
  SendersEnum senders=getMediaHandler().getSenders(mediaType);
  if (senders == SendersEnum.none)   return MediaDirection.INACTIVE;
 else   if (senders == null || senders == SendersEnum.both)   return MediaDirection.SENDRECV;
 else   if (senders == SendersEnum.initiator)   return isInitiator() ? MediaDirection.RECVONLY : MediaDirection.SENDONLY;
 else   return isInitiator() ? MediaDirection.SENDONLY : MediaDirection.RECVONLY;
}
