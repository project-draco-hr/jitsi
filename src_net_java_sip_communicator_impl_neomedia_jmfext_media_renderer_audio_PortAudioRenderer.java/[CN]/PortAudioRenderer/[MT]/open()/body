{
  try {
    doOpen();
  }
 catch (  Throwable t) {
    if (logger.isDebugEnabled())     logger.debug("Failed to open PortAudioRenderer",t);
    if (t instanceof ThreadDeath)     throw (ThreadDeath)t;
 else     if (t instanceof ResourceUnavailableException)     throw (ResourceUnavailableException)t;
 else {
      ResourceUnavailableException rue=new ResourceUnavailableException();
      rue.initCause(t);
      throw rue;
    }
  }
}
