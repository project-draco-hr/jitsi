{
  try {
    stop();
  }
  finally {
    if (stream != 0) {
      try {
        PortAudio.Pa_CloseStream(stream);
        stream=0;
      }
 catch (      PortAudioException paex) {
        logger.error("Failed to close PortAudio stream.",paex);
      }
    }
    if ((stream == 0) && (outputParameters != 0)) {
      PortAudio.PaStreamParameters_free(outputParameters);
      outputParameters=0;
    }
  }
}
