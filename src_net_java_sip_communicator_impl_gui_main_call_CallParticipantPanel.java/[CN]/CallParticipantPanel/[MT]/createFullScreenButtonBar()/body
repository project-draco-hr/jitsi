{
  CallPeerState participantState=callParticipant.getState();
  Component[] buttons=new Component[]{new HoldButton(callParticipant.getCall(),true,CallPeerState.isOnHold(participantState)),new MuteButton(callParticipant.getCall(),true,callParticipant.isMute()),createExitFullScreenButton()};
  Component fullScreenButtonBar=createButtonBar(true,buttons);
  return fullScreenButtonBar;
}
