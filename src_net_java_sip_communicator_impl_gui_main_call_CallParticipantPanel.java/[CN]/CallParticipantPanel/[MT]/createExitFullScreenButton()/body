{
  JButton button=new JButton(new ImageIcon(ImageLoader.getImage(ImageLoader.EXIT_FULL_SCREEN_BUTTON)));
  button.setToolTipText(GuiActivator.getResources().getI18NString("service.gui.EXIT_FULL_SCREEN_TOOL_TIP"));
  button.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent event){
      Object source=event.getSource();
      Frame fullScreenFrame=(source instanceof Component) ? TransferCallButton.getFrame((Component)source) : null;
      exitFullScreen(fullScreenFrame);
    }
  }
);
  return button;
}
