{
  Component[] buttons=new Component[]{new HoldButton(this.callParticipant),new MuteButton(this.callParticipant),createTransferCallButton(),createSecureCallButton()};
  Container buttonBar=new TransparentPanel(new GridLayout(1,0));
  for (int buttonIndex=0; buttonIndex < buttons.length; buttonIndex++) {
    Component button=buttons[buttonIndex];
    if (button != null) {
      button.setPreferredSize(new Dimension(24,24));
      buttonBar.add(button);
    }
  }
  return buttonBar;
}
