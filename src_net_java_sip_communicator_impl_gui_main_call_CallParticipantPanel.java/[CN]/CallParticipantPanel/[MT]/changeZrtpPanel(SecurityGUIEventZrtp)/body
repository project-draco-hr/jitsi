{
  Call call=callParticipant.getCall();
  if (call != null) {
    OperationSetSecureTelephony secure=(OperationSetSecureTelephony)call.getProtocolProvider().getOperationSet(OperationSetSecureTelephony.class);
    if (secure != null) {
      if (zrtpPanel == null) {
        zrtpPanel=new ZrtpPanel();
        zrtpPanel.setName("zrtpPanel");
        zrtpPanel.addComponentsToPane();
        statusPanel.add(zrtpPanel);
      }
      zrtpPanel.refreshStates(securityEvent);
      this.revalidate();
    }
  }
}
