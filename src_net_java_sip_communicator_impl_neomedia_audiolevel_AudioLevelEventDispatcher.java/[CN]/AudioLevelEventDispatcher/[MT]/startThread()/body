{
  thread=new Thread(){
    @Override public void run(){
      try {
        AudioLevelEventDispatcher.this.run();
      }
  finally {
synchronized (AudioLevelEventDispatcher.this) {
          if (Thread.currentThread().equals(thread))           thread=null;
          if ((thread == null) && ((listener != null) || ((cache != null) && (ssrc != -1))) && (data != null)&& (dataLength > 0))           startThread();
        }
      }
    }
  }
;
  thread.setDaemon(true);
  if (threadName != null)   thread.setName(threadName);
  thread.start();
}
