{
  do {
    DTMFToneInfo toneToPlay;
synchronized (dtmfToneNotifications) {
      if (dtmfToneNotifications.size() != 0) {
        toneToPlay=dtmfToneNotifications.get(0);
      }
 else       break;
    }
    try {
      if (toneToPlay.sound != null) {
        NotificationService notificationService=GuiActivator.getNotificationService();
        NotificationData currentlyPlayingTone=notificationService.fireNotification(DTMF_TONE_PREFIX + toneToPlay.tone.getValue());
        while (notificationService.isPlayingNotification(currentlyPlayingTone)) {
          Thread.yield();
        }
        notificationService.stopNotification(currentlyPlayingTone);
      }
    }
  finally {
synchronized (dtmfToneNotifications) {
        dtmfToneNotifications.remove(0);
      }
    }
  }
 while (true);
}
