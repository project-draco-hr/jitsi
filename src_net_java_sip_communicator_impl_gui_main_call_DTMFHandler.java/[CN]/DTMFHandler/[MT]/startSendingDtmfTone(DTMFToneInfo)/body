{
  if (info.sound != null) {
synchronized (dmtfToneNotifications) {
      boolean startThread=(dmtfToneNotifications.size() == 0);
      dmtfToneNotifications.add(info);
      if (startThread) {
        dtmfToneNotificationThread=new Thread(this,"DTMFHandler: DTMF tone notification player");
        dtmfToneNotificationThread.start();
      }
    }
  }
  if (callContainer != null) {
    startSendingDtmfTone(callContainer.getCurrentCallRenderer().getCall(),info);
  }
 else {
    Collection<Call> activeCalls=CallManager.getInProgressCalls();
    if (activeCalls != null) {
      for (      Call activeCall : activeCalls)       startSendingDtmfTone(activeCall,info);
    }
  }
}
