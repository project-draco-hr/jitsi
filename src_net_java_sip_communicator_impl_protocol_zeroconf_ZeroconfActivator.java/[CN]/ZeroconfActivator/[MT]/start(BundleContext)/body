{
  bundleContext=context;
  Hashtable<String,String> hashtable=new Hashtable<String,String>();
  hashtable.put(ProtocolProviderFactory.PROTOCOL,"Zeroconf");
  zeroconfProviderFactory=new ProtocolProviderFactoryZeroconfImpl();
  zeroconfPpFactoryServReg=context.registerService(ProtocolProviderFactory.class.getName(),zeroconfProviderFactory,hashtable);
  if (logger.isInfoEnabled())   logger.info("Zeroconf protocol implementation [STARTED].");
}
