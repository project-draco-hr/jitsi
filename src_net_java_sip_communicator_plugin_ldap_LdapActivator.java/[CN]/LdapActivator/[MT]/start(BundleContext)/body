{
  LdapActivator.bundleContext=bundleContext;
  css=new LdapContactSourceService();
  try {
    cssServiceRegistration=bundleContext.registerService(ContactSourceService.class.getName(),css,null);
  }
  finally {
    if (cssServiceRegistration == null) {
      css.stop();
      css=null;
    }
  }
}
