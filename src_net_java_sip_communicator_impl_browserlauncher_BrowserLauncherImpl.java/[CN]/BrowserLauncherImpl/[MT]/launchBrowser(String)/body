{
  if (OSUtils.IS_MAC) {
    FileManager.openURL(url);
  }
 else   if (OSUtils.IS_WINDOWS) {
    Runtime.getRuntime().exec("rundll32 url.dll,FileProtocolHandler " + url);
  }
 else {
    String[] browsers=new String[]{"google-chrome","chromium-browser","firefox","iceweasel","opera","konqueror","epiphany","mozilla","netscape","gnome-open"};
    Runtime runtime=Runtime.getRuntime();
    String browser=null;
    for (    String b : browsers)     if (runtime.exec(new String[]{"which",b}).waitFor() == 0)     browser=b;
    if (browser == null)     throw new Exception("Could not find web browser");
 else     runtime.exec(new String[]{browser,url});
  }
}
