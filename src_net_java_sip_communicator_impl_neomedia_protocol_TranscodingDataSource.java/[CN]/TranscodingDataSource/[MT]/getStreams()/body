{
  if (outputDataSource instanceof PushBufferDataSource)   return ((PushBufferDataSource)outputDataSource).getStreams();
  if (outputDataSource instanceof PullBufferDataSource)   return ((PullBufferDataSource)outputDataSource).getStreams();
  if (outputDataSource instanceof PushDataSource)   return ((PushDataSource)outputDataSource).getStreams();
  if (outputDataSource instanceof PullDataSource)   return ((PullDataSource)outputDataSource).getStreams();
  return new SourceStream[0];
}
