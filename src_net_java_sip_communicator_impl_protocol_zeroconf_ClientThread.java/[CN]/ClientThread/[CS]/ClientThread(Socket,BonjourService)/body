{
  this.sock=sock;
  this.remoteIPAddress=sock.getInetAddress();
  this.bonjourService=bonjourService;
  this.opSetBasicIM=(OperationSetBasicInstantMessagingZeroconfImpl)bonjourService.getPPS().getOperationSet(OperationSetBasicInstantMessaging.class);
  this.opSetTyping=(OperationSetTypingNotificationsZeroconfImpl)bonjourService.getPPS().getOperationSet(OperationSetTypingNotifications.class);
  this.setDaemon(true);
  try {
    out=sock.getOutputStream();
    in=new DataInputStream(sock.getInputStream());
  }
 catch (  IOException e) {
    logger.error("Creating ClientThread: Couldn't get I/O for " + "the connection",e);
    return;
  }
  this.start();
}
