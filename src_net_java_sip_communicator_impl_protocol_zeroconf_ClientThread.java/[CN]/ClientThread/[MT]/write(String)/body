{
  byte[] bytes=string.getBytes();
  try {
    out.write(bytes);
    out.flush();
  }
 catch (  IOException e) {
    logger.error("Couldn't get I/O for the connection");
    if (contact != null)     contact.setClientThread(null);
    try {
      sock.close();
    }
 catch (    IOException ex) {
      logger.error(ex);
    }
  }
}
