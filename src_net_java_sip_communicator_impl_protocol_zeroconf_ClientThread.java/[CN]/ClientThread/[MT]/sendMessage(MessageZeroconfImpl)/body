{
  if (logger.isDebugEnabled())   logger.debug("ZEROCONF: Sending messag [" + msg.getContent() + "] to "+ contact.getDisplayName());
  if (!isStreamOpened()) {
    if (logger.isDebugEnabled())     logger.debug("ZEROCONF: Stream not opened... " + "will send the message later");
    messagesQueue+=toXHTML(msg);
  }
 else   write(toXHTML(msg));
}
