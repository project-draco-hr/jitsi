{
  assertConnected();
  if (!(status instanceof MsnStatusEnum))   throw new IllegalArgumentException(status + " is not a valid Msn status");
  if (status.equals(MsnStatusEnum.OFFLINE)) {
    msnProvider.unregister();
    return;
  }
  if (ssContactList.isInitialized())   msnProvider.getMessenger().getOwner().setStatus((MsnUserStatus)scToMsnModesMappings.get(status));
 else   msnProvider.getMessenger().getOwner().setInitStatus((MsnUserStatus)scToMsnModesMappings.get(status));
}
