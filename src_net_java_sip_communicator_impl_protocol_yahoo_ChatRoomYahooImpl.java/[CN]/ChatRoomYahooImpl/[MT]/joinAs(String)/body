{
  this.nickname=nickname;
  try {
    provider.getYahooSession().acceptConferenceInvite(yahooConference);
    ChatRoomMemberYahooImpl member=new ChatRoomMemberYahooImpl(this,nickname,provider.getYahooSession().getLoginIdentity().getId(),ChatRoomMemberRole.MEMBER);
    if (!members.containsKey(nickname)) {
      members.put(nickname,member);
    }
    updateMemberList();
    opSetMuc.fireLocalUserPresenceEvent(this,LocalUserChatRoomPresenceChangeEvent.LOCAL_USER_JOINED,null);
  }
 catch (  Exception e) {
    logger.debug("Couldn't join the chat room: " + yahooConference.getName() + " || "+ e);
  }
}
