{
  ChatRoomInvitationRejectedEvent evt=new ChatRoomInvitationRejectedEvent(this,sourceChatRoom,invitee,reason,new Date(System.currentTimeMillis()));
  Iterator<ChatRoomInvitationRejectionListener> listeners=null;
synchronized (invitationRejectionListeners) {
    listeners=new ArrayList<ChatRoomInvitationRejectionListener>(invitationRejectionListeners).iterator();
  }
  while (listeners.hasNext()) {
    ChatRoomInvitationRejectionListener listener=(ChatRoomInvitationRejectionListener)listeners.next();
    listener.invitationRejected(evt);
  }
}
