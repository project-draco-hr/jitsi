{
  boolean flipLocalVideoDisplay=true;
  OperationSetDesktopSharingServer desktopOpSet=peer.getCall().getProtocolProvider().getOperationSet(OperationSetDesktopSharingServer.class);
  if (desktopOpSet != null && desktopOpSet.isLocalVideoAllowed(peer.getCall())) {
    flipLocalVideoDisplay=false;
  }
  MediaStream videoStream=getStream(MediaType.VIDEO);
  return ((videoStream == null) || !isLocalVideoTransmissionEnabled()) ? null : ((VideoMediaStream)videoStream).createLocalVisualComponent(flipLocalVideoDisplay);
}
