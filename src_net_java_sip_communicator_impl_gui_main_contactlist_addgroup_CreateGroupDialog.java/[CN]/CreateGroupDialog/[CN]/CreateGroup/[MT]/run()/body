{
  new Thread(){
    public void run(){
      try {
        mcl.createMetaContactGroup(mcl.getRoot(),groupName);
        dispose();
      }
 catch (      MetaContactListException ex) {
        logger.error(ex);
        int errorCode=ex.getErrorCode();
        if (errorCode == MetaContactListException.CODE_GROUP_ALREADY_EXISTS_ERROR) {
          groupPanel.showErrorMessage(Messages.getI18NString("addGroupExistError",new String[]{groupName}).getText());
          return;
        }
 else         if (errorCode == MetaContactListException.CODE_LOCAL_IO_ERROR) {
          groupPanel.showErrorMessage(Messages.getI18NString("addGroupLocalError",new String[]{groupName}).getText());
          return;
        }
 else         if (errorCode == MetaContactListException.CODE_NETWORK_ERROR) {
          groupPanel.showErrorMessage(Messages.getI18NString("addGroupNetError",new String[]{groupName}).getText());
          return;
        }
 else {
          groupPanel.showErrorMessage(Messages.getI18NString("addGroupError",new String[]{groupName}).getText());
          return;
        }
      }
    }
  }
.start();
}
