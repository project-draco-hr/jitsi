{
  JComponent bottomBar=new TransparentPanel();
  bottomBar.setBorder(new ExtendedEtchedBorder(EtchedBorder.LOWERED,1,0,0,0));
  if (OSUtils.IS_MAC) {
    bottomBar.setOpaque(true);
    bottomBar.setBackground(new Color(GuiActivator.getResources().getColor("service.gui.MAC_PANEL_BACKGROUND")));
  }
  bottomBar.setLayout(new BorderLayout());
  bottomBar.add(settingsPanel,BorderLayout.WEST);
  bottomBar.add(hangupButton,BorderLayout.EAST);
  return bottomBar;
}
