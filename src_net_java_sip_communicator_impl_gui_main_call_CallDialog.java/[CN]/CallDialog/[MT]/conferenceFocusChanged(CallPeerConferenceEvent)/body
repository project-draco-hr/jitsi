{
  final CallPeer callPeer=conferenceEvent.getSourceCallPeer();
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      if (isLastConference) {
        ((ConferenceCallPanel)callPanel).updateCallPeerPanel(callPeer);
      }
 else {
        isLastConference=isConference();
        if (isLastConference) {
          contentPane.remove(callPanel);
          callPanel=new ConferenceCallPanel(CallDialog.this,call);
          contentPane.add(callPanel,BorderLayout.CENTER);
        }
      }
      refreshWindow();
    }
  }
);
}
