{
  if (((CallPeerState)evt.getNewValue()) == CallPeerState.DISCONNECTED || ((CallPeerState)evt.getNewValue()) == CallPeerState.FAILED) {
    removeCallParticipant((CallPeerJabberImpl)evt.getSourceCallPeer());
  }
 else   if (((CallPeerState)evt.getNewValue()) == CallPeerState.CONNECTED && getCallState().equals(CallState.CALL_INITIALIZATION)) {
    setCallState(CallState.CALL_IN_PROGRESS);
  }
}
