{
  securityStatusLabel.setIcon(new ImageIcon(ImageLoader.getImage(ImageLoader.SECURE_BUTTON_ON)));
  if ((securityPanel == null) && (callPeer != null)) {
    securityPanel=new SecurityPanel(callPeer);
    GridBagConstraints constraints=new GridBagConstraints();
    constraints.fill=GridBagConstraints.NONE;
    constraints.gridx=0;
    constraints.gridy=2;
    constraints.weightx=0;
    constraints.weighty=0;
    constraints.insets=new Insets(5,0,0,0);
    this.add(securityPanel,constraints);
  }
  if (securityPanel != null)   securityPanel.refreshStates(securityString,isSecurityVerified);
  this.revalidate();
}
