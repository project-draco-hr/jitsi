{
  int size=dim.width * dim.height * 4;
  size+=FFmpeg.FF_INPUT_BUFFER_PADDING_SIZE;
  if (data == null) {
    data=new ByteBuffer(size);
    data.setLength(size);
  }
  if (data.getLength() < size) {
    data.setFree(true);
    FFmpeg.av_free(data.ptr);
    data=new ByteBuffer(size);
    data.setLength(size);
  }
  if (desktopInteract.captureScreen(data.ptr,data.getLength())) {
    return true;
  }
  return false;
}
