{
  if (c.getCallState() != CallState.CALL_IN_PROGRESS)   return;
  if (c.getCallPeers().next().getState() != CallPeerState.CONNECTED)   return;
  MediaAwareCall<?,?,?> cc=(MediaAwareCall<?,?,?>)c;
  if (mute && !cc.isMute())   cc.setMute(true);
 else   if (!mute && cc.isMute())   cc.setMute(false);
}
