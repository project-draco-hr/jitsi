{
  boolean interrupted=false;
  while (streamIsBusy) {
    try {
      wait();
    }
 catch (    InterruptedException iex) {
      interrupted=true;
    }
  }
  if (interrupted)   Thread.currentThread().interrupt();
  try {
    PortAudio.Pa_StopStream(stream);
  }
 catch (  PortAudioException paex) {
    IOException ioex=new IOException();
    ioex.initCause(paex);
    throw ioex;
  }
}
