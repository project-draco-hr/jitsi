{
  String dirStr;
  if (MediaDirection.SENDONLY.equals(direction)) {
    dirStr="sendonly";
  }
 else   if (MediaDirection.RECVONLY.equals(direction)) {
    dirStr="recvonly";
  }
 else   if (MediaDirection.SENDRECV.equals(direction)) {
    dirStr="sendrecv";
  }
 else {
    dirStr="inactive";
  }
  return sdpFactory.createAttribute(dirStr,null);
}
