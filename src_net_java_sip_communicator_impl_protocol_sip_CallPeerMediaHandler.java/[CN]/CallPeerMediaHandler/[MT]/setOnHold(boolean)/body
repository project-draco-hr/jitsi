{
  this.onHold=onHold;
  if (onHold) {
    if (audioStream != null)     audioStream.setDirection(audioStream.getDirection().and(MediaDirection.SENDONLY));
    if (videoStream != null)     videoStream.setDirection(videoStream.getDirection().and(MediaDirection.SENDONLY));
  }
 else {
    if (audioStream != null)     audioStream.setDirection(audioStream.getDirection().or(MediaDirection.SENDONLY));
    if (videoStream != null)     videoStream.setDirection(videoStream.getDirection().or(MediaDirection.SENDONLY));
  }
}
