{
  ShowHideVideoButton showHideButton=new ShowHideVideoButton(call,true,callContainer.isShowHideVideoButtonSelected());
  showHideButton.setPeerRenderer(peerPanel);
  showHideButton.setEnabled(callContainer.isVideoButtonSelected());
  Component[] buttons=new Component[]{new InputVolumeControlButton(call,true,callPeer.isMute()),new OutputVolumeControlButton(true),new HoldButton(call,true,CallPeerState.isOnHold(callPeer.getState())),new RecordButton(call,true,callContainer.isRecordingStarted()),new LocalVideoButton(call,true,callContainer.isVideoButtonSelected()),showHideButton,CallPeerRendererUtils.createExitFullScreenButton(this)};
  return CallPeerRendererUtils.createButtonBar(true,buttons);
}
