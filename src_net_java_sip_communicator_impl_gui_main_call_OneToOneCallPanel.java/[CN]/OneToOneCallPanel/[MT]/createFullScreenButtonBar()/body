{
  ShowHideVideoButton showHideButton=new ShowHideVideoButton(call,true,callContainer.isShowHideVideoButtonSelected());
  showHideButton.setPeerRenderer(peerPanel);
  showHideButton.setEnabled(callContainer.isVideoButtonSelected());
  Component[] buttons=new Component[]{new OutputVolumeControlButton(true).getComponent(),new InputVolumeControlButton(call,true,callPeer.isMute()),new HoldButton(call,true,CallPeerState.isOnHold(callPeer.getState())),new RecordButton(call,true,callContainer.isRecordingStarted()),new FullScreenButton(callContainer,true),new LocalVideoButton(call,true,callContainer.isVideoButtonSelected()),showHideButton,new HangupButton(callContainer)};
  return CallPeerRendererUtils.createButtonBar(true,buttons);
}
