{
  if (metaContact == null) {
    whiteboardMenu.setEnabled(false);
    return whiteboardMenu;
  }
  Iterator<Contact> iter=metaContact.getContacts();
  while (iter.hasNext()) {
    Contact contact=iter.next();
    ProtocolProviderService pps=contact.getProtocolProvider();
    OperationSetWhiteboarding opSetWb=(OperationSetWhiteboarding)pps.getOperationSet(OperationSetWhiteboarding.class);
    if (opSetWb != null) {
      whiteboardMenu.setEnabled(true);
      return whiteboardMenu;
    }
  }
  whiteboardMenu.setEnabled(false);
  return whiteboardMenu;
}
