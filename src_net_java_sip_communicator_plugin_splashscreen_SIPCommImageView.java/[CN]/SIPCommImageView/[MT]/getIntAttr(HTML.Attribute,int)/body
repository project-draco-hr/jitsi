{
  AttributeSet attr=fElement.getAttributes();
  if (attr.isDefined(name)) {
    int i;
    String val=(String)attr.getAttribute(name);
    if (val == null)     i=deflt;
 else     try {
      i=Math.max(0,Integer.parseInt(val));
    }
 catch (    NumberFormatException x) {
      i=deflt;
    }
    return i;
  }
 else   return deflt;
}
