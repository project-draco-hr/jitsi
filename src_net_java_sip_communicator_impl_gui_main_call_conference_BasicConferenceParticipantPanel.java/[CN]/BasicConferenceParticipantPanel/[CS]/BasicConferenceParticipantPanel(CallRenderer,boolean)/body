{
  this.renderer=renderer;
  this.isLocalPeer=isLocalPeer;
  soundIndicator=new SoundLevelIndicator(SoundLevelChangeEvent.MIN_LEVEL,SoundLevelChangeEvent.MAX_LEVEL);
  securityStatusLabel=new SecurityStatusLabel();
  securityStatusLabel.setSecurityOff();
  this.setLayout(new GridBagLayout());
  this.setBorder(BorderFactory.createEmptyBorder(7,7,7,7));
  this.initTitleBar();
  constraints.fill=GridBagConstraints.HORIZONTAL;
  constraints.gridx=0;
  constraints.gridy=0;
  constraints.weightx=1;
  constraints.weighty=0;
  constraints.insets=new Insets(0,0,0,0);
  this.add(titleBar,constraints);
  this.initPeerDetailsPanel();
  constraints.fill=GridBagConstraints.HORIZONTAL;
  constraints.gridx=0;
  constraints.gridy=1;
  constraints.weightx=1;
  constraints.weighty=0;
  constraints.insets=new Insets(0,0,0,0);
  this.add(peerDetailsPanel,constraints);
}
