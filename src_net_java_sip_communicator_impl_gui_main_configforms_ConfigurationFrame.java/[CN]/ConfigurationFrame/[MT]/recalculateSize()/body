{
  double width=0;
  double height=0;
  for (int i=0; i < configContainer.size(); i++) {
    ConfigurationForm configForm=(ConfigurationForm)configContainer.get(i);
    Component form=(Component)configForm.getForm();
    if (width < form.getPreferredSize().getWidth())     width=form.getPreferredSize().getWidth();
    if (height < form.getPreferredSize().getHeight())     height=form.getPreferredSize().getHeight();
  }
  this.mainPanel.setPreferredSize(new Dimension((int)width + 150,(int)height + 100));
}
