{
  selectionPoints.clear();
  selectionPoints.add(new WhiteboardPoint(whiteboardPoint.getX() - radius,whiteboardPoint.getY()));
  selectionPoints.add(new WhiteboardPoint(whiteboardPoint.getX(),whiteboardPoint.getY() - radius));
  selectionPoints.add(new WhiteboardPoint(whiteboardPoint.getX() + radius,whiteboardPoint.getY()));
  selectionPoints.add(new WhiteboardPoint(whiteboardPoint.getX(),whiteboardPoint.getY() + radius));
}
