{
  LocaleItem lm=(LocaleItem)value;
  if (value != null) {
    labels[0].setText(lm.locale.getDisplayLanguage());
    labels[1].setText(lm.locale.getDisplayLanguage(lm.locale));
    labels[2].setText(Resources.getString("plugin.generalconfig.DEFAULT_LANGUAGE_TRANSLATED",new String[]{Integer.toString(lm.translated)}));
  }
 else {
    labels[0].setText("");
    labels[1].setText("");
    labels[2].setText("");
  }
  this.setBackground(isSelected ? list.getSelectionBackground() : list.getBackground());
  return this;
}
