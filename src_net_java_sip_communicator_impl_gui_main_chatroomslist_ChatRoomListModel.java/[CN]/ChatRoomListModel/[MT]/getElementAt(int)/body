{
  Iterator<ChatRoomProviderWrapper> chatRoomProviders=chatRoomList.getChatRoomProviders();
  int currentIndex=0;
  while (chatRoomProviders.hasNext()) {
    ChatRoomProviderWrapper provider=chatRoomProviders.next();
    if (currentIndex == index) {
      return provider;
    }
 else {
      int childCount=provider.countChatRooms();
      if (index <= (currentIndex + childCount)) {
        ChatRoomWrapper chatRoom=provider.getChatRoom(index - currentIndex - 1);
        return chatRoom;
      }
 else {
        currentIndex+=1 + childCount;
      }
    }
  }
  return null;
}
