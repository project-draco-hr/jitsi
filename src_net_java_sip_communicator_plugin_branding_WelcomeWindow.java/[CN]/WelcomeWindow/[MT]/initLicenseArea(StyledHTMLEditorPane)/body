{
  licenseArea.setContentType("text/html");
  licenseArea.appendToEnd(BrandingActivator.getResources().getI18NString("plugin.branding.LICENSE",new String[]{Constants.TEXT_COLOR}));
  licenseArea.setPreferredSize(new Dimension(50,20));
  licenseArea.setBorder(BorderFactory.createEmptyBorder(0,DEFAULT_TEXT_INDENT,0,0));
  licenseArea.setOpaque(false);
  licenseArea.setEditable(false);
  licenseArea.setAlignmentX(Component.RIGHT_ALIGNMENT);
}
