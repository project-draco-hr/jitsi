{
  rightsArea.setContentType("text/html");
  rightsArea.appendToEnd(BrandingActivator.getResources().getI18NString("plugin.branding.WELCOME_MESSAGE",new String[]{Constants.TEXT_COLOR,APPLICATION_NAME,BrandingActivator.getResources().getSettingsString("service.gui.APPLICATION_WEB_SITE")}));
  rightsArea.setPreferredSize(new Dimension(50,50));
  rightsArea.setBorder(BorderFactory.createEmptyBorder(0,DEFAULT_TEXT_INDENT,0,0));
  rightsArea.setOpaque(false);
  rightsArea.setEditable(false);
  rightsArea.setAlignmentX(Component.RIGHT_ALIGNMENT);
}
