{
  if (suggestedLatency != PortAudio.LATENCY_UNSEPCIFIED)   return suggestedLatency;
  String osName=System.getProperty("os.name");
  if (osName.startsWith("Mac"))   return PortAudio.LATENCY_HIGH;
 else   if (osName.startsWith("Linux"))   return PortAudio.LATENCY_HIGH;
 else   if (osName.startsWith("Windows"))   return 0.1d;
  return PortAudio.LATENCY_UNSEPCIFIED;
}
