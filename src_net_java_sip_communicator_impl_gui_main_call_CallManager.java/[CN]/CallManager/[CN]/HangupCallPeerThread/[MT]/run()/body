{
  ProtocolProviderService pps=callPeer.getProtocolProvider();
  OperationSetBasicTelephony telephony=pps.getOperationSet(OperationSetBasicTelephony.class);
  try {
    telephony.hangupCallPeer(callPeer);
  }
 catch (  OperationFailedException e) {
    logger.error("Could not hang up : " + callPeer + " caused by the following exception: "+ e);
  }
}
