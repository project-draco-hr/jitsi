{
  byte[] image=null;
  if (peer.getContact() != null) {
    MetaContact metaContact=GuiActivator.getContactListService().findMetaContactByContact(peer.getContact());
    image=metaContact.getAvatar();
  }
  if ((image == null || image.length == 0) && peer.getImage() != null)   image=peer.getImage();
  return image;
}
