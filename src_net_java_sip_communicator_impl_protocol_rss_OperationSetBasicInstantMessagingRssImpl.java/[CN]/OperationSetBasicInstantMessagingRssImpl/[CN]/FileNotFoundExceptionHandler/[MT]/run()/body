{
  if (contact.getPresenceStatus() == RssStatusEnum.OFFLINE) {
    return;
  }
  UIService uiService=RssActivator.getUIService();
  String title=RssActivator.getResources().getI18NString(TITLE_CONFIRM_REMOVE_MISSING_CONTACT);
  String message=RssActivator.getResources().getI18NString(MSG_CONFIRM_REMOVE_MISSING_CONTACT,new String[]{contact.getAddress()});
  getParentProvider().getOperationSetPresence().changePresenceStatusForContact(contact,RssStatusEnum.OFFLINE);
  int result=uiService.getPopupDialog().showConfirmPopupDialog(message,title,PopupDialog.YES_NO_OPTION);
  if (result == PopupDialog.YES_OPTION) {
    try {
      getParentProvider().getOperationSetPresence().unsubscribe(contact);
    }
 catch (    OperationFailedException exc) {
      if (logger.isInfoEnabled())       logger.info("We could not remove a dead contact",exc);
    }
  }
}
