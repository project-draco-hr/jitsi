{
  if (!(to instanceof ContactRssImpl))   throw new IllegalArgumentException("The specified contact is not a Rss contact." + to);
  if (to.isPersistent() && to.getPresenceStatus().equals(RssStatusEnum.OFFLINE)) {
    MessageDeliveryFailedEvent evt=new MessageDeliveryFailedEvent(message,to,MessageDeliveryFailedEvent.OFFLINE_MESSAGES_NOT_SUPPORTED);
    fireMessageEvent(evt);
    return;
  }
  Message msg=new MessageRssImpl("Refreshing feed...",DEFAULT_MIME_TYPE,DEFAULT_MIME_ENCODING,null);
  fireMessageEvent(new MessageDeliveredEvent(msg,to,new Date()));
  threadedContactFeedUpdate((ContactRssImpl)to);
}
