{
  if (timer != null)   return;
  if (logger.isTraceEnabled())   logger.trace("Creating rss timer and task.");
  RssTimerRefreshFeed refresh=new RssTimerRefreshFeed(this);
  this.timer=new Timer();
  this.timer.scheduleAtFixedRate(refresh,INITIAL_RSS_LOAD_DELAY,PERIOD_REFRESH_RSS);
  if (logger.isTraceEnabled())   logger.trace("Done.");
}
