{
  setBackgroundImage(ImageLoader.getImage(bgImage));
  setPressedImage(ImageLoader.getImage(pressedImage));
  if (iconImageID != null) {
    if (!fullScreen && !inButtonToolBar)     setIconImage(ImageUtils.scaleImageWithinBounds(ImageLoader.getImage(iconImageID),18,18));
 else     setIconImage(ImageLoader.getImage(iconImageID));
  }
}
