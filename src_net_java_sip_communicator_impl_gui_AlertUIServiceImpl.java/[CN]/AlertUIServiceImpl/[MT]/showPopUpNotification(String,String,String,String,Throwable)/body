{
  NotificationService notificationService=GuiActivator.getNotificationService();
  if (notificationService == null)   return;
  if (!isRegisteredToPopupMessageListener) {
    notificationService.registerDefaultNotificationForEvent(NOTIFICATION_EVENT_TYPE,NotificationAction.ACTION_POPUP_MESSAGE,null,null);
    isRegisteredToPopupMessageListener=true;
    addOrRemovePopupMessageListener(true);
  }
  Map<String,Object> extras=new HashMap<String,Object>();
  extras.put(NotificationData.POPUP_MESSAGE_HANDLER_TAG_EXTRA,new ErrorDialogParams(title,message,e));
  notificationService.fireNotification(NOTIFICATION_EVENT_TYPE,title,message,null,extras);
}
