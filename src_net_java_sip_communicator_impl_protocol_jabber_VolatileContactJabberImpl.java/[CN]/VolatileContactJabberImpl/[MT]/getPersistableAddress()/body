{
  if (!isPrivateMessagingContact)   return getAddress();
  ChatRoomMemberJabberImpl chatRoomMember=((OperationSetMultiUserChatJabberImpl)getProtocolProvider().getOperationSet(OperationSetMultiUserChat.class)).getChatRoom(StringUtils.parseBareAddress(contactId)).findMemberForNickName(StringUtils.parseResource(contactId));
  return ((chatRoomMember == null) ? null : StringUtils.parseBareAddress(chatRoomMember.getJabberID()));
}
