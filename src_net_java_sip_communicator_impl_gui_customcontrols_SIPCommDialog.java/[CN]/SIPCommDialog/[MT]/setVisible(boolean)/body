{
  if (isVisible) {
    this.pack();
    if (isSaveSizeAndLocation)     this.setSizeAndLocation();
 else {
      this.pack();
      this.setCenterLocation();
    }
    JButton button=this.getRootPane().getDefaultButton();
    if (button != null)     button.requestFocus();
  }
  super.setVisible(isVisible);
}
