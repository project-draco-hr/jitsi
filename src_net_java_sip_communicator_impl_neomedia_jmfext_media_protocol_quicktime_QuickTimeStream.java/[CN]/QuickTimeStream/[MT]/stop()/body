{
  transferDataThread=null;
synchronized (dataSyncRoot) {
    if (data != null) {
      byteBufferPool.returnFreeBuffer(data);
      data=null;
    }
    dataFormat=null;
    if (nextData != null) {
      byteBufferPool.returnFreeBuffer(nextData);
      nextData=null;
    }
    nextDataFormat=null;
    if (!automaticallyDropsLateVideoFrames)     dataSyncRoot.notifyAll();
  }
}
