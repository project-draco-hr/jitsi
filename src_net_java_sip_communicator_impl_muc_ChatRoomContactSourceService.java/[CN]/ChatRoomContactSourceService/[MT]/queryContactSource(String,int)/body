{
  if (queryString == null)   queryString="";
  ChatRoomQuery contactQuery=new ChatRoomQuery(queryString,this);
synchronized (queries) {
    queries.add(contactQuery);
  }
  boolean queryHasStarted=false;
  try {
    contactQuery.start();
    queryHasStarted=true;
  }
  finally {
    if (!queryHasStarted) {
synchronized (queries) {
        if (queries.remove(contactQuery))         queries.notify();
      }
    }
  }
  return contactQuery;
}
