{
  if (device == null)   throw new NullPointerException("device");
  ConfigurationService configurationService=NeomediaActivator.getConfigurationService();
  String format=configurationService.getString(Recorder.CALL_FORMAT);
  if (format == null)   format=SoundFileUtils.mp2;
  deviceSession=device.createRecordingSession(getContentDescriptor(format));
}
