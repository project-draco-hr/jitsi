{
  if (device == null)   throw new NullPointerException("device");
  String format=NeomediaActivator.getConfigurationService().getString(Recorder.CALL_FORMAT);
  this.format=(format == null) ? SoundFileUtils.DEFAULT_CALL_RECORDING_FORMAT : format;
  deviceSession=device.createRecordingSession(getContentDescriptor(this.format));
}
