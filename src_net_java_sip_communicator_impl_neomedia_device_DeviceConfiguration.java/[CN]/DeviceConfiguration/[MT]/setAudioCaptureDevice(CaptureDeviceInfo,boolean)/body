{
  if (audioCaptureDevice != device) {
    CaptureDeviceInfo oldDevice=audioCaptureDevice;
    audioCaptureDevice=device;
    if (save) {
      NeomediaActivator.getConfigurationService().setProperty(PROP_AUDIO_DEVICE,(audioCaptureDevice == null) ? AUDIO_NONE : audioCaptureDevice.getName());
    }
    firePropertyChange(AUDIO_CAPTURE_DEVICE,oldDevice,device);
  }
}
