{
  if (videoCaptureDevice != device) {
    CaptureDeviceInfo oldDevice=videoCaptureDevice;
    videoCaptureDevice=device;
    ConfigurationService config=NeomediaActivator.getConfigurationService();
    config.setProperty(PROP_VIDEO_DEVICE_IS_DISABLED,videoCaptureDevice == null);
    if (videoCaptureDevice != null)     config.setProperty(PROP_VIDEO_DEVICE,videoCaptureDevice.getName());
    firePropertyChange(VIDEO_CAPTURE_DEVICE,oldDevice,device);
  }
}
