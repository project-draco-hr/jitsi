{
  if (videoCaptureDevice != device) {
    CaptureDeviceInfo oldDevice=videoCaptureDevice;
    videoCaptureDevice=device;
    if (save) {
      ConfigurationService cfg=NeomediaActivator.getConfigurationService();
      if (cfg != null) {
        cfg.setProperty(PROP_VIDEO_DEVICE,(videoCaptureDevice == null) ? NoneAudioSystem.LOCATOR_PROTOCOL : videoCaptureDevice.getName());
      }
    }
    firePropertyChange(VIDEO_CAPTURE_DEVICE,oldDevice,device);
  }
}
