{
  try {
    PortAudioManager portAudioManager=PortAudioManager.getInstance();
    portAudioManager.setEchoCancel(enabled,portAudioManager.getFilterLength());
    if (save)     NeomediaActivator.getConfigurationService().setProperty(PROP_AUDIO_ECHOCANCEL_ENABLED,enabled);
  }
 catch (  PortAudioException ex) {
    logger.error("Error setting echocancel config",ex);
  }
}
