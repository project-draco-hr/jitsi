{
  if (this.audioSystem != audioSystem) {
    if (this.audioSystem != null)     this.audioSystem.removePropertyChangeListener(this);
    AudioSystem oldValue=this.audioSystem;
    this.audioSystem=audioSystem;
    if (this.audioSystem != null)     this.audioSystem.addPropertyChangeListener(this);
    if (save) {
      ConfigurationService cfg=NeomediaActivator.getConfigurationService();
      if (cfg != null) {
        if (this.audioSystem == null)         cfg.removeProperty(PROP_AUDIO_SYSTEM);
 else         cfg.setProperty(PROP_AUDIO_SYSTEM,this.audioSystem.getLocatorProtocol());
      }
    }
    firePropertyChange(PROP_AUDIO_SYSTEM,oldValue,this.audioSystem);
  }
}
