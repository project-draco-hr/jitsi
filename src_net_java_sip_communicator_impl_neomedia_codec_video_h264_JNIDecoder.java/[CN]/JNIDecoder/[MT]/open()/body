{
  if (opened)   return;
  long avcodec=FFmpeg.avcodec_find_decoder(FFmpeg.CODEC_ID_H264);
  avcontext=FFmpeg.avcodec_alloc_context();
  FFmpeg.avcodeccontext_set_workaround_bugs(avcontext,FFmpeg.FF_BUG_AUTODETECT);
  FFmpeg.avcodeccontext_add_flags2(avcontext,FFmpeg.CODEC_FLAG2_CHUNKS);
  if (FFmpeg.avcodec_open(avcontext,avcodec) < 0)   throw new RuntimeException("Could not open codec CODEC_ID_H264");
  avframe=FFmpeg.avcodec_alloc_frame();
  opened=true;
  super.open();
}
