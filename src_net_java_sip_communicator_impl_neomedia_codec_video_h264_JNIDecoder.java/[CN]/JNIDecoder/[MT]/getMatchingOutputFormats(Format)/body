{
  VideoFormat ivf=(VideoFormat)in;
  Dimension inSize=ivf.getSize();
  VideoFormat ovf;
  if (inSize == null) {
    ovf=outputFormats[defaultSizeIx];
  }
 else {
    ovf=null;
    for (    VideoFormat vf : outputFormats) {
      if (vf.getSize().equals(inSize)) {
        ovf=vf;
        break;
      }
    }
  }
  if (ovf == null)   return null;
  Dimension outSize=ovf.getSize();
  return new Format[]{new RGBFormat(outSize,-1,Format.intArray,ensureFrameRate(ivf.getFrameRate()),32,RED_MASK,GREEN_MASK,BLUE_MASK,1,outSize.width,Format.FALSE,Format.NOT_SPECIFIED)};
}
