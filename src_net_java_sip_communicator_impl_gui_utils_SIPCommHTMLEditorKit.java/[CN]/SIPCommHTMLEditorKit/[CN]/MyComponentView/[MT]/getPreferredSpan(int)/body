{
  if ((axis != X_AXIS) && (axis != Y_AXIS)) {
    throw new IllegalArgumentException("Invalid axis: " + axis);
  }
  if (getComponent() != null) {
    Dimension size=getComponent().getPreferredSize();
    if (axis == View.X_AXIS) {
      return container.getWidth();
    }
 else {
      return size.height;
    }
  }
  return 0;
}
