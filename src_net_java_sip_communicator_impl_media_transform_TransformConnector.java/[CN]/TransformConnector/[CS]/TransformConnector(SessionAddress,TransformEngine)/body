{
  this.localAddr=localAddr;
  this.engine=engine;
  try {
    this.dataSocket=new DatagramSocket(this.localAddr.getDataPort(),this.localAddr.getDataAddress());
    this.ctrlSocket=new DatagramSocket(this.localAddr.getControlPort(),this.localAddr.getControlAddress());
  }
 catch (  SocketException e) {
    throw new InvalidSessionAddressException();
  }
}
