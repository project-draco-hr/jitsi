{
  if (mouseAndKeyListener != null) {
    Call call=callPeer.getCall();
    if (call != null) {
      OperationSetDesktopSharingClient desktopSharingClient=call.getProtocolProvider().getOperationSet(OperationSetDesktopSharingClient.class);
      if (desktopSharingClient != null) {
        desktopSharingClient.removeRemoteControlListener(mouseAndKeyListener);
      }
    }
  }
}
