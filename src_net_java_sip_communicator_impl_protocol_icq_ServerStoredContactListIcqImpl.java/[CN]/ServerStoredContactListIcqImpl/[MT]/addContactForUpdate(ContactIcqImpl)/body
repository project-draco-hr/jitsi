{
  if (getParentProvider().getRegistrationState().equals(RegistrationState.REGISTERED)) {
    new Thread(new NickRetriever(c)).start();
  }
 else {
    if (providerListener == null) {
      providerListener=new ProviderListener();
      getParentProvider().addRegistrationStateChangeListener(providerListener);
    }
    contactsForUpdate.add(c);
  }
}
