{
  if (contact.isPersistent()) {
    List contactsToMove=new ArrayList();
    contactsToMove.add(contact.getJoustSimBuddy());
    buddyList.moveBuddies(contactsToMove,newParent.getJoustSimSourceGroup());
  }
 else {
    ContactGroupIcqImpl oldParent=(ContactGroupIcqImpl)contact.getParentContactGroup();
    addContact(newParent,contact.getUIN());
  }
}
