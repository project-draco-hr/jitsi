{
  if (StringUtils.isNullOrEmpty(action.getDescriptor(),true))   return;
  String actionDescriptor=action.getDescriptor();
  if (cmdargs != null) {
    for (    Map.Entry<String,String> entry : cmdargs.entrySet()) {
      if (actionDescriptor.indexOf("${" + entry.getKey() + "}") != -1) {
        actionDescriptor=actionDescriptor.replace("${" + entry.getKey() + "}",entry.getValue());
      }
    }
  }
  try {
    Runtime.getRuntime().exec(actionDescriptor);
  }
 catch (  IOException e) {
    logger.error("Failed execute the following command: " + action.getDescriptor(),e);
  }
}
