{
  bundleContext=bc;
  ServiceReference uiServiceRef=bc.getServiceReference(UIService.class.getName());
  uiService=(UIService)bc.getService(uiServiceRef);
  session=new WhiteboardSessionManager();
  if (uiService.isContainerSupported(UIService.CONTAINER_CONTACT_RIGHT_BUTTON_MENU)) {
    WhiteboardMenuItem whiteboardPlugin=new WhiteboardMenuItem(session);
    uiService.addComponent(UIService.CONTAINER_CONTACT_RIGHT_BUTTON_MENU,whiteboardPlugin);
  }
}
