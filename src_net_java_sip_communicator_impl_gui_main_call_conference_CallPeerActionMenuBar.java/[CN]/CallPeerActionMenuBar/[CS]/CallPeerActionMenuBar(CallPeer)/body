{
  this.callPeer=peer;
  SIPCommMenu menu=new SIPCommMenu();
  this.setOpaque(false);
  menu.setOpaque(false);
  menu.setBorder(BorderFactory.createEmptyBorder());
  menu.setIcon(new ImageIcon(ImageLoader.getImage(ImageLoader.DOWN_ARROW_ICON)));
  menu.addItem(GuiActivator.getResources().getI18NString("service.gui.HANG_UP"),null,new ActionListener(){
    public void actionPerformed(    ActionEvent e){
      CallManager.hangupCallPeer(callPeer);
    }
  }
);
  initHoldMenuItem();
  initMuteMenuItem();
  menu.add(holdMenuItem);
  menu.add(muteMenuItem);
  this.add(menu);
  peer.addCallPeerListener(this);
  peer.addPropertyChangeListener(this);
}
