{
  long parameters=PortAudio.PaStreamParameters_new(deviceIndex,channels,PortAudio.SAMPLE_FORMAT_INT16,PortAudioManager.getSuggestedLatency());
  stream=PortAudio.Pa_OpenStream(parameters,0,sampleRate,PortAudio.FRAMES_PER_BUFFER_UNSPECIFIED,PortAudio.STREAM_FLAGS_CLIP_OFF | PortAudio.STREAM_FLAGS_DITHER_OFF,null);
}
