{
  if (sendStreams == null)   return null;
  for (  SendStream sendStream : sendStreams)   try {
    if (logger.isTraceEnabled())     logger.trace("Stopping send stream with hashcode " + sendStream.hashCode());
    sendStream.getDataSource().stop();
    sendStream.stop();
    if (close)     try {
      sendStream.close();
    }
 catch (    NullPointerException npe) {
      logger.error("Failed to close stream " + sendStream,npe);
    }
  }
 catch (  IOException ioe) {
    logger.warn("Failed to stop stream " + sendStream,ioe);
  }
  return sendStreams;
}
