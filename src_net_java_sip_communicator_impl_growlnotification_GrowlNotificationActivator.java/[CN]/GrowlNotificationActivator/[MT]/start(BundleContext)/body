{
  if (logger.isInfoEnabled())   logger.info("Growl Notification ...[Starting]");
  bundleContext=bc;
  getConfigurationService();
  handler=new GrowlNotificationServiceImpl();
  if (handler.isGrowlInstalled()) {
    handler.start(bc);
    bc.registerService(PopupMessageHandler.class.getName(),handler,null);
  }
 else {
    if (logger.isInfoEnabled())     logger.info("Growl Notification ...[Aborted]");
    return;
  }
  if (logger.isInfoEnabled())   logger.info("Growl Notification ...[Started]");
}
