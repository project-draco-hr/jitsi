{
  Image resultImage=null;
  try {
    resultImage=ImageIO.read(new ByteArrayInputStream(image));
  }
 catch (  Exception e) {
    logger.error("Failed to convert bytes to image.",e);
  }
  if (resultImage == null)   return null;
  return resultImage.getScaledInstance(avatarLabel.getWidth(),avatarLabel.getHeight(),Image.SCALE_SMOOTH);
}
