{
  xml.append('<').append(ELEMENT_NAME);
  xml.append(' ').append(STATE_ATTR_NAME).append("='").append(state).append('\'');
  if (token != null) {
    xml.append(' ').append(TOKEN_ATTR_NAME).append("='").append(token).append('\'');
  }
  if (path != null) {
    xml.append(' ').append(PATH_ATTR_NAME).append("='").append(path).append('\'');
  }
  xml.append("/>");
}
