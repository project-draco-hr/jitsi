{
  if (this.session != null && this.session.isLoggedIn())   return true;
  logger.info("initializing facebook adapter. account");
  try {
    this.session=new FacebookSession();
    boolean loggedIn=session.login(email,password);
    if (loggedIn)     session.addListener(this);
    return loggedIn;
  }
 catch (  Exception e) {
    throw new OperationFailedException("unable to initialize adapter",FacebookErrorException.kError_Login_GenericError,e);
  }
}
