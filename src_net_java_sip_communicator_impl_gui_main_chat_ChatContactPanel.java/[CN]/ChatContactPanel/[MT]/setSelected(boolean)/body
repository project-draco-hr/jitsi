{
  chatContact.setSelected(isSelected);
  if (isSelected) {
    this.mainPanel.add(buttonsPanel,BorderLayout.NORTH);
    this.mainPanel.revalidate();
    this.mainPanel.repaint();
  }
 else {
    this.mainPanel.remove(buttonsPanel);
    this.mainPanel.revalidate();
    this.mainPanel.repaint();
  }
}
