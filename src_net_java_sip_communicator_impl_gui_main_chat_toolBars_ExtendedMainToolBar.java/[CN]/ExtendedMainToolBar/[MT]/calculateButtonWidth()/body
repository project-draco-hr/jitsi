{
  int width=DEFAULT_BUTTON_WIDTH;
  FontMetrics fontMetrics=copyButton.getFontMetrics(copyButton.getFont());
  int textWidth=fontMetrics.stringWidth(Messages.getI18NString("copy").getText());
  if (textWidth > width)   width=textWidth;
  textWidth=fontMetrics.stringWidth(Messages.getI18NString("cut").getText());
  if (textWidth > width)   width=textWidth;
  textWidth=fontMetrics.stringWidth(Messages.getI18NString("paste").getText());
  if (textWidth > width)   width=textWidth;
  textWidth=fontMetrics.stringWidth(Messages.getI18NString("back").getText());
  if (textWidth > width)   width=textWidth;
  textWidth=fontMetrics.stringWidth(Messages.getI18NString("next").getText());
  if (textWidth > width)   width=textWidth;
  textWidth=fontMetrics.stringWidth(Messages.getI18NString("history").getText());
  if (textWidth > width)   width=textWidth;
  textWidth=fontMetrics.stringWidth(Messages.getI18NString("smiley").getText());
  if (textWidth > width)   width=textWidth;
  return width + 5;
}
