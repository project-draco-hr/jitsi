{
  if (!ConfigurationManager.isMoveContactConfirmationRequested()) {
    mainFrame.getContactList().moveMetaContact(srcContact,destGroup);
    return;
  }
  String message=GuiActivator.getResources().getI18NString("service.gui.MOVE_SUBCONTACT_QUESTION",new String[]{srcContact.getDisplayName(),destGroup.getGroupName()});
  MessageDialog dialog=new MessageDialog(mainFrame,GuiActivator.getResources().getI18NString("service.gui.MOVE_CONTACT"),message,GuiActivator.getResources().getI18NString("service.gui.MOVE"));
  int returnCode=dialog.showDialog();
  if (returnCode == MessageDialog.OK_RETURN_CODE) {
    mainFrame.getContactList().moveMetaContact(srcContact,destGroup);
  }
 else   if (returnCode == MessageDialog.OK_DONT_ASK_CODE) {
    ConfigurationManager.setMoveContactConfirmationRequested(false);
    mainFrame.getContactList().moveMetaContact(srcContact,destGroup);
  }
}
