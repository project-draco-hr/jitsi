{
  if (draggedElement != null) {
    if (!draggedElement.isVisible())     draggedElement.setVisible(true);
    Point p=(Point)e.getPoint().clone();
    p=SwingUtilities.convertPoint(e.getComponent(),p,draggedElement);
    draggedElement.setLocation(p);
    draggedElement.repaint();
  }
 else   this.setCursor(Cursor.getPredefinedCursor(Cursor.DEFAULT_CURSOR));
}
