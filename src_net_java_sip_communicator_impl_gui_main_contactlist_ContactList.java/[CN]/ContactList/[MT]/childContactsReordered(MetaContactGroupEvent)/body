{
  MetaContactGroup group=evt.getSourceMetaContactGroup();
  int startIndex=this.listModel.indexOf(group.getMetaContact(0));
  int endIndex=this.listModel.indexOf(group.getMetaContact(group.countChildContacts() - 1));
  this.listModel.contentChanged(startIndex,endIndex);
  if (currentlySelectedContact != null)   this.setSelectedValue(currentlySelectedContact,false);
}
