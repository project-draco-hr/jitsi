{
  PluginComponent pluginComponent=event.getPluginComponent();
  Container pluginContainer=pluginComponent.getContainer();
  Object component=pluginComponent.getComponent();
  if (!(component instanceof Component))   return;
  if (pluginContainer.equals(Container.CONTAINER_MAIN_TOOL_BAR) || pluginContainer.equals(Container.CONTAINER_ACCOUNT_SOUTH)) {
    this.revalidate();
    this.repaint();
  }
}
