{
  if (!StringUtils.isNullOrEmpty(globalDisplayName))   return;
  if (evt.getNewValue() instanceof ServerStoredDetails.DisplayNameDetail && (evt.getEventID() == ServerStoredDetailsChangeEvent.DETAIL_ADDED || evt.getEventID() == ServerStoredDetailsChangeEvent.DETAIL_REPLACED)) {
    String accountName=((ServerStoredDetails.DisplayNameDetail)evt.getNewValue()).getName();
    if (accountName != null && accountName.length() > 0)     accountNameLabel.setText(accountName);
  }
}
