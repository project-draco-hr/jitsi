{
  if (evt.getPropertyName().equals(ChatRoomPropertyChangeEvent.CHAT_ROOM_SUBJECT)) {
    subjectPanel.setSubject((String)evt.getNewValue());
    this.processMessage(evt.getSourceChatRoom().getName(),new Date(System.currentTimeMillis()),Constants.STATUS_MESSAGE,Messages.getI18NString("chatRoomSubjectChanged",new String[]{evt.getSourceChatRoom().getName(),evt.getNewValue().toString()}).getText(),ChatConversationPanel.TEXT_CONTENT_TYPE);
  }
}
