{
  if (stream == 0) {
    long streamParameters=PortAudio.PaStreamParameters_new(deviceIndex,audioFormat.getChannels(),PortAudio.SAMPLE_FORMAT_INT16);
    stream=PortAudio.Pa_OpenStream(streamParameters,0,audioFormat.getSampleRate(),PortAudio.FRAMES_PER_BUFFER_UNSPECIFIED,PortAudio.STREAM_FLAGS_NO_FLAG,null);
    sampleSize=PortAudio.Pa_GetSampleSize(PortAudio.SAMPLE_FORMAT_INT16);
  }
  return stream;
}
