{
  if (this.popupMenu == null) {
    return;
  }
  if (show) {
    Point imageLoc=this.getLocationOnScreen();
    Point rootPaneLoc=mainFrame.getRootPane().getLocationOnScreen();
    this.popupMenu.setSize(mainFrame.getRootPane().getWidth(),this.popupMenu.getHeight());
    this.popupMenu.show(this,(rootPaneLoc.x - imageLoc.x),this.getHeight());
  }
 else {
    this.drawOverlay=false;
    this.repaint();
  }
}
