{
  final String user=msg.getSource().getNick();
  final Contact from=IrcConnection.this.provider.getPersistentPresence().findContactByID(user);
  final MessageIrcImpl message=MessageIrcImpl.newActionFromIRC(from,msg.getText());
  IrcConnection.this.provider.getBasicInstantMessaging().fireMessageReceived(message,from);
}
