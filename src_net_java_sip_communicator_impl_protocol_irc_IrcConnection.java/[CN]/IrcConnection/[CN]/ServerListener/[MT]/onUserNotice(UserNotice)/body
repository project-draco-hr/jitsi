{
  final String user=msg.getSource().getNick();
  final Contact from=IrcConnection.this.provider.getPersistentPresence().findOrCreateContactByID(user);
  final MessageIrcImpl message=MessageIrcImpl.newNoticeFromIRC(from,msg.getText());
  IrcConnection.this.provider.getBasicInstantMessaging().fireMessageReceived(message,from);
}
