{
  transferDataThread=null;
synchronized (dataSyncRoot) {
    if (data != null) {
      bufferPool.returnFreeBuffer(data);
      data=null;
    }
    if (nextData != null) {
      bufferPool.returnFreeBuffer(nextData);
      nextData=null;
    }
    if (!automaticallyDropsLateVideoFrames)     dataSyncRoot.notifyAll();
  }
}
