{
  MessageHistoryService msgHistory=GuiActivator.getMsgHistoryService();
  Collection nextMessages=msgHistory.findFirstMessagesAfter(metaContact,conversationPanel.getPageLastMsgTimestamp(),1);
  Collection previousMessages=msgHistory.findLastMessagesBefore(metaContact,conversationPanel.getPageFirstMsgTimestamp(),1);
  if (nextMessages.size() > 0) {
    nextButton.setEnabled(true);
  }
 else {
    nextButton.setEnabled(false);
  }
  if (previousMessages.size() > 0) {
    previousButton.setEnabled(true);
  }
 else {
    previousButton.setEnabled(false);
  }
}
