{
  if (Constants.REMOVE_CONTACT_ASK) {
    String message=Messages.getI18NString("removeContactText",new String[]{contactItem.getDisplayName()}).getText();
    MessageDialog dialog=new MessageDialog(mainFrame,Messages.getI18NString("removeContact").getText(),message,Messages.getI18NString("remove").getText());
    int returnCode=dialog.showDialog();
    if (returnCode == MessageDialog.OK_RETURN_CODE) {
      mainFrame.getContactList().removeMetaContact(contactItem);
    }
 else     if (returnCode == MessageDialog.OK_DONT_ASK_CODE) {
      mainFrame.getContactList().removeMetaContact(contactItem);
      Constants.REMOVE_CONTACT_ASK=false;
    }
  }
 else {
    mainFrame.getContactList().removeMetaContact(contactItem);
  }
}
