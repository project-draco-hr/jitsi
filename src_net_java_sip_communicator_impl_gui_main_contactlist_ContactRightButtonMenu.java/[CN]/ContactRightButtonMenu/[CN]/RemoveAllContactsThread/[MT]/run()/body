{
  if (Constants.REMOVE_CONTACT_ASK) {
    String message=GuiActivator.getResources().getI18NString("service.gui.REMOVE_CONTACT_TEXT",new String[]{contactItem.getDisplayName()});
    MessageDialog dialog=new MessageDialog(mainFrame,GuiActivator.getResources().getI18NString("service.gui.REMOVE_CONTACT"),message,GuiActivator.getResources().getI18NString("service.gui.REMOVE"));
    int returnCode=dialog.showDialog();
    if (returnCode == MessageDialog.OK_RETURN_CODE) {
      mainFrame.getContactList().removeMetaContact(contactItem);
    }
 else     if (returnCode == MessageDialog.OK_DONT_ASK_CODE) {
      mainFrame.getContactList().removeMetaContact(contactItem);
      Constants.REMOVE_CONTACT_ASK=false;
    }
  }
 else {
    mainFrame.getContactList().removeMetaContact(contactItem);
  }
}
