{
  ContactGroupFacebookImpl facebookGroup=(ContactGroupFacebookImpl)group;
  ContactGroupFacebookImpl parent=findGroupParent(facebookGroup);
  if (parent == null) {
    throw new IllegalArgumentException("group " + group + " does not seem to belong to this protocol's contact list.");
  }
  parent.removeSubGroup(facebookGroup);
  this.fireServerStoredGroupEvent(facebookGroup,ServerStoredGroupEvent.GROUP_REMOVED_EVENT);
}
