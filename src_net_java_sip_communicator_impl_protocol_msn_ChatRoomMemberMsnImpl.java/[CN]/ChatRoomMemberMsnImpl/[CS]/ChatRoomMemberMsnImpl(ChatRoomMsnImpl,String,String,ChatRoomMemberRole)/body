{
  this.containingRoom=chatRoom;
  this.nickName=nickName;
  this.userAddress=userAddress;
  this.memberRole=role;
  OperationSetPersistentPresenceMsnImpl presenceOpSet=(OperationSetPersistentPresenceMsnImpl)chatRoom.getParentProvider().getOperationSet(OperationSetPersistentPresence.class);
  this.contact=presenceOpSet.findContactByID(userAddress);
  if (contact != null)   this.avatar=contact.getImage();
}
