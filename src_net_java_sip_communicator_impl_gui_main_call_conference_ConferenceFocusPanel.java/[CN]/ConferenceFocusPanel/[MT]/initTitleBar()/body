{
  Color bgColor=new Color(GuiActivator.getResources().getColor("service.gui.CALL_PEER_NAME_BACKGROUND"));
  if (bgColor != null)   titleBar.setBackground(bgColor);
  titleBar.setBorder(BorderFactory.createEmptyBorder(2,8,2,8));
  JPanel nameBar=new TransparentPanel(new FlowLayout(FlowLayout.LEFT,0,0));
  nameBar.add(nameLabel);
  CallPeerActionMenuBar actionMenuBar=new CallPeerActionMenuBar(callPeer);
  nameBar.add(actionMenuBar);
  titleBar.add(nameBar,BorderLayout.WEST);
  titleBar.add(createStatusBar(),BorderLayout.EAST);
}
