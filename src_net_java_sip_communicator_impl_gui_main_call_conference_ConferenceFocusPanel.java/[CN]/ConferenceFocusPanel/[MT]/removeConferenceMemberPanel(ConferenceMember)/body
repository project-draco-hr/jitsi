{
  Component memberPanel=conferenceMembersPanels.get(member);
  if (memberPanel != null) {
    int i=0;
    this.remove(memberPanel);
    conferenceMembersPanels.remove(member);
    if (!addressesAreEqual(member.getAddress(),focusPeer.getAddress()))     member.removePropertyChangeListener((ConferenceMemberPanel)memberPanel);
    for (    Map.Entry<ConferenceMember,ConferenceMemberPanel> m : conferenceMembersPanels.entrySet()) {
      GridBagConstraints constraints=new GridBagConstraints();
      Component mV=m.getValue();
      this.remove(mV);
      constraints.fill=GridBagConstraints.BOTH;
      constraints.gridx=0;
      constraints.gridy=i;
      constraints.weightx=1;
      constraints.weighty=0;
      constraints.insets=new Insets(0,0,3,0);
      this.add(mV,constraints);
      i++;
    }
  }
}
