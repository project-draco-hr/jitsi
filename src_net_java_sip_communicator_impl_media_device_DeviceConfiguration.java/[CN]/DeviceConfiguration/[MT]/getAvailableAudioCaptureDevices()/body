{
  Vector audioCaptureDevices=CaptureDeviceManager.getDeviceList(new AudioFormat(AudioFormat.LINEAR,44100,16,1));
  if (audioCaptureDevices.size() < 1) {
    return NO_CAPTURE_DEVICES;
  }
 else {
    CaptureDeviceInfo[] result=new CaptureDeviceInfo[audioCaptureDevices.size()];
    for (int i=0; i < result.length; i++) {
      result[i]=(CaptureDeviceInfo)audioCaptureDevices.get(i);
    }
    return result;
  }
}
