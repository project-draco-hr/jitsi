{
  Set<CaptureDeviceInfo> videoCaptureDevices=new HashSet<CaptureDeviceInfo>();
  videoCaptureDevices.addAll(CaptureDeviceManager.getDeviceList(new VideoFormat(VideoFormat.RGB)));
  videoCaptureDevices.addAll(CaptureDeviceManager.getDeviceList(new VideoFormat(VideoFormat.YUV)));
  return videoCaptureDevices.toArray(NO_CAPTURE_DEVICES);
}
