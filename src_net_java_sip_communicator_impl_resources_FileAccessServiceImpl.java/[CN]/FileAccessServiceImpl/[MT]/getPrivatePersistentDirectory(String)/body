{
  Assert.assertNonNull(dirName,"Parameter dirName should be non-null");
  String fullPath=getFullPath(dirName);
  File dir=new File(fullPath,dirName);
  if (dir.exists()) {
    if (!dir.isDirectory()) {
      throw new RuntimeException("Could not create directory " + "because: A file exists with this name:" + dir.getAbsolutePath());
    }
  }
 else {
    if (!dir.mkdirs()) {
      throw new IOException("Could not create directory");
    }
  }
  return dir;
}
