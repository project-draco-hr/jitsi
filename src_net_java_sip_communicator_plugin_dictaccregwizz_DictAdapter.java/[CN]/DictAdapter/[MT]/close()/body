{
  String fromServer;
  try {
    this.out.println("QUIT");
    while ((fromServer=this.in.readLine()) != null) {
      if (fromServer.startsWith("221")) {
        break;
      }
    }
    this.out.close();
    this.in.close();
    this.socket.close();
  }
 catch (  IOException ioe) {
    logger.info("Cannot close the connextion to the server",ioe);
  }
}
