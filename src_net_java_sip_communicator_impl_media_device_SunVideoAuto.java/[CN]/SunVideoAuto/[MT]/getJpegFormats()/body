{
  if (!xilCap.setCompress("Jpeg"))   return;
  for (int i=0; i < scales.length; i++) {
    xilCap.setScale(scales[i]);
    if (xilCap.start()) {
      Dimension size=new Dimension(xilCap.getWidth(),xilCap.getHeight());
      int maxbuf=3 * size.width * size.height;
      addFormat(new VideoFormat(VideoFormat.JPEG,size,maxbuf,byte[].class,15f));
    }
    xilCap.stop();
  }
}
