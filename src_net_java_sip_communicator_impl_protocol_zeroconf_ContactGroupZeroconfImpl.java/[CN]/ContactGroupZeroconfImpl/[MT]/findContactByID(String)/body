{
  Iterator contactsIter=contacts();
  while (contactsIter.hasNext()) {
    ContactZeroconfImpl mContact=(ContactZeroconfImpl)contactsIter.next();
    if (mContact.getAddress().equals(id))     return mContact;
  }
  Iterator groupsIter=subgroups();
  while (groupsIter.hasNext()) {
    ContactGroupZeroconfImpl mGroup=(ContactGroupZeroconfImpl)groupsIter.next();
    ContactZeroconfImpl mContact=mGroup.findContactByID(id);
    if (mContact != null)     return mContact;
  }
  return null;
}
