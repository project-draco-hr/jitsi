{
  try {
    systray=SystemTray.getDefaultSystemTray();
  }
 catch (  Throwable e) {
    logger.error("Failed to create a systray!",e);
  }
  if (systray != null) {
    this.initSystray();
    UIService ui=SystrayActivator.getUIService();
    if (ui != null) {
      ui.setExitOnMainWindowClose(false);
    }
  }
}
