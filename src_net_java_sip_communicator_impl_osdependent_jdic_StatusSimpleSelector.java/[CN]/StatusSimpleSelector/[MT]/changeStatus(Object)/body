{
  String itemName;
  if (source instanceof Component)   itemName=((Component)source).getName();
 else   itemName=((MenuComponent)source).getName();
  if (itemName.equals("online")) {
    OsDependentActivator.getGlobalStatusService().publishStatus(provider,GlobalStatusEnum.ONLINE,true);
  }
 else {
    OsDependentActivator.getGlobalStatusService().publishStatus(provider,GlobalStatusEnum.OFFLINE,true);
  }
}
