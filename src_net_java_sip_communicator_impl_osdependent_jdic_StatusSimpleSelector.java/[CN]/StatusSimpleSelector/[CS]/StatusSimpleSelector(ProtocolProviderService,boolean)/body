{
  this.provider=protocolProvider;
  String text=provider.getAccountID().getUserID();
  if (swing) {
    JMenu menu=new JMenu(text);
    ImageIcon icon=new ImageIcon(protocolProvider.getProtocolIcon().getIcon(ProtocolIcon.ICON_SIZE_16x16));
    if (!provider.isRegistered()) {
      icon=new ImageIcon(LightGrayFilter.createDisabledImage(icon.getImage()));
    }
    menu.setIcon(icon);
    this.menu=menu;
  }
 else {
    this.menu=new Menu(text);
  }
  createMenuItem("impl.systray.ONLINE_STATUS","online");
  createMenuItem("impl.systray.OFFLINE_STATUS","offline");
}
