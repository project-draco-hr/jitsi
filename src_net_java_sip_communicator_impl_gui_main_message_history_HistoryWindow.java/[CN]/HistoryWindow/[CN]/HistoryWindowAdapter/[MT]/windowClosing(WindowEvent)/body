{
  msgHistory.removeSearchProgressListener(HistoryWindow.this);
  ConfigurationService configService=GuiActivator.getConfigurationService();
  try {
    configService.setProperty(HISTORY_WINDOW_WIDTH_PROPERTY,new Integer(getWidth()));
    configService.setProperty(HISTORY_WINDOW_HEIGHT_PROPERTY,new Integer(getHeight()));
    configService.setProperty(HISTORY_WINDOW_X_PROPERTY,new Integer(getX()));
    configService.setProperty(HISTORY_WINDOW_Y_PROPERTY,new Integer(getY()));
  }
 catch (  PropertyVetoException e1) {
    logger.error("The proposed property change " + "represents an unacceptable value");
  }
}
