{
  this.mainFrame=mainFrame;
  this.metaContact=metaContact;
  this.setTitle(Messages.getString("historyContact",metaContact.getDisplayName()));
  this.datesPanel=new DatesPanel(this);
  this.historyMenu=new HistoryMenu(this);
  this.searchPanel=new SearchPanel(this);
  this.setSize(Constants.HISTORY_WINDOW_WIDTH,Constants.HISTORY_WINDOW_HEIGHT);
  this.setIconImage(ImageLoader.getImage(ImageLoader.SIP_LOGO));
  this.initPanels();
  this.initData();
  this.setLocation(Toolkit.getDefaultToolkit().getScreenSize().width / 2 - this.getWidth() / 2,Toolkit.getDefaultToolkit().getScreenSize().height / 2 - this.getHeight() / 2);
}
