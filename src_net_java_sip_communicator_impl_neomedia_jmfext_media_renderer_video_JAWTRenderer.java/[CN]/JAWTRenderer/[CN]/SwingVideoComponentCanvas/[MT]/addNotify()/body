{
  super.addNotify();
synchronized (getHandleLock()) {
    if (getHandle() == 0) {
      try {
        this.handle=open(this);
      }
 catch (      ResourceUnavailableException rue) {
        throw new RuntimeException(rue);
      }
      if (getHandle() == 0) {
        throw new RuntimeException("JAWTRenderer#open(Component)");
      }
    }
  }
}
