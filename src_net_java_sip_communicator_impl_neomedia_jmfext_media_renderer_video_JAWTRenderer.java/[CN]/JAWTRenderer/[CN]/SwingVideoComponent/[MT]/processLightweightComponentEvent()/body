{
  Rectangle bounds=getBounds();
  if (bounds != null) {
synchronized (JAWTRenderer.this) {
      if (handle != 0) {
        Component parent=getParent();
        if (parent != null) {
          bounds.y=parent.getHeight() - (bounds.y + bounds.height);
        }
        JAWTRenderer.processLightweightComponentEvent(handle,bounds.x,bounds.y,bounds.width,bounds.height);
      }
    }
  }
}
