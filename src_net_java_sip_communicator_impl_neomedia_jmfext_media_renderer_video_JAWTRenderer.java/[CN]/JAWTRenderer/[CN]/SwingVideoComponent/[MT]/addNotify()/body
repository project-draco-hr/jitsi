{
  Container parent=getParent();
  if (parent == null)   return;
  super.addNotify();
  wantsPaint=true;
synchronized (JAWTRenderer.this) {
    if (handle != 0) {
      SwingVideoComponentCanvas canvas=findCanvas();
      if (canvas == null) {
        JAWTRenderer.addNotifyLightweightComponent(handle,this,0);
      }
 else {
        long canvasHandle;
synchronized (canvas.getHandleLock()) {
          canvasHandle=canvas.getHandle();
          JAWTRenderer.addNotifyLightweightComponent(handle,this,canvasHandle);
        }
        if ((canvasHandle != 0) && (this.canvas != canvas)) {
          this.canvas=canvas;
        }
      }
      processLightweightComponentEvent();
    }
  }
  parent.addComponentListener(parentComponentListener);
}
