{
  if (handle == 0) {
    boolean addNotify=(this.component != null) && (this.component.getParent() != null);
    handle=open(getComponent());
    if (handle == 0) {
      throw new ResourceUnavailableException("Failed to open the native counterpart of JAWTRenderer");
    }
    if (addNotify)     this.component.addNotify();
  }
}
