{
  boolean addNotify;
  final Component component;
synchronized (this) {
    if (handle == 0) {
      addNotify=(this.component != null) && (this.component.getParent() != null);
      component=getComponent();
      handle=open(component);
      if (handle == 0) {
        throw new ResourceUnavailableException("Failed to open the native counterpart of JAWTRenderer");
      }
    }
 else {
      addNotify=false;
      component=null;
    }
  }
  if (addNotify) {
    SwingUtilities.invokeLater(new Runnable(){
      public void run(){
        component.addNotify();
      }
    }
);
  }
}
