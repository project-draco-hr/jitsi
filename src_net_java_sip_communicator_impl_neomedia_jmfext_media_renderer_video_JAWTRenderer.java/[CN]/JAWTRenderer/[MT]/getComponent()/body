{
  if (component == null) {
    component=(USE_MACOSX_CALAYERS && OSUtils.IS_MAC) ? new SwingVideoComponent() : new AWTVideoComponent(){
      protected long getHandle(){
        return JAWTRenderer.this.handle;
      }
      protected Object getHandleLock(){
        return JAWTRenderer.this;
      }
    }
;
  }
  return component;
}
