{
  EncodingConfiguration encodingConfiguration=NeomediaActivator.getMediaServiceImpl().getEncodingConfiguration();
  List<MediaFormat> supportedMediaFormats=getMatchingMediaFormats(encodingConfiguration.getSupportedEncodings(MediaType.AUDIO),encoding,clockRate);
  if (supportedMediaFormats.isEmpty())   supportedMediaFormats=getMatchingMediaFormats(encodingConfiguration.getSupportedEncodings(MediaType.VIDEO),encoding,clockRate);
  return supportedMediaFormats;
}
