{
  EncodingConfiguration encodingConfiguration=NeomediaActivator.getMediaServiceImpl().getEncodingConfiguration();
  List<MediaFormat> supportedMediaFormats=getSupportedMediaFormats(encodingConfiguration.getSupportedEncodings(MediaType.AUDIO),encoding,clockRate);
  if (supportedMediaFormats.isEmpty())   supportedMediaFormats=getSupportedMediaFormats(encodingConfiguration.getSupportedEncodings(MediaType.VIDEO),encoding,clockRate);
  return supportedMediaFormats;
}
