{
  if (opened) {
    opened=false;
synchronized (AVCODEC) {
      super.close();
      AVCODEC.avcodec_close(avcontext);
      AVUTIL.av_free(avpicture.getPointer());
      AVUTIL.av_free(avcontext.getPointer());
      AVUTIL.av_free(rawFrameBuffer);
      AVUTIL.av_free(encFrameBuffer);
    }
  }
}
