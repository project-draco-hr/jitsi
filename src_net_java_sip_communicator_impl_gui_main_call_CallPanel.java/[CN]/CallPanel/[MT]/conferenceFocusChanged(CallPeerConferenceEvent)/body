{
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      if (!isLastConference) {
        isLastConference=isConference();
        if (isLastConference) {
          removeOneToOneSpecificComponents();
          remove(callPanel);
          updateCurrentCallPanel(new ConferenceCallPanel(CallPanel.this,call));
          add(callPanel,BorderLayout.CENTER);
        }
      }
      refreshContainer();
    }
  }
);
}
