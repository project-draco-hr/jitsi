{
  if (desktopSharingButton != null && desktopSharingButton.isSelected())   desktopSharingButton.doClick();
  if (fullScreenButton != null && fullScreenButton.isSelected())   fullScreenButton.doClick();
  if (videoButton != null)   settingsPanel.remove(videoButton);
  if (showHideVideoButton != null)   settingsPanel.remove(showHideVideoButton);
  if (resizeVideoButton != null)   settingsPanel.remove(resizeVideoButton);
  if (desktopSharingButton != null) {
    settingsPanel.remove(desktopSharingButton);
    settingsPanel.remove(transferCallButton);
    settingsPanel.remove(fullScreenButton);
  }
}
