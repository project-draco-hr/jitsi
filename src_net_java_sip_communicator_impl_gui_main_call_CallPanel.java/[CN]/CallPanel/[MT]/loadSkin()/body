{
  if (dialButton != null) {
    dialButton.setBackgroundImage(ImageLoader.getImage(ImageLoader.CALL_SETTING_BUTTON_BG));
    dialButton.setIconImage(ImageLoader.getImage(ImageLoader.DIAL_BUTTON));
  }
  if (conferenceButton != null) {
    conferenceButton.setBackgroundImage(ImageLoader.getImage(ImageLoader.CALL_SETTING_BUTTON_BG));
    conferenceButton.setIconImage(ImageLoader.getImage(ImageLoader.ADD_TO_CALL_BUTTON));
  }
  if (hangupButton != null)   hangupButton.setBackgroundImage(ImageLoader.getImage(ImageLoader.HANGUP_BUTTON_BG));
}
