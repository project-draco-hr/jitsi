{
  if (evt.getSourceCall() == call) {
    CallPeer participant=evt.getSourceCallParticipant();
    CallParticipantPanel participantPanel=getParticipantPanel(participant);
    if (participantPanel != null) {
      CallParticipantState state=participant.getState();
      participantPanel.setState(state.getStateString(),null);
      participantPanel.stopCallTimer();
      if (participantsPanels.size() != 0) {
        Timer timer=new Timer(5000,new RemoveParticipantPanelListener(participant));
        timer.setRepeats(false);
        timer.start();
      }
      this.revalidate();
      this.repaint();
    }
  }
}
