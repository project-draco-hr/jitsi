{
  if (!SwingUtilities.isEventDispatchThread()) {
    SwingUtilities.invokeLater(new Runnable(){
      public void run(){
        enableConferenceInterface(isVideo);
      }
    }
);
    return;
  }
  UIVideoHandler videoHandler=null;
  if (callPanel != null)   videoHandler=((CallRenderer)callPanel).getVideoHandler();
  if (callPanel != null)   remove(callPanel);
  if (isVideo) {
    updateCurrentCallPanel(new VideoConferenceCallPanel(CallPanel.this,call,videoHandler));
  }
 else {
    updateCurrentCallPanel(new ConferenceCallPanel(CallPanel.this,call,videoHandler,false));
  }
  add(callPanel,BorderLayout.CENTER);
  refreshContainer();
}
