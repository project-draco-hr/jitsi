{
  isVideoInterfaceEnabled=enable;
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      if (enable) {
        remove(callPanel);
        updateCurrentCallPanel(new VideoConferenceCallPanel(CallPanel.this,call));
        add(callPanel,BorderLayout.CENTER);
      }
 else {
        remove(callPanel);
        updateCurrentCallPanel(new ConferenceCallPanel(CallPanel.this,call));
        add(callPanel,BorderLayout.CENTER);
      }
      refreshContainer();
    }
  }
);
}
