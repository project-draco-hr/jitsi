{
  Collection<Call> calls=new ArrayList<Call>(CallManager.getActiveCalls());
  java.util.List<CallGroup> groups=new java.util.ArrayList<CallGroup>();
  int cpt=0;
  if (calls.size() == 1) {
    mergeButton.setVisible(false);
    return;
  }
  for (  Call c : calls) {
    CallGroup group=c.getCallGroup();
    if (group == null)     cpt++;
 else {
      if (groups.size() == 0) {
        cpt++;
        groups.add(group);
      }
 else {
        for (        CallGroup g : groups) {
          if (group == g)           continue;
 else {
            cpt++;
            groups.add(group);
          }
        }
      }
    }
  }
  if (cpt > 1)   mergeButton.setVisible(true);
}
