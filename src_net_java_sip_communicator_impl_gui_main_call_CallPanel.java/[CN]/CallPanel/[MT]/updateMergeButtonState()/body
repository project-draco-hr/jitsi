{
  Collection<Call> calls=new ArrayList<Call>(CallManager.getInProgressCalls());
  if (calls.size() == 1) {
    mergeButton.setVisible(false);
    return;
  }
  java.util.List<CallConference> conferences=new ArrayList<CallConference>();
  int cpt=0;
  for (  Call call : calls) {
    CallConference conference=call.getConference();
    if (conference == null)     cpt++;
 else     if (!conferences.contains(conference)) {
      conferences.add(conference);
      cpt++;
    }
 else     continue;
    if (cpt > 1)     break;
  }
  if (cpt > 1)   mergeButton.setVisible(true);
}
