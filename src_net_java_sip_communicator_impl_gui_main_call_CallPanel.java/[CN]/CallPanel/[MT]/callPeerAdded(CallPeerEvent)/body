{
  if (evt.getSourceCall() != call)   return;
  final CallPeer callPeer=evt.getSourceCallPeer();
  callPeer.addCallPeerConferenceListener(this);
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      if (isLastConference) {
        if (CallManager.isVideoStreaming(call)) {
          if (!(callPanel instanceof VideoConferenceCallPanel)) {
            enableConferenceInterface(true);
          }
 else           ((VideoConferenceCallPanel)callPanel).addCallPeerPanel(callPeer);
        }
 else {
          if (callPanel instanceof VideoConferenceCallPanel) {
            enableConferenceInterface(false);
          }
 else           ((ConferenceCallPanel)callPanel).addCallPeerPanel(callPeer);
        }
      }
 else {
        isLastConference=isConference();
        if (isLastConference) {
          enableConferenceInterface(CallManager.isVideoStreaming(call));
        }
 else {
          CallPeer onlyCallPeer=null;
          if (call.getCallPeers().hasNext())           onlyCallPeer=call.getCallPeers().next();
          if (onlyCallPeer != null)           ((OneToOneCallPanel)callPanel).addCallPeerPanel(onlyCallPeer);
        }
      }
      refreshContainer();
    }
  }
);
}
