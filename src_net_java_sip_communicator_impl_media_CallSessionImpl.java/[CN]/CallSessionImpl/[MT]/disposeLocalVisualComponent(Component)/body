{
  if (component == null)   throw new IllegalArgumentException("component");
  LocalVisualComponentData data=localVisualComponents.get(component);
  if (data != null) {
    Player player=data.player;
    player.stop();
    player.deallocate();
    player.close();
    localVisualComponents.remove(component);
    VideoListener listener=data.listener;
    if (listener != null) {
      VideoEvent videoEvent=new VideoEvent(this,VideoEvent.VIDEO_REMOVED,component,VideoEvent.LOCAL);
      listener.videoRemoved(videoEvent);
    }
  }
}
