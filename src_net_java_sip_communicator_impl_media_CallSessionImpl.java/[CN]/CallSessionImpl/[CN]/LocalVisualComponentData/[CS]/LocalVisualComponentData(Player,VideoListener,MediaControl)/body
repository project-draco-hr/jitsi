{
  this.player=player;
  this.listener=listener;
  this.mediaControl=mediaControl;
  this.mediaControlListener=new PropertyChangeListener(){
    private final Component component=LocalVisualComponentData.this.player.getVisualComponent();
    public void propertyChange(    PropertyChangeEvent event){
      if (MediaControl.VIDEO_DATA_SOURCE.equals(event.getPropertyName()))       disposeLocalVisualComponent(component);
    }
  }
;
  this.mediaControl.addPropertyChangeListener(this.mediaControlListener);
}
