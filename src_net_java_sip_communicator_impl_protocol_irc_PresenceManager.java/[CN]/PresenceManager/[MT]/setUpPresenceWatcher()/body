{
  final List<SortedSet<String>> queryList=Collections.synchronizedList(new LinkedList<SortedSet<String>>());
  final Timer presenceWatcher=new Timer();
  irc.addListener(new PresenceReplyListener(presenceWatcher,queryList));
  presenceWatcher.schedule(new PresenceWatcherTask(this.nickWatchList,queryList,this.irc),PRESENCE_WATCHER_PERIOD,PRESENCE_WATCHER_PERIOD);
  LOGGER.trace("Presence watcher set up.");
}
