{
  if (awayMessage != null) {
    this.submittedMessage=verifyMessage(awayMessage);
  }
  if (isAway && (!this.away || awayMessage != null)) {
synchronized (this.irc) {
      this.irc.rawMessage("AWAY :" + this.submittedMessage);
    }
  }
 else   if (isAway != this.away) {
synchronized (this.irc) {
      this.irc.rawMessage("AWAY");
    }
  }
}
