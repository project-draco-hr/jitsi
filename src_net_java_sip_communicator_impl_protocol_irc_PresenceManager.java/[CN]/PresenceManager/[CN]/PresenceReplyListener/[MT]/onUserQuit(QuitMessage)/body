{
  final String user=msg.getSource().getNick();
  if (user == null) {
    return;
  }
  if (user.equals(PresenceManager.this.connectionState.getNickname())) {
    LOGGER.debug("Local user's QUIT message received: removing " + "PresenceReplyListener.");
    PresenceManager.this.irc.deleteListener(this);
    this.timer.cancel();
    updateAll(IrcStatusEnum.OFFLINE);
  }
 else {
    update(user,IrcStatusEnum.OFFLINE);
  }
}
