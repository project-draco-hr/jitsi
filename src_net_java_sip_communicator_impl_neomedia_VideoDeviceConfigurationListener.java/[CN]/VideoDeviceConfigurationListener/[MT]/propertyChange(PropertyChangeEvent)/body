{
  String popUpEvent=null;
  String title=null;
  CaptureDeviceInfo device=null;
  ResourceManagementService resources=NeomediaActivator.getResources();
  if (DeviceConfiguration.VIDEO_CAPTURE_DEVICE.equals(event.getPropertyName())) {
    if (event.getNewValue() != null) {
      popUpEvent=NeomediaActivator.NEW_SELECTED_DEVICE;
      title=resources.getI18NString("impl.media.configform" + ".VIDEO_DEVICE_SELECTED");
      device=(CaptureDeviceInfo)event.getNewValue();
    }
  }
  String body=null;
  if (device != null) {
    body=device.getName();
  }
  this.showPopUpNotification(title,body,popUpEvent);
}
