{
  super.paintComponent(g);
  g=g.create();
  try {
    AntialiasingManager.activateAntialiasing(g);
    SelectedObject selected=(SelectedObject)this.getSelected();
    int stringWidth=SwingUtilities.computeStringWidth(this.getFontMetrics(this.getFont()),selected.getText());
    g.drawImage(arrowImage,stringWidth + 2 * IMAGE_INDENT + 2,(this.getHeight() - arrowImage.getHeight(null)) / 2 + 3,null);
  }
  finally {
    g.dispose();
  }
}
