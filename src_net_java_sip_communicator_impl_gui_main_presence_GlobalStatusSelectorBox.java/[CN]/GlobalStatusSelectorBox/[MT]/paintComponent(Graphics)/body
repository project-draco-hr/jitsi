{
  super.paintComponent(g);
  if (textWidth != 0) {
    g=g.create();
    try {
      AntialiasingManager.activateAntialiasing(g);
      g.drawImage(arrowImage,textWidth + 2 * IMAGE_INDENT + 2,(this.getHeight() - arrowImage.getHeight(null)) / 2 + 3,null);
    }
  finally {
      g.dispose();
    }
  }
}
