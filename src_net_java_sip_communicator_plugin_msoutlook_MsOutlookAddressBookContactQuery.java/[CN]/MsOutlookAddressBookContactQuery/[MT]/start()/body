{
  if (thread == null) {
    thread=new Thread(){
      @Override public void run(){
        try {
          foreachMailUser(query,new MsOutlookAddressBookCallback(){
            public boolean callback(            long iUnknown){
              return onMailUser(iUnknown);
            }
          }
);
        }
  finally {
synchronized (MsOutlookAddressBookContactQuery.this) {
            if (thread == Thread.currentThread()) {
              getContactSource().stopped(MsOutlookAddressBookContactQuery.this);
            }
          }
        }
      }
    }
;
    thread.start();
  }
 else   throw new IllegalStateException("thread");
}
