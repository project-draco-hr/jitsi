{
  boolean persistent=false;
  String roomName=multiUserChat.getRoom();
  try {
    RoomInfo info=MultiUserChat.getRoomInfo(provider.getConnection(),roomName);
    if (info != null)     persistent=info.isPersistent();
  }
 catch (  Exception ex) {
    logger.warn("could not get persistent state for room :" + roomName + "\n",ex);
  }
  return persistent;
}
