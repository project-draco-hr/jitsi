{
  MetaContact metaContact=mainFrame.getContactList().findMetaContactByContact(contact);
  Hashtable contactChats=contactList.getTabbedChatWindow().getContactChatsTable();
  if (contactChats.get(metaContact.getMetaUID()) != null) {
    return (ExportedDialog)contactChats.get(metaContact.getMetaUID());
  }
 else {
    return contactList.getTabbedChatWindow().createChat(metaContact,contact.getPresenceStatus(),contact);
  }
}
