{
  MetaContact metaContact=mainFrame.getContactList().findMetaContactByContact(contact);
  if (contactList.isChatOpenedForContact(metaContact)) {
    return (ApplicationWindow)contactList.getContactChat(metaContact);
  }
 else {
    return contactList.getChatWindow(metaContact).createChat(metaContact,contact.getPresenceStatus(),contact);
  }
}
