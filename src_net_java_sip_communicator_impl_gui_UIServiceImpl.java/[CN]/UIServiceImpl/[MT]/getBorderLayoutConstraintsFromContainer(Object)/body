{
  Object layoutConstraint=null;
  if (containerConstraints == null)   return null;
  if (containerConstraints.equals(Container.START))   layoutConstraint=BorderLayout.LINE_START;
 else   if (containerConstraints.equals(Container.END))   layoutConstraint=BorderLayout.LINE_END;
 else   if (containerConstraints.equals(Container.TOP))   layoutConstraint=BorderLayout.NORTH;
 else   if (containerConstraints.equals(Container.BOTTOM))   layoutConstraint=BorderLayout.SOUTH;
 else   if (containerConstraints.equals(Container.LEFT))   layoutConstraint=BorderLayout.WEST;
 else   if (containerConstraints.equals(Container.RIGHT))   layoutConstraint=BorderLayout.EAST;
  return layoutConstraint;
}
