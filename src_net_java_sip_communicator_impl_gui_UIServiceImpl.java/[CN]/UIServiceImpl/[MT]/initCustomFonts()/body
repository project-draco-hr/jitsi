{
  JComponent layeredPane=mainFrame.getLayeredPane();
  String fontName=GuiActivator.getResources().getSettingsString("service.gui.FONT_NAME");
  String titleFontSize=GuiActivator.getResources().getSettingsString("service.gui.FONT_SIZE");
  Font font=new Font(fontName,Font.BOLD,new Integer(titleFontSize).intValue());
  for (int i=0; i < layeredPane.getComponentCount(); i++) {
    layeredPane.getComponent(i).setFont(font);
  }
}
