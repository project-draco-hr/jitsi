{
  if (!supportedContainers.contains(containerID))   throw new IllegalArgumentException("The constraint that you specified is not" + " supported by this UIService implementation.");
 else   if (!(component instanceof Component)) {
    throw new ClassCastException("The specified plugin is not a valid swing or awt component.");
  }
 else {
    if (registeredPlugins.containsKey(containerID)) {
      ((Vector)registeredPlugins.get(containerID)).add(component);
    }
 else {
      Vector plugins=new Vector();
      plugins.add(component);
      registeredPlugins.put(containerID,plugins);
    }
    this.firePluginEvent(component,containerID,PluginComponentEvent.PLUGIN_COMPONENT_ADDED);
  }
}
