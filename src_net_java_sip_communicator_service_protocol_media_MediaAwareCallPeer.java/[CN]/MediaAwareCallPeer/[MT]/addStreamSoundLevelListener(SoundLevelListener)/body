{
synchronized (streamAudioLevelListenersSyncRoot) {
    if ((streamAudioLevelListeners == null) || streamAudioLevelListeners.isEmpty()) {
      getMediaHandler().setStreamAudioLevelListener(this);
    }
    streamAudioLevelListeners=(streamAudioLevelListeners == null) ? new ArrayList<SoundLevelListener>() : new ArrayList<SoundLevelListener>(streamAudioLevelListeners);
