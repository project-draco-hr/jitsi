{
  if (switchboard != null) {
    switchboard.close();
    switchboard=null;
  }
  Iterator<Contact> participantsIter=participants.values().iterator();
  while (participantsIter.hasNext()) {
    Contact participant=participantsIter.next();
    fireParticipantPresenceEvent(participant,AdHocChatRoomParticipantPresenceChangeEvent.CONTACT_LEFT,"Local user has left the chat room.");
  }
  participants.clear();
}
