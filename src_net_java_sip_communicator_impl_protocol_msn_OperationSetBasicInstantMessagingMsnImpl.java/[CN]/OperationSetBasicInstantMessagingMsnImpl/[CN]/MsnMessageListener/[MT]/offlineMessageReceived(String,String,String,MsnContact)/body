{
  Message newMessage=createMessage(body,contentType,encoding,null);
  Contact sourceContact=opSetPersPresence.findContactByID(contact.getEmail().getEmailAddress());
  if (sourceContact == null) {
    if (logger.isDebugEnabled())     logger.debug("received a message from an unknown contact: " + contact);
    sourceContact=opSetPersPresence.createVolatileContact(contact);
  }
  MessageReceivedEvent msgReceivedEvt=new MessageReceivedEvent(newMessage,sourceContact,System.currentTimeMillis());
  fireMessageEvent(msgReceivedEvt);
}
