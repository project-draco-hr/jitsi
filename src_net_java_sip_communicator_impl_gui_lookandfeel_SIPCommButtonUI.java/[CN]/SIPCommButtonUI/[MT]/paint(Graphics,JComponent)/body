{
  AbstractButton button=(AbstractButton)c;
  ButtonModel model=button.getModel();
  Image leftImg;
  Image middleImg;
  Image rightImg;
  if (model.isRollover()) {
    leftImg=buttonRolloverLeft;
    middleImg=buttonRolloverMiddle;
    rightImg=buttonRolloverRight;
  }
 else {
    leftImg=buttonLeft;
    middleImg=buttonMiddle;
    rightImg=buttonRight;
  }
  int indentWidth=leftImg.getWidth(null);
  g.drawImage(leftImg,0,0,indentWidth,c.getHeight(),null);
  g.drawImage(middleImg,indentWidth,0,c.getWidth() - 2 * indentWidth,c.getHeight(),null);
  g.drawImage(rightImg,c.getWidth() - indentWidth,0,indentWidth,c.getHeight(),null);
  super.paint(g,c);
}
