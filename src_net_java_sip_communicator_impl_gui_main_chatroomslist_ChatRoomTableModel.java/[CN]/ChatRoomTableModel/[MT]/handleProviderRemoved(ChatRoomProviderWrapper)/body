{
  OperationSetPresence presence=chatProviderWrapper.getProtocolProvider().getOperationSet(OperationSetPresence.class);
  if (presence != null)   presence.removeProviderPresenceStatusListener(this);
  for (int i=0; i < chatProviderWrapper.countChatRooms(); i++)   removeChatRoom(chatProviderWrapper.getChatRoom(i));
}
