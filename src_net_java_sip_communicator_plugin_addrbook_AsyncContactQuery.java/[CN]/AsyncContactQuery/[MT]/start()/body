{
  if (thread == null) {
    thread=new Thread(){
      @Override public void run(){
        try {
          AsyncContactQuery.this.run();
        }
  finally {
synchronized (AsyncContactQuery.this) {
            if (thread == Thread.currentThread())             stopped();
          }
        }
      }
    }
;
    thread.setDaemon(true);
    thread.start();
  }
 else   throw new IllegalStateException("thread");
}
