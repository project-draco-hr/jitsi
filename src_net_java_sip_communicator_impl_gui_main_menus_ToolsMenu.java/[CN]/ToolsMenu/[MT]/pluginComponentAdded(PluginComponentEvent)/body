{
  final PluginComponent c=event.getPluginComponent();
  if (c.getContainer().equals(Container.CONTAINER_TOOLS_MENU)) {
    SwingUtilities.invokeLater(new Runnable(){
      public void run(){
        add((Component)c.getComponent());
      }
    }
);
    this.revalidate();
    this.repaint();
  }
}
