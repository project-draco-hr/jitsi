{
  BundleContext bundleContext=getBundleContext();
  ServiceReference mfcServiceRef=bundleContext.getServiceReference(MetaContactListService.class.getName());
  MetaContactListService mcl=(MetaContactListService)bundleContext.getService(mfcServiceRef);
  ServiceReference serRef=getProviderForAccount(accountID);
  ProtocolProviderService protocolProvider=(ProtocolProviderService)DictActivator.getBundleContext().getService(serRef);
  String groupName=DictActivator.getResources().getI18NString("dict.dictionaries");
  String contactName=DictActivator.getResources().getI18NString("dict.anyDictionaryFrom",new String[]{accountID.getUserID()});
  MetaContactGroup group=mcl.getRoot().getMetaContactSubgroup(groupName);
  String dict_uin="*";
  mcl.createMetaContact(protocolProvider,group,dict_uin);
  mcl.renameMetaContact(group.getMetaContact(protocolProvider,dict_uin),contactName);
}
