{
  CallPeerMediaHandler mediaHandler=getMediaHandler();
  if (mediaHandler.isLocalVideoTransmissionEnabled() == allowed)   return;
  mediaHandler.setLocalVideoTransmissionEnabled(allowed);
  String sdpOffer=null;
  try {
    sdpOffer=mediaHandler.createOffer();
  }
 catch (  Exception ex) {
    throw new OperationFailedException("Failed to create re-invite offer for peer " + this,OperationFailedException.INTERNAL_ERROR,ex);
  }
  sendReInvite(sdpOffer);
}
