{
  if (!evt.getEventType().equals(CallChangeEvent.CALL_FOCUS_CHANGE))   return;
  if (!evt.getSourceCall().equals(call))   return;
  if (call.isConferenceFocus()) {
    if (!isConferenceFocus()) {
synchronized (streamSoundLevelListeners) {
        for (        SoundLevelListenerWrapperForStream sli : streamSoundLevelListeners.values())         getMediaHandler().addStreamSoundLevelListener(sli);
      }
    }
  }
 else {
synchronized (streamSoundLevelListeners) {
      for (      SoundLevelListenerWrapperForStream sli : streamSoundLevelListeners.values())       getMediaHandler().removeStreamSoundLevelListener(sli);
    }
  }
}
