{
  this.callStatusLabel.setText(state);
  if (peerState == CallPeerState.CONNECTED) {
    initSecurityStatusLabel();
    if (Boolean.parseBoolean(GuiActivator.getResources().getSettingsString("impl.gui.PARANOIA_UI"))) {
      SrtpControl srtpControl=null;
      if (callPeer instanceof MediaAwareCallPeer)       srtpControl=((MediaAwareCallPeer<?,?,?>)callPeer).getMediaHandler().getStream(MediaType.AUDIO).getSrtpControl();
      securityPanel=new ParanoiaTimerSecurityPanel<SrtpControl>(srtpControl);
      setSecurityPanelVisible(true);
    }
  }
}
