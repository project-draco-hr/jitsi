{
  if (localLevelLabel != null)   localLevelLabel.setIcon(new ImageIcon(ImageLoader.getImage(ImageLoader.MICROPHONE)));
  if (remoteLevelLabel != null)   remoteLevelLabel.setIcon(new ImageIcon(ImageLoader.getImage(ImageLoader.HEADPHONE)));
  if (muteStatusLabel.getIcon() != null)   muteStatusLabel.setIcon(new ImageIcon(ImageLoader.getImage(ImageLoader.MUTE_STATUS_ICON)));
  if (holdStatusLabel.getIcon() != null)   holdStatusLabel.setIcon(new ImageIcon(ImageLoader.getImage(ImageLoader.HOLD_STATUS_ICON)));
  securityStatusLabel.setIcon(new ImageIcon(ImageLoader.getImage(securityImageID)));
  if (this.peerImage == null) {
synchronized (videoContainers) {
      for (      JLabel photoLabel : photoLabels)       photoLabel.setIcon(new ImageIcon(ImageLoader.getImage(ImageLoader.DEFAULT_USER_PHOTO)));
    }
  }
}
