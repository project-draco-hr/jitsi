{
  GraphicsConfiguration graphicsConfig=getGraphicsConfiguration();
  if (graphicsConfig != null)   graphicsConfig.getDevice().setFullScreenWindow(null);
  if (fullScreenWindow != null) {
    if (fullScreenWindow.isVisible())     fullScreenWindow.setVisible(false);
    fullScreenWindow.dispose();
    if (this.fullScreenWindow == fullScreenWindow)     this.fullScreenWindow=null;
  }
}
