{
  Point p=event.getPoint();
  if (inDrag) {
    Component c=(Component)event.getSource();
    int newX=c.getX() + p.x - previousX;
    int newY=c.getY() + p.y - previousY;
    if (remoteVideo != null && newX > remoteVideo.getX() && newX + c.getWidth() < remoteVideo.getX() + remoteVideo.getWidth() && newY > remoteVideo.getY() && newY + c.getHeight() < remoteVideo.getY() + remoteVideo.getHeight()) {
      c.setLocation(newX,newY);
    }
  }
}
