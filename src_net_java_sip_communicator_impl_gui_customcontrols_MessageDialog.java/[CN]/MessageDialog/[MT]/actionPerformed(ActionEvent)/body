{
  JButton button=(JButton)e.getSource();
  if (button.equals(okButton)) {
    if (doNotAskAgain.isSelected()) {
      this.returnCode=OK_DONT_ASK_CODE;
    }
 else {
      this.returnCode=OK_RETURN_CODE;
    }
  }
 else {
    this.returnCode=CANCEL_RETURN_CODE;
  }
synchronized (lock) {
    lock.notify();
  }
  this.dispose();
}
