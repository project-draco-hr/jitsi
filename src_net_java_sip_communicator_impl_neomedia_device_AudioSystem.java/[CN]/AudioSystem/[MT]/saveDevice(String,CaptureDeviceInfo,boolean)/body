{
  ConfigurationService cfg=NeomediaActivator.getConfigurationService();
  if (cfg != null) {
    property=DeviceConfiguration.PROP_AUDIO_SYSTEM + "." + getLocatorProtocol()+ "."+ property;
    if (device == null) {
      if (isNull)       cfg.setProperty(property,NoneAudioSystem.LOCATOR_PROTOCOL);
 else       cfg.removeProperty(property);
    }
 else     cfg.setProperty(property,device.getName());
  }
}
