{
  ScreenDevice[] screens=getAvailableScreenDevices();
  int width=0;
  int height=0;
  ScreenDevice best=null;
  for (  ScreenDevice screen : screens) {
    java.awt.Dimension res=screen.getSize();
    if ((res != null) && ((width < res.width) || (height < res.height))) {
      width=res.width;
      height=res.height;
      best=screen;
    }
  }
  return best;
}
