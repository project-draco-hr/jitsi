{
  super.paintComponent(g);
  if (isColorBgEnabled) {
    g=g.create();
    try {
      internalPaintComponent(g);
    }
  finally {
      g.dispose();
    }
  }
  if (isImageBgEnabled) {
    if (bgImage != null && texture != null) {
      Graphics2D g2=(Graphics2D)g;
      g2.setPaint(texture);
      g2.fillRect(0,0,this.getWidth(),bgImage.getHeight());
    }
  }
}
