{
  if ((from < 0) || (from > original.length))   throw new ArrayIndexOutOfBoundsException(from);
  if (from > to)   throw new IllegalArgumentException("to");
  int length=to - from;
  int[] copy=new int[length];
  for (int c=0, o=from; c < length; c++, o++)   copy[c]=(o < original.length) ? original[o] : 0;
  return copy;
}
