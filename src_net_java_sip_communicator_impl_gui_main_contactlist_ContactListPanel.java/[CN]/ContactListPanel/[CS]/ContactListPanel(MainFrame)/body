{
  this.mainFrame=mainFrame;
  this.chatWindowManager=mainFrame.getChatWindowManager();
  this.treePanel.setOpaque(false);
  this.setViewport(new ScrollPaneBackground());
  this.getViewport().setView(treePanel);
