{
  String trustStore=(String)config.getProperty(PNAME_TRUSTSTORE);
  if (trustStore != null) {
    System.setProperty("javax.net.ssl.trustStoreType",trustStore);
    String password=(String)credService.loadPassword(PNAME_TRUSTSTORE_PASSWORD);
    if (password != null) {
      System.setProperty("javax.net.ssl.trustStorePassword",password);
    }
  }
 else {
    System.getProperties().remove("javax.net.ssl.trustStoreType");
    System.getProperties().remove("javax.net.ssl.trustStorePassword");
  }
}
