{
  closeMenuItem=new JMenuItem(GuiActivator.getResources().getI18NString("service.gui.QUIT"));
  if (addSeparator)   this.addSeparator();
  if (!isChatMenu) {
    this.add(closeMenuItem);
    closeMenuItem.setName("close");
    closeMenuItem.addActionListener(this);
    closeMenuItem.setMnemonic(GuiActivator.getResources().getI18nMnemonic("service.gui.QUIT"));
  }
}
