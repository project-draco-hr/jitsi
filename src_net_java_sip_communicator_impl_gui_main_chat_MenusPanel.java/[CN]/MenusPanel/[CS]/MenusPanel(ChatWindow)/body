{
  super();
  this.parentWindow=parentWindow;
  boolean isToolBarExtended=new Boolean(GuiActivator.getResources().getSettingsString("isToolBarExteneded")).booleanValue();
  if (isToolBarExtended)   mainToolBar=new ExtendedMainToolBar(this.parentWindow);
 else   mainToolBar=new MainToolBar(this.parentWindow);
  menuBar=new MessageWindowMenuBar(this.parentWindow);
  this.setLayout(new BorderLayout(5,5));
  parentWindow.setJMenuBar(menuBar);
  this.add(mainToolBar,BorderLayout.CENTER);
}
