{
  logger.debug("Conference Logoff Received: " + ev.toString());
  try {
    AdHocChatRoomYahooImpl chatRoom=(AdHocChatRoomYahooImpl)findRoom(ev.getRoom().getName());
    if (chatRoom != null) {
      Contact participant=chatRoom.findParticipantForAddress(ev.getFrom());
      chatRoom.removeChatRoomParticipant(participant);
    }
  }
 catch (  Exception e) {
    logger.debug("Failed to remove a user from the chat room. " + e);
  }
}
