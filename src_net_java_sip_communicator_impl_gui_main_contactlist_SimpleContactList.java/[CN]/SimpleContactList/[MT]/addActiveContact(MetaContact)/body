{
synchronized (activeContacts) {
    if (activeContacts.size() == 0) {
      SystrayService stray=GuiActivator.getSystrayService();
      if (stray != null)       stray.setSystrayIcon(SystrayService.ENVELOPE_IMG_TYPE);
    }
    if (!activeContacts.contains(metaContact))     activeContacts.add(metaContact);
  }
  this.refreshContact(metaContact);
}
