{
  customActionButtons=new LinkedHashMap<ContactAction<SourceContact>,SIPCommButton>();
  for (  CustomContactActionsService<SourceContact> ccas : getContactActionsServices()) {
    Iterator<ContactAction<SourceContact>> actionIterator=ccas.getCustomContactActions();
    while (actionIterator != null && actionIterator.hasNext()) {
      final ContactAction<SourceContact> ca=actionIterator.next();
      SIPCommButton actionButton=customActionButtons.get(ca);
      if (actionButton == null) {
        actionButton=new SIPCommButton(new ImageIcon(ca.getIcon()).getImage(),new ImageIcon(ca.getPressedIcon()).getImage(),null);
        actionButton.addActionListener(new ActionListener(){
          public void actionPerformed(          ActionEvent event){
            try {
              JButton button=(JButton)event.getSource();
              Point location=new Point(button.getX(),button.getY() + button.getHeight());
              SwingUtilities.convertPointToScreen(location,contactListTree);
              TreePath selectionPath=contactListTree.getSelectionPath();
              if (selectionPath != null)               location.y=location.y + contactListTree.getPathBounds(selectionPath).y;
              ca.actionPerformed(customActionContact,location.x,location.y);
            }
 catch (            OperationFailedException e) {
              new ErrorDialog(null,GuiActivator.getResources().getI18NString("service.gui.ERROR"),e.getMessage());
            }
          }
        }
);
        customActionButtons.put(ca,actionButton);
      }
    }
  }
}
