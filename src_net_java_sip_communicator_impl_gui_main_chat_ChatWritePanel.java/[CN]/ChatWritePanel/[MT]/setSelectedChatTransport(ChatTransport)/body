{
  if (!SwingUtilities.isEventDispatchThread()) {
    SwingUtilities.invokeLater(new Runnable(){
      public void run(){
        setSelectedChatTransport(chatTransport);
      }
    }
);
    return;
  }
  if (transportSelectorBox != null) {
    transportSelectorBox.setSelected(chatTransport);
  }
}
